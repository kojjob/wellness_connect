<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Analytics Dashboard</h1>
      <p class="mt-2 text-sm text-gray-600">Track your business performance and metrics</p>
    </div>

    <!-- Key Metrics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Revenue Card -->
      <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-teal-600">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Revenue</p>
            <p class="text-3xl font-bold text-gray-900 mt-2">
              $<%= number_with_precision(@total_revenue, precision: 2, delimiter: ',') %>
            </p>
          </div>
          <div class="bg-teal-100 rounded-full p-3">
            <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Average Session Price Card -->
      <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-600">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Avg Session Price</p>
            <p class="text-3xl font-bold text-gray-900 mt-2">
              $<%= number_with_precision(@average_session_price, precision: 2, delimiter: ',') %>
            </p>
          </div>
          <div class="bg-blue-100 rounded-full p-3">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Total Appointments Card -->
      <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-purple-600">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Sessions</p>
            <p class="text-3xl font-bold text-gray-900 mt-2"><%= @total_appointments %></p>
          </div>
          <div class="bg-purple-100 rounded-full p-3">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Unique Clients Card -->
      <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-600">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Unique Clients</p>
            <p class="text-3xl font-bold text-gray-900 mt-2"><%= @unique_patients_count %></p>
          </div>
          <div class="bg-green-100 rounded-full p-3">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Revenue by Month Chart -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Revenue by Month (Last 6 Months)</h3>
        <div class="h-64">
          <canvas
            data-controller="analytics-chart"
            data-analytics-chart-type-value="bar"
            data-analytics-chart-data-value="<%= @revenue_by_month.to_json %>"
            data-analytics-chart-label-value="Revenue ($)"></canvas>
        </div>
      </div>

      <!-- Revenue by Week Chart -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Revenue by Week (Last 8 Weeks)</h3>
        <div class="h-64">
          <canvas
            data-controller="analytics-chart"
            data-analytics-chart-type-value="line"
            data-analytics-chart-data-value="<%= @revenue_by_week.to_json %>"
            data-analytics-chart-label-value="Revenue ($)"></canvas>
        </div>
      </div>
    </div>

    <!-- Appointment Status and Top Services -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Appointment Status Breakdown -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Session Status Breakdown</h3>
        <div class="space-y-4">
          <% @appointment_status_breakdown.each do |status, count| %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= case status.to_s
                  when 'completed' then 'bg-green-100 text-green-800'
                  when 'scheduled' then 'bg-blue-100 text-blue-800'
                  when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-100 text-red-800'
                  when 'no_show' then 'bg-gray-100 text-gray-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
                  <%= status.to_s.humanize %>
                </span>
              </div>
              <span class="text-2xl font-bold text-gray-900"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Top Services by Revenue -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Top Services by Revenue</h3>
        <div class="space-y-4">
          <% if @top_services.any? %>
            <% @top_services.each_with_index do |service, index| %>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <span class="flex-shrink-0 w-8 h-8 flex items-center justify-center rounded-full bg-teal-100 text-teal-800 font-bold text-sm">
                    <%= index + 1 %>
                  </span>
                  <span class="text-gray-900 font-medium"><%= service[:service_name] %></span>
                </div>
                <span class="text-xl font-bold text-teal-600">
                  $<%= number_with_precision(service[:revenue], precision: 2, delimiter: ',') %>
                </span>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 text-center py-8">No service data available yet.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Date Range Filter (placeholder for future Stimulus controller) -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Custom Date Range Analysis</h3>
      <%= form_with url: provider_analytics_path, method: :get, data: { turbo_frame: "filtered-results" }, class: "flex flex-wrap gap-4 items-end" do |form| %>
        <div>
          <%= form.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :start_date, value: params[:start_date], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500" %>
        </div>
        <div>
          <%= form.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :end_date, value: params[:end_date], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500" %>
        </div>
        <div>
          <%= form.submit "Apply Filter", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500" %>
        </div>
        <% if params[:start_date].present? || params[:end_date].present? %>
          <div>
            <%= link_to "Clear Filter", provider_analytics_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500" %>
          </div>
        <% end %>
      <% end %>

      <!-- Filtered Results (shown when date range is applied) -->
      <% if params[:start_date].present? || params[:end_date].present? %>
        <%= turbo_frame_tag "filtered-results" do %>
          <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-teal-50 rounded-lg p-4 border border-teal-200">
              <p class="text-sm font-medium text-teal-800">Filtered Revenue</p>
              <p class="text-2xl font-bold text-teal-900 mt-2">
                $<%= number_with_precision(@filtered_revenue, precision: 2, delimiter: ',') %>
              </p>
            </div>
            <div class="bg-purple-50 rounded-lg p-4 border border-purple-200">
              <p class="text-sm font-medium text-purple-800">Filtered Sessions</p>
              <p class="text-2xl font-bold text-purple-900 mt-2"><%= @filtered_appointments %></p>
            </div>
            <div class="bg-green-50 rounded-lg p-4 border border-green-200">
              <p class="text-sm font-medium text-green-800">Filtered Clients</p>
              <p class="text-2xl font-bold text-green-900 mt-2"><%= @filtered_patients %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
