<% content_for :admin_page_title, "Provider Management" %>

<%# Hero Section %>
<section class="relative bg-gradient-to-br from-purple-600 via-gray-700 to-purple-800 text-white overflow-hidden pt-6">
  <%# Gradient Overlay %>
  <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-transparent" aria-hidden="true"></div>

  <%# Animated Blobs %>
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute top-10 right-10 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-10 left-10 w-72 h-72 bg-pink-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-purple-600 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%# Breadcrumbs %>
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to admin_root_path, class: "text-gray-300 hover:text-white transition-colors" do %>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
            </svg>
            <span class="sr-only">Dashboard</span>
          <% end %>
        </li>
        <li>
          <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </li>
        <li class="text-gray-400" aria-current="page">Provider Profiles</li>
      </ol>
    </nav>

    <%# Header Content %>
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
      <div class="flex-1">
        <div class="flex items-center gap-4 mb-4">
          <div class="p-3 bg-white/20 backdrop-blur-sm rounded-xl">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-purple-200 bg-clip-text text-transparent mb-2">
              Provider Management
            </h1>
            <p class="text-lg text-gray-300">Manage and monitor all service providers</p>
          </div>
        </div>

        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-300">
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            Total: <%= @provider_profiles.total_count %> providers
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Real-time monitoring
          </div>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
        <%# Create Provider Button %>
        <%= link_to new_admin_provider_profile_path,
          class: "inline-flex items-center bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 border border-white/20" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Create Provider Profile
        <% end %>

        <%# Export Button %>
        <%= link_to "#",
          class: "inline-flex items-center bg-purple-600/80 hover:bg-purple-700 backdrop-blur-sm text-white px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 border border-purple-500/20" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Export CSV
        <% end %>
      </div>
    </div>
  </div>
</section>

<%# Stats Cards %>
<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8 relative z-10">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <%# Total Providers Card (Featured) %>
    <div class="relative bg-gradient-to-br from-purple-600 to-pink-700 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1">
      <%# Decorative Background Pattern %>
      <div class="absolute inset-0 opacity-10" aria-hidden="true">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white rounded-full -mr-16 -mt-16"></div>
        <div class="absolute bottom-0 left-0 w-24 h-24 bg-white rounded-full -ml-12 -mb-12"></div>
      </div>

      <div class="relative p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-white/20 backdrop-blur-sm rounded-xl group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <div class="flex items-center space-x-1">
            <span class="h-2 w-2 bg-purple-400 rounded-full animate-pulse"></span>
            <span class="text-xs font-medium text-white/80">Live</span>
          </div>
        </div>

        <div>
          <p class="text-sm font-medium text-white/80 mb-1">Total Providers</p>
          <p class="text-4xl font-bold text-white mb-2"><%= @provider_profiles.total_count %></p>
          <div class="text-xs text-white/70">
            <span class="h-1.5 w-1.5 bg-purple-400 rounded-full inline-block mr-1"></span>
            Active service providers
          </div>
        </div>
      </div>
    </div>

    <%# Total Services %>
    <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
      <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-emerald-500 to-green-600"></div>
      <div class="p-6">
        <div class="flex items-start justify-between mb-4">
          <div class="p-3 bg-gradient-to-br from-emerald-50 to-green-100 rounded-xl group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-800">
            Services
          </span>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600 mb-1">Total Services</p>
          <p class="text-3xl font-bold text-gray-900 mb-2"><%= @provider_profiles.joins(:services).count %></p>
          <div class="flex items-center text-xs text-gray-500">
            <span class="h-1.5 w-1.5 bg-emerald-500 rounded-full mr-2"></span>
            Available services
          </div>
        </div>
      </div>
    </div>

    <%# Average Rating %>
    <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
      <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-yellow-500 to-orange-600"></div>
      <div class="p-6">
        <div class="flex items-start justify-between mb-4">
          <div class="p-3 bg-gradient-to-br from-yellow-50 to-orange-100 rounded-xl group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          </div>
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
            Quality
          </span>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600 mb-1">Average Rating</p>
          <p class="text-3xl font-bold text-gray-900 mb-2">4.8</p>
          <div class="flex items-center text-xs text-gray-500">
            <span class="h-1.5 w-1.5 bg-yellow-500 rounded-full mr-2"></span>
            Platform quality
          </div>
        </div>
      </div>
    </div>

    <%# Active Specialties %>
    <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
      <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 to-indigo-600"></div>
      <div class="p-6">
        <div class="flex items-start justify-between mb-4">
          <div class="p-3 bg-gradient-to-br from-blue-50 to-indigo-100 rounded-xl group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
          </div>
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800">
            Categories
          </span>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600 mb-1">Specialties</p>
          <p class="text-3xl font-bold text-gray-900 mb-2"><%= @provider_profiles.distinct.count(:specialty) %></p>
          <div class="flex items-center text-xs text-gray-500">
            <span class="h-1.5 w-1.5 bg-blue-500 rounded-full mr-2"></span>
            Service categories
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%# Search and Filters Section %>
<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
  <%= form_with url: admin_provider_profiles_path, method: :get, class: "bg-white rounded-xl shadow-lg p-6" do |f| %>
    <%# Search Bar %>
    <div class="mb-6">
      <label class="block text-sm font-semibold text-gray-700 mb-2">
        <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        Search Providers
      </label>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
        <%= f.text_field :search, value: params[:search],
          placeholder: "Search by name, specialty, credentials, or bio...",
          class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200" %>
      </div>
    </div>

    <%# Filters Grid %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
      <%# Specialty Filter %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Specialty</label>
        <%= f.text_field :specialty, value: params[:specialty],
          placeholder: "Filter by specialty...",
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200" %>
      </div>

      <%# Rating Filter %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Minimum Rating</label>
        <%= f.select :min_rating,
          options_for_select([
            ['Any Rating', ''],
            ['4+ Stars', '4'],
            ['4.5+ Stars', '4.5'],
            ['5 Stars', '5']
          ], params[:min_rating]),
          {},
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200" %>
      </div>

      <%# Services Count Filter %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Services Count</label>
        <%= f.select :services_count,
          options_for_select([
            ['Any Count', ''],
            ['1+ Services', '1'],
            ['3+ Services', '3'],
            ['5+ Services', '5']
          ], params[:services_count]),
          {},
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200" %>
      </div>
    </div>

    <%# Action Buttons %>
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-2">
        <%= f.button "Apply Filters",
          class: "bg-gradient-to-r from-purple-600 to-pink-700 hover:from-purple-700 hover:to-pink-800 text-white px-6 py-2 rounded-lg text-sm font-semibold transition-all duration-200 shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
        <%= link_to "Clear Filters", admin_provider_profiles_path,
          class: "text-gray-700 hover:text-purple-600 hover:bg-purple-50 px-6 py-2 rounded-lg text-sm font-medium transition-all duration-200" %>
      </div>

      <div class="text-sm text-gray-600">
        <% if params[:search].present? || params[:specialty].present? || params[:min_rating].present? || params[:services_count].present? %>
          Showing filtered results
        <% else %>
          Showing all providers
        <% end %>
      </div>
    </div>
  <% end %>
</section>

<%# Provider Profiles Grid Section %>
<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6 mb-12">
  <% if @provider_profiles.any? %>
    <%# Results Header %>
    <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2">
          <h2 class="text-lg font-semibold text-gray-900">All Provider Profiles</h2>
          <p class="text-sm text-gray-700">
            Showing <span class="font-semibold"><%= @provider_profiles.offset_value + 1 %></span> to
            <span class="font-semibold"><%= [@provider_profiles.offset_value + @provider_profiles.limit_value, @provider_profiles.total_count].min %></span> of
            <span class="font-semibold"><%= @provider_profiles.total_count %></span> results
          </p>
        </div>
      </div>
    </div>

    <%# Provider Cards Grid %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @provider_profiles.each do |profile| %>
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
          <%# Profile Header %>
          <div class="relative bg-gradient-to-br from-purple-600 to-pink-700 px-6 py-6">
            <%# Decorative Background %>
            <div class="absolute inset-0 opacity-10" aria-hidden="true">
              <div class="absolute top-0 right-0 w-24 h-24 bg-white rounded-full -mr-12 -mt-12"></div>
              <div class="absolute bottom-0 left-0 w-16 h-16 bg-white rounded-full -ml-8 -mb-8"></div>
            </div>

            <div class="relative flex items-center">
              <div class="flex-shrink-0">
                <div class="h-16 w-16 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center text-white font-bold text-2xl shadow-lg ring-2 ring-white/30">
                  <%= profile.user.first_name.first.upcase %><%= profile.user.last_name.first.upcase %>
                </div>
              </div>
              <div class="ml-4 text-white">
                <h3 class="text-lg font-bold"><%= profile.user.full_name %></h3>
                <p class="text-sm text-purple-100"><%= profile.specialty %></p>
                <p class="text-xs text-purple-200 mt-1"><%= profile.user.email %></p>
              </div>
            </div>
          </div>

          <%# Profile Stats %>
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <div class="grid grid-cols-3 gap-4 text-center">
              <div>
                <p class="text-2xl font-bold text-purple-600"><%= profile.services.count %></p>
                <p class="text-xs text-gray-500 font-medium">Services</p>
              </div>
              <div>
                <p class="text-2xl font-bold text-yellow-600"><%= profile.total_reviews %></p>
                <p class="text-xs text-gray-500 font-medium">Reviews</p>
              </div>
              <div>
                <div class="flex items-center justify-center gap-1">
                  <p class="text-2xl font-bold text-emerald-600"><%= profile.display_rating %></p>
                  <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                </div>
                <p class="text-xs text-gray-500 font-medium">Rating</p>
              </div>
            </div>
          </div>

          <%# Profile Info %>
          <div class="px-6 py-4">
            <div class="space-y-3">
              <div>
                <p class="text-xs font-medium text-gray-500 mb-1">Credentials</p>
                <% if profile.credentials.present? %>
                  <p class="text-sm text-gray-900 font-medium"><%= profile.credentials %></p>
                <% else %>
                  <p class="text-sm text-gray-400 italic">Not specified</p>
                <% end %>
              </div>
              <div>
                <p class="text-xs font-medium text-gray-500 mb-1">Professional Bio</p>
                <% if profile.bio.present? %>
                  <p class="text-sm text-gray-700 leading-relaxed line-clamp-3"><%= profile.bio %></p>
                <% else %>
                  <p class="text-sm text-gray-400 italic">No bio provided</p>
                <% end %>
              </div>
              <div class="pt-2">
                <p class="text-xs text-gray-500">
                  Member since <%= profile.created_at.strftime("%B %Y") %>
                </p>
              </div>
            </div>
          </div>

          <%# Actions %>
          <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <div class="flex items-center justify-between gap-3">
              <%= link_to admin_provider_profile_path(profile),
                class: "flex-1 inline-flex items-center justify-center bg-gradient-to-r from-purple-600 to-pink-700 hover:from-purple-700 hover:to-pink-800 text-white px-4 py-2 rounded-lg text-sm font-semibold transition-all duration-200 shadow-md hover:shadow-lg" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                View Details
              <% end %>

              <%= link_to edit_admin_provider_profile_path(profile),
                class: "inline-flex items-center text-gray-600 hover:text-purple-600 px-3 py-2 rounded-lg text-sm font-medium transition-colors hover:bg-purple-50" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Edit
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%# Pagination %>
    <% if @provider_profiles.total_pages > 1 %>
      <div class="mt-8 bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-center">
          <%= paginate @provider_profiles, theme: 'twitter-bootstrap-4',
            pagination_class: "pagination justify-content-center mb-0",
            nav_class: "d-flex justify-content-center" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <%# Empty State %>
    <div class="bg-white rounded-xl shadow-lg p-12 text-center">
      <div class="max-w-md mx-auto">
        <svg class="mx-auto h-24 w-24 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>

        <h3 class="text-xl font-bold text-gray-900 mb-2">No provider profiles found</h3>

        <% if params[:search].present? || params[:specialty].present? || params[:min_rating].present? || params[:services_count].present? %>
          <p class="text-gray-600 mb-6">
            No providers match your current filters. Try adjusting your search criteria or clearing the filters.
          </p>

          <%= link_to "Clear All Filters", admin_provider_profiles_path,
            class: "inline-flex items-center bg-gradient-to-r from-purple-600 to-pink-700 hover:from-purple-700 hover:to-pink-800 text-white px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
        <% else %>
          <p class="text-gray-600 mb-6">
            No provider profiles have been created yet. Create the first provider profile to get started.
          </p>

          <%= link_to new_admin_provider_profile_path,
            class: "inline-flex items-center bg-gradient-to-r from-purple-600 to-pink-700 hover:from-purple-700 hover:to-pink-800 text-white px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Create Provider Profile
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</section>
