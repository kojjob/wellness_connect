<% content_for :admin_page_title, "Create Provider Profile" %>

<!-- Modern Hero Section -->
<section class="relative bg-gradient-to-br from-purple-600 via-pink-700 to-purple-800 text-white overflow-hidden pt-6">
  <%# Gradient Overlay %>
  <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-transparent"></div>

  <%# Animated Background Blobs %>
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-pink-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-purple-300 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-8">
    <!-- Breadcrumb Navigation -->
    <nav class="flex items-center space-x-2 text-sm mb-6" aria-label="Breadcrumb">
      <%= link_to admin_root_path, class: "text-white/70 hover:text-white transition-colors duration-200" do %>
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
        </svg>
      <% end %>
      <svg class="h-4 w-4 text-white/50" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      <%= link_to "Provider Profiles", admin_provider_profiles_path, class: "text-white/70 hover:text-white transition-colors duration-200" %>
      <svg class="h-4 w-4 text-white/50" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      <span class="text-white font-medium">Create New Profile</span>
    </nav>

    <!-- Hero Content -->
    <div class="flex items-center justify-between">
      <div class="flex-1">
        <div class="flex items-center space-x-3 mb-4">
          <div class="h-12 w-12 rounded-xl bg-white/20 backdrop-blur-sm flex items-center justify-center">
            <svg class="h-7 w-7 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-white">Create Provider Profile</h1>
            <p class="text-lg text-white/90 mt-1">Set up a comprehensive professional profile for a provider</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Main Content -->
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= form_with model: @provider_profile, url: admin_provider_profiles_path, method: :post, local: true, multipart: true, class: "space-y-8" do |f| %>
      <!-- Error Messages -->
      <% if @provider_profile.errors.any? %>
        <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-md">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@provider_profile.errors.count, "error") %> prohibited this provider profile from being saved:
              </h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @provider_profile.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Information Notice -->
      <% if @available_providers.empty? %>
        <div class="mb-6 p-4 bg-yellow-50 border-l-4 border-yellow-400 rounded-md">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-yellow-700">
                <strong>No available providers:</strong> All provider users already have profiles. Please create a new provider user first.
              </p>
            </div>
          </div>
        </div>
      <% else %>
        <div class="mb-6 p-4 bg-indigo-50 border-l-4 border-indigo-400 rounded-md">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-indigo-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-indigo-700">
                Select a provider user and complete their professional profile information.
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Form Fields -->
      <div class="space-y-6">
        <!-- Provider Selection -->
        <div>
          <%= f.label :user_id, "Select Provider User", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :user_id,
                options_for_select(@available_providers.map { |u| ["#{u.full_name} (#{u.email})", u.id] }),
                { prompt: "Choose a provider user..." },
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
                required: true,
                disabled: @available_providers.empty? %>
          <p class="mt-1 text-sm text-gray-500">Select a user with provider role who doesn't have a profile yet</p>
        </div>

        <!-- Specialty -->
        <div>
          <%= f.label :specialty, "Specialty", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :specialty, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent", required: true, placeholder: "e.g., Business Coaching, Legal Consultation", disabled: @available_providers.empty? %>
          <p class="mt-1 text-sm text-gray-500">Professional area of expertise</p>
        </div>

        <!-- Professional Details Section -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center">
              <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Professional Details
            </h3>
            <p class="text-purple-100 text-sm mt-1">Credentials, education, and professional background</p>
          </div>

          <div class="p-6 space-y-6">
            <!-- Credentials -->
            <div>
              <%= f.label :credentials, "Credentials & Certifications", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_area :credentials,
                    rows: 3,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "e.g., MBA, Certified Business Coach, Licensed Clinical Social Worker (LCSW), 15 years experience",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Certifications, licenses, degrees, and relevant experience</p>
            </div>

            <!-- Education -->
            <div>
              <%= f.label :education, "Education Background", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_area :education,
                    rows: 3,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "e.g., Master of Business Administration - Harvard Business School (2010), Bachelor of Psychology - Stanford University (2008)",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Educational qualifications and institutions</p>
            </div>

            <!-- Certifications -->
            <div>
              <%= f.label :certifications, "Additional Certifications", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_area :certifications,
                    rows: 3,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "e.g., Certified Professional Coach (ICF), Project Management Professional (PMP), Google Analytics Certified",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Professional certifications and continuing education</p>
            </div>

            <!-- Languages -->
            <div>
              <%= f.label :languages, "Languages Spoken", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_field :languages,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "e.g., English (Native), Spanish (Fluent), Mandarin Chinese (Conversational)",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Languages and proficiency levels (comma-separated)</p>
            </div>
          </div>
        </div>

        <!-- Professional Bio Section -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center">
              <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              Professional Bio & Philosophy
            </h3>
            <p class="text-purple-100 text-sm mt-1">Professional background, approach, and philosophy</p>
          </div>

          <div class="p-6 space-y-6">
            <!-- Bio -->
            <div>
              <%= f.label :bio, "Professional Bio", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_area :bio,
                    rows: 8,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "Share your professional background, experience, approach to helping clients, and what makes your services unique. This will be displayed prominently on your profile...",
                    required: true,
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Professional background and service approach (minimum 50 characters, maximum 2000)</p>
            </div>

            <!-- Philosophy -->
            <div>
              <%= f.label :philosophy, "Professional Philosophy", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_area :philosophy,
                    rows: 4,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "e.g., I believe in empowering clients through collaborative goal-setting and evidence-based strategies...",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Your approach and philosophy in working with clients</p>
            </div>
          </div>
        </div>

        <!-- Expertise & Services Section -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center">
              <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              Areas of Expertise & Services
            </h3>
            <p class="text-purple-100 text-sm mt-1">Specializations, modalities, and service offerings</p>
          </div>

          <div class="p-6 space-y-6">
            <!-- Areas of Expertise -->
            <div>
              <%= f.label :areas_of_expertise, "Areas of Expertise", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_area :areas_of_expertise,
                    rows: 3,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "e.g., Strategic Planning, Leadership Development, Team Building, Change Management, Executive Coaching",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Specific areas of expertise (comma-separated)</p>
            </div>

            <!-- Treatment Modalities -->
            <div>
              <%= f.label :treatment_modalities, "Treatment Modalities / Methodologies", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_area :treatment_modalities,
                    rows: 3,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "e.g., Cognitive Behavioral Therapy, LEAN Methodology, Agile Coaching, Solution-Focused Therapy",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Specific methodologies, frameworks, or treatment approaches used</p>
            </div>

            <!-- Session Formats -->
            <div>
              <%= f.label :session_formats, "Session Formats Offered", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_area :session_formats,
                    rows: 2,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "e.g., Individual Sessions, Group Workshops, Online Consultations, In-Person Meetings, Weekend Intensives",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Types of session formats you offer (comma-separated)</p>
            </div>

            <!-- Industries Served -->
            <div>
              <%= f.label :industries_served, "Industries Served", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_area :industries_served,
                    rows: 2,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "e.g., Technology, Healthcare, Finance, Non-Profit, Startups, Fortune 500 Companies",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Industries or sectors you specialize in serving (comma-separated)</p>
            </div>
          </div>
        </div>

        <!-- Contact Information Section -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center">
              <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              Contact Information
            </h3>
            <p class="text-purple-100 text-sm mt-1">Contact details and office information</p>
          </div>

          <div class="p-6 space-y-6">
            <!-- Phone -->
            <div>
              <%= f.label :phone, "Phone Number", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.telephone_field :phone,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "+1 (555) 123-4567",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Professional contact number</p>
            </div>

            <!-- Office Address -->
            <div>
              <%= f.label :office_address, "Office Address", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.text_area :office_address,
                    rows: 3,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "123 Business Street, Suite 456, City, State 12345",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Physical office or practice location</p>
            </div>

            <!-- Website -->
            <div>
              <%= f.label :website, "Professional Website", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <%= f.url_field :website,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                    placeholder: "https://www.yourprofessionalsite.com",
                    disabled: @available_providers.empty? %>
              <p class="mt-2 text-sm text-gray-600">Your professional website URL</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1 space-y-8">

        <!-- Social Media Links Section -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center">
              <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd"/>
              </svg>
              Social Media & Links
            </h3>
            <p class="text-purple-100 text-sm mt-1">Professional social media profiles</p>
          </div>

          <div class="p-6 space-y-4">
            <!-- LinkedIn -->
            <div>
              <%= f.label :linkedin_url, "LinkedIn Profile", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <%= f.url_field :linkedin_url,
                      class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                      placeholder: "https://linkedin.com/in/yourprofile",
                      disabled: @available_providers.empty? %>
              </div>
            </div>

            <!-- Twitter -->
            <div>
              <%= f.label :twitter_url, "Twitter Profile", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"/>
                  </svg>
                </div>
                <%= f.url_field :twitter_url,
                      class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                      placeholder: "https://twitter.com/yourhandle",
                      disabled: @available_providers.empty? %>
              </div>
            </div>

            <!-- Facebook -->
            <div>
              <%= f.label :facebook_url, "Facebook Page", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M20 10C20 4.477 15.523 0 10 0S0 4.477 0 10c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V10h2.54V7.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V10h2.773l-.443 2.89h-2.33v6.988C16.343 19.128 20 14.991 20 10z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <%= f.url_field :facebook_url,
                      class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                      placeholder: "https://facebook.com/yourpage",
                      disabled: @available_providers.empty? %>
              </div>
            </div>

            <!-- Instagram -->
            <div>
              <%= f.label :instagram_url, "Instagram Profile", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-pink-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <%= f.url_field :instagram_url,
                      class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 text-sm",
                      placeholder: "https://instagram.com/yourprofile",
                      disabled: @available_providers.empty? %>
              </div>
            </div>
          </div>
        </div>

        <!-- Profile Image Section -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center">
              <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
              </svg>
              Profile Image
            </h3>
            <p class="text-purple-100 text-sm mt-1">Professional headshot or avatar</p>
          </div>

          <div class="p-6">
            <div>
              <%= f.label :avatar, "Profile Photo", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-purple-400 transition-colors duration-200">
                <div class="space-y-1 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <div class="flex text-sm text-gray-600">
                    <%= f.file_field :avatar,
                          class: "sr-only",
                          accept: "image/*",
                          disabled: @available_providers.empty?,
                          data: {
                            controller: "file-upload",
                            action: "change->file-upload#preview"
                          } %>
                    <label for="provider_profile_avatar" class="relative cursor-pointer bg-white rounded-md font-medium text-purple-600 hover:text-purple-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-purple-500">
                      <span>Upload a file</span>
                    </label>
                    <p class="pl-1">or drag and drop</p>
                  </div>
                  <p class="text-xs text-gray-500">PNG, JPG, WebP up to 5MB</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Media Gallery Section -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center">
              <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
              </svg>
              Media Gallery
            </h3>
            <p class="text-purple-100 text-sm mt-1">Portfolio images, videos, and audio</p>
          </div>

          <div class="p-6 space-y-6">
            <!-- Gallery Images -->
            <div>
              <%= f.label :gallery_images, "Portfolio Images", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-purple-400 transition-colors duration-200">
                <div class="space-y-1 text-center">
                  <svg class="mx-auto h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <div class="flex text-sm text-gray-600">
                    <%= f.file_field :gallery_images,
                          multiple: true,
                          class: "sr-only",
                          accept: "image/*",
                          disabled: @available_providers.empty? %>
                    <label for="provider_profile_gallery_images" class="relative cursor-pointer bg-white rounded-md font-medium text-purple-600 hover:text-purple-500">
                      <span>Upload images</span>
                    </label>
                  </div>
                  <p class="text-xs text-gray-500">Multiple images, up to 10MB each</p>
                </div>
              </div>
            </div>

            <!-- Gallery Videos -->
            <div>
              <%= f.label :gallery_videos, "Portfolio Videos", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-purple-400 transition-colors duration-200">
                <div class="space-y-1 text-center">
                  <svg class="mx-auto h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                  <div class="flex text-sm text-gray-600">
                    <%= f.file_field :gallery_videos,
                          multiple: true,
                          class: "sr-only",
                          accept: "video/*",
                          disabled: @available_providers.empty? %>
                    <label for="provider_profile_gallery_videos" class="relative cursor-pointer bg-white rounded-md font-medium text-purple-600 hover:text-purple-500">
                      <span>Upload videos</span>
                    </label>
                  </div>
                  <p class="text-xs text-gray-500">MP4, MOV, AVI up to 100MB each</p>
                </div>
              </div>
            </div>

            <!-- Gallery Audio -->
            <div>
              <%= f.label :gallery_audio, "Audio Samples", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-purple-400 transition-colors duration-200">
                <div class="space-y-1 text-center">
                  <svg class="mx-auto h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
                  </svg>
                  <div class="flex text-sm text-gray-600">
                    <%= f.file_field :gallery_audio,
                          multiple: true,
                          class: "sr-only",
                          accept: "audio/*",
                          disabled: @available_providers.empty? %>
                    <label for="provider_profile_gallery_audio" class="relative cursor-pointer bg-white rounded-md font-medium text-purple-600 hover:text-purple-500">
                      <span>Upload audio</span>
                    </label>
                  </div>
                  <p class="text-xs text-gray-500">MP3, WAV, OGG up to 50MB each</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Documents Section -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center">
              <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
              </svg>
              Documents & Certificates
            </h3>
            <p class="text-purple-100 text-sm mt-1">Credentials, certifications, and documents</p>
          </div>

          <div class="p-6">
            <div>
              <%= f.label :documents, "Professional Documents", class: "block text-sm font-semibold text-gray-900 mb-2" %>
              <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-purple-400 transition-colors duration-200">
                <div class="space-y-1 text-center">
                  <svg class="mx-auto h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  <div class="flex text-sm text-gray-600">
                    <%= f.file_field :documents,
                          multiple: true,
                          class: "sr-only",
                          accept: ".pdf",
                          disabled: @available_providers.empty? %>
                    <label for="provider_profile_documents" class="relative cursor-pointer bg-white rounded-md font-medium text-purple-600 hover:text-purple-500">
                      <span>Upload documents</span>
                    </label>
                  </div>
                  <p class="text-xs text-gray-500">PDF files up to 20MB each</p>
                </div>
              </div>
              <p class="mt-2 text-sm text-gray-600">Upload certificates, licenses, diplomas, and other professional documents</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="flex items-center justify-between pt-8 border-t border-gray-200">
      <div class="flex items-center space-x-4">
        <%= link_to admin_provider_profiles_path, class: "inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Cancel
        <% end %>
      </div>

      <div class="flex items-center space-x-4">
        <%= f.submit "Create Provider Profile",
              class: "inline-flex items-center px-8 py-3 border border-transparent text-sm font-semibold rounded-lg text-white bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105 #{'opacity-50 cursor-not-allowed' if @available_providers.empty?}",
              disabled: @available_providers.empty? %>
      </div>
    </div>
  <% end %>
</div>
