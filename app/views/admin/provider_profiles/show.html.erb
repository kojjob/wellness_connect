<% content_for :admin_page_title, "Provider Profile Details" %>

<%# Hero Section %>
<section class="relative bg-gradient-to-br from-purple-600 via-gray-700 to-purple-800 text-white overflow-hidden pt-6">
  <%# Gradient Overlay %>
  <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-transparent" aria-hidden="true"></div>

  <%# Animated Blobs %>
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute top-10 right-10 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-10 left-10 w-72 h-72 bg-pink-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-purple-600 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%# Breadcrumbs %>
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to admin_root_path, class: "text-gray-300 hover:text-white transition-colors" do %>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
            </svg>
            <span class="sr-only">Dashboard</span>
          <% end %>
        </li>
        <li>
          <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </li>
        <li>
          <%= link_to "Provider Profiles", admin_provider_profiles_path, class: "text-gray-300 hover:text-white transition-colors" %>
        </li>
        <li>
          <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </li>
        <li class="text-gray-400" aria-current="page"><%= @provider_profile.user.full_name %></li>
      </ol>
    </nav>

    <%# Header Content %>
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
      <div class="flex-1">
        <div class="flex items-center gap-6 mb-4">
          <%# Provider Avatar %>
          <div class="flex-shrink-0">
            <div class="h-24 w-24 rounded-full bg-gradient-to-br from-purple-400 to-pink-500 flex items-center justify-center text-white font-bold text-3xl shadow-2xl ring-4 ring-white/20">
              <%= @provider_profile.user.first_name.first.upcase %><%= @provider_profile.user.last_name.first.upcase %>
            </div>
          </div>

          <div>
            <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-purple-200 bg-clip-text text-transparent mb-2">
              <%= @provider_profile.user.full_name %>
            </h1>
            <p class="text-lg text-gray-300 mb-1"><%= @provider_profile.specialty %></p>
            <p class="text-sm text-gray-400"><%= @provider_profile.user.email %></p>
          </div>
        </div>

        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-300">
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            <%= @provider_profile.services.count %> Services
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
            <%= @provider_profile.display_rating %> Rating
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <%= @appointments.count %> Appointments
          </div>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
        <%# Action Buttons %>
        <%= link_to edit_admin_provider_profile_path(@provider_profile),
          class: "inline-flex items-center bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 border border-white/20" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit Profile
        <% end %>

        <%= button_to admin_provider_profile_path(@provider_profile), method: :delete,
          data: { turbo_confirm: "Are you sure you want to delete this provider profile? This action cannot be undone." },
          class: "inline-flex items-center bg-red-600/80 hover:bg-red-700 backdrop-blur-sm text-white px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 border border-red-500/20" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          Delete Profile
        <% end %>
      </div>
    </div>
  </div>
</section>

<%# Stats Cards %>
<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8 relative z-10">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <%# Active Services Card (Featured) %>
    <div class="relative bg-gradient-to-br from-purple-600 to-pink-700 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1">
      <%# Decorative Background Pattern %>
      <div class="absolute inset-0 opacity-10" aria-hidden="true">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white rounded-full -mr-16 -mt-16"></div>
        <div class="absolute bottom-0 left-0 w-24 h-24 bg-white rounded-full -ml-12 -mb-12"></div>
      </div>

      <div class="relative p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-white/20 backdrop-blur-sm rounded-xl group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <div class="flex items-center space-x-1">
            <span class="h-2 w-2 bg-purple-400 rounded-full animate-pulse"></span>
            <span class="text-xs font-medium text-white/80">Active</span>
          </div>
        </div>

        <div>
          <p class="text-sm font-medium text-white/80 mb-1">Active Services</p>
          <p class="text-4xl font-bold text-white mb-2"><%= @provider_profile.services.count %></p>
          <div class="text-xs text-white/70">
            <span class="h-1.5 w-1.5 bg-purple-400 rounded-full inline-block mr-1"></span>
            Services offered
          </div>
        </div>
      </div>
    </div>

    <%# Total Reviews %>
    <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
      <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-yellow-500 to-orange-600"></div>
      <div class="p-6">
        <div class="flex items-start justify-between mb-4">
          <div class="p-3 bg-gradient-to-br from-yellow-50 to-orange-100 rounded-xl group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
            </svg>
          </div>
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
            Reviews
          </span>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600 mb-1">Total Reviews</p>
          <p class="text-3xl font-bold text-gray-900 mb-2"><%= @provider_profile.total_reviews %></p>
          <div class="flex items-center text-xs text-gray-500">
            <span class="h-1.5 w-1.5 bg-yellow-500 rounded-full mr-2"></span>
            Customer feedback
          </div>
        </div>
      </div>
    </div>

    <%# Average Rating %>
    <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
      <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-emerald-500 to-green-600"></div>
      <div class="p-6">
        <div class="flex items-start justify-between mb-4">
          <div class="p-3 bg-gradient-to-br from-emerald-50 to-green-100 rounded-xl group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          </div>
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-800">
            Rating
          </span>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600 mb-1">Average Rating</p>
          <p class="text-3xl font-bold text-gray-900 mb-2"><%= @provider_profile.display_rating %></p>
          <div class="flex items-center text-xs text-gray-500">
            <span class="h-1.5 w-1.5 bg-emerald-500 rounded-full mr-2"></span>
            Quality score
          </div>
        </div>
      </div>
    </div>

    <%# Total Appointments %>
    <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
      <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 to-indigo-600"></div>
      <div class="p-6">
        <div class="flex items-start justify-between mb-4">
          <div class="p-3 bg-gradient-to-br from-blue-50 to-indigo-100 rounded-xl group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800">
            Sessions
          </span>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600 mb-1">Total Appointments</p>
          <p class="text-3xl font-bold text-gray-900 mb-2"><%= @appointments.count %></p>
          <div class="flex items-center text-xs text-gray-500">
            <span class="h-1.5 w-1.5 bg-blue-500 rounded-full mr-2"></span>
            Sessions completed
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%# Main Content %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <%# Left Column - Profile Information %>
    <div class="lg:col-span-2 space-y-6">

      <%# Profile Information Card %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-pink-50 border-b border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-purple-100 rounded-lg mr-3">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Profile Information</h3>
          </div>
        </div>
        <div class="p-6">
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="bg-gray-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-1">Specialty</dt>
              <dd class="text-lg font-semibold text-gray-900"><%= @provider_profile.specialty %></dd>
            </div>
            <div class="bg-gray-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-1">Credentials</dt>
              <dd class="text-sm text-gray-900"><%= @provider_profile.credentials || "Not specified" %></dd>
            </div>
            <div class="sm:col-span-2 bg-gray-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-2">Professional Bio</dt>
              <dd class="text-sm text-gray-900 leading-relaxed"><%= @provider_profile.bio || "No bio provided" %></dd>
            </div>
            <div class="bg-gray-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-1">Profile Created</dt>
              <dd class="text-sm text-gray-900"><%= @provider_profile.created_at.strftime("%B %d, %Y") %></dd>
              <dd class="text-xs text-gray-500"><%= @provider_profile.created_at.strftime("%I:%M %p") %></dd>
            </div>
            <div class="bg-gray-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-1">Last Updated</dt>
              <dd class="text-sm text-gray-900"><%= @provider_profile.updated_at.strftime("%B %d, %Y") %></dd>
              <dd class="text-xs text-gray-500"><%= @provider_profile.updated_at.strftime("%I:%M %p") %></dd>
            </div>
          </dl>
        </div>
      </div>

      <%# Services Section %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-emerald-50 to-green-50 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="p-2 bg-emerald-100 rounded-lg mr-3">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Services Offered</h3>
            </div>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-800">
              <%= @services.count %> Services
            </span>
          </div>
        </div>

        <% if @services.any? %>
          <div class="divide-y divide-gray-200">
            <% @services.each do |service| %>
              <div class="px-6 py-6 hover:bg-gray-50 transition-colors duration-150">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                      <h4 class="text-lg font-semibold text-gray-900"><%= service.name %></h4>
                      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold <%= service.is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                        <span class="h-1.5 w-1.5 rounded-full <%= service.is_active ? 'bg-green-600' : 'bg-gray-600' %> mr-1"></span>
                        <%= service.is_active ? "Active" : "Inactive" %>
                      </span>
                    </div>

                    <% if service.description.present? %>
                      <p class="text-sm text-gray-600 mb-3 leading-relaxed"><%= service.description %></p>
                    <% end %>

                    <div class="flex flex-wrap gap-4">
                      <div class="flex items-center text-sm text-gray-500">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <%= service.duration_minutes %> minutes
                      </div>
                      <div class="flex items-center text-sm font-medium text-emerald-600">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                        </svg>
                        $<%= number_with_precision(service.price, precision: 2) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            <h3 class="text-sm font-medium text-gray-900 mb-1">No services added yet</h3>
            <p class="text-sm text-gray-500">This provider hasn't created any services yet.</p>
          </div>
        <% end %>
      </div>
    </div>

    <%# Right Column - Reviews & Appointments %>
    <div class="lg:col-span-1 space-y-6">

      <%# Recent Reviews Card %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-yellow-50 to-orange-50 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="p-2 bg-yellow-100 rounded-lg mr-3">
                <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Recent Reviews</h3>
            </div>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
              <%= @reviews.count %> Reviews
            </span>
          </div>
        </div>

        <% if @reviews.any? %>
          <div class="max-h-96 overflow-y-auto">
            <div class="divide-y divide-gray-200">
              <% @reviews.each do |review| %>
                <div class="px-6 py-4">
                  <div class="flex items-start space-x-3">
                    <div class="flex-shrink-0">
                      <div class="h-8 w-8 rounded-full bg-gradient-to-br from-blue-400 to-indigo-500 flex items-center justify-center text-white font-bold text-xs">
                        <%= review.reviewer.first_name.first.upcase %><%= review.reviewer.last_name.first.upcase %>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center gap-2 mb-1">
                        <p class="text-sm font-semibold text-gray-900"><%= review.reviewer.full_name %></p>
                        <div class="flex">
                          <% review.rating.times do %>
                            <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                          <% end %>
                        </div>
                      </div>
                      <p class="text-xs text-gray-600 leading-relaxed mb-2"><%= review.comment %></p>
                      <p class="text-xs text-gray-500"><%= time_ago_in_words(review.created_at) %> ago</p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="px-6 py-8 text-center">
            <svg class="mx-auto h-8 w-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
            <p class="text-sm text-gray-500">No reviews yet</p>
          </div>
        <% end %>
      </div>

      <%# Recent Appointments Card %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="p-2 bg-blue-100 rounded-lg mr-3">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Recent Appointments</h3>
            </div>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800">
              <%= @appointments.count %> Total
            </span>
          </div>
        </div>

        <% if @appointments.any? %>
          <div class="max-h-96 overflow-y-auto">
            <div class="divide-y divide-gray-200">
              <% @appointments.each do |appointment| %>
                <div class="px-6 py-4 hover:bg-gray-50 transition-colors duration-150">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <div class="flex items-center space-x-3 mb-2">
                        <div class="flex-shrink-0">
                          <div class="h-8 w-8 rounded-full bg-gradient-to-br from-blue-400 to-indigo-500 flex items-center justify-center text-white font-bold text-xs">
                            <%= appointment.patient.first_name.first.upcase %><%= appointment.patient.last_name.first.upcase %>
                          </div>
                        </div>
                        <div class="flex-1 min-w-0">
                          <p class="text-sm font-semibold text-gray-900 truncate"><%= appointment.patient.full_name %></p>
                          <p class="text-xs text-gray-500 truncate"><%= appointment.patient.email %></p>
                        </div>
                      </div>

                      <div class="ml-11">
                        <p class="text-sm text-gray-900 font-medium mb-1"><%= appointment.service.name %></p>
                        <p class="text-xs text-gray-500 mb-2"><%= appointment.start_time.strftime("%b %d, %Y at %I:%M %p") %></p>

                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold <%= case appointment.status
                          when 'scheduled' then 'bg-blue-100 text-blue-800'
                          when 'completed' then 'bg-green-100 text-green-800'
                          when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-100 text-red-800'
                          when 'no_show' then 'bg-gray-100 text-gray-800'
                          else 'bg-gray-100 text-gray-800'
                        end %>">
                          <span class="h-1.5 w-1.5 rounded-full <%= case appointment.status
                            when 'scheduled' then 'bg-blue-600'
                            when 'completed' then 'bg-green-600'
                            when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-600'
                            when 'no_show' then 'bg-gray-600'
                            else 'bg-gray-600'
                          end %> mr-1"></span>
                          <%= appointment.status.humanize %>
                        </span>
                      </div>
                    </div>

                    <div class="flex-shrink-0">
                      <%= link_to admin_appointment_path(appointment),
                        class: "text-blue-600 hover:text-blue-700 transition-colors",
                        title: "View appointment details" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="px-6 py-3 bg-gray-50 border-t border-gray-200">
            <%= link_to admin_appointments_path(provider_id: @provider_profile.user.id),
              class: "inline-flex items-center w-full justify-center text-blue-600 hover:text-blue-700 text-sm font-medium transition-colors" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
              </svg>
              View All Appointments
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-8 text-center">
            <svg class="mx-auto h-8 w-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="text-sm text-gray-500">No appointments yet</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%# Quick Actions Section %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8 mb-12">
  <div class="bg-white rounded-xl shadow-lg p-6">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-1">Quick Actions</h3>
        <p class="text-sm text-gray-600">Manage this provider profile or view related information</p>
      </div>
      <div class="flex flex-wrap items-center gap-3">
        <%= link_to edit_admin_provider_profile_path(@provider_profile),
          class: "inline-flex items-center bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit Profile
        <% end %>

        <%= link_to admin_user_path(@provider_profile.user),
          class: "inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          View User Account
        <% end %>

        <%= link_to admin_appointments_path(provider_id: @provider_profile.user.id),
          class: "inline-flex items-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          All Appointments
        <% end %>

        <%= link_to admin_provider_profiles_path,
          class: "inline-flex items-center bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
          </svg>
          All Providers
        <% end %>
      </div>
    </div>
  </div>
</div>
