<% content_for :admin_page_title, "Payments Management" %>

<div class="min-h-screen bg-gray-50 -mt-6">
  <%# Hero Header Section %>
  <section class="relative bg-gradient-to-br from-yellow-600 via-orange-700 to-yellow-800 text-white overflow-hidden pt-6">
    <%# Gradient Overlay %>
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-transparent" aria-hidden="true"></div>

    <%# Animated Blobs %>
    <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
      <div class="absolute top-10 right-10 w-72 h-72 bg-yellow-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
      <div class="absolute bottom-10 left-10 w-72 h-72 bg-orange-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-yellow-600 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-4000"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <%# Breadcrumbs %>
      <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <%= link_to admin_root_path, class: "text-gray-300 hover:text-yellow-400 inline-flex items-center text-sm font-medium transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
              </svg>
              Dashboard
            <% end %>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-300 md:ml-2">Payments</span>
            </div>
          </li>
        </ol>
      </nav>

      <%# Header Content %>
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-yellow-200 bg-clip-text text-transparent mb-2">
            Payments Management
          </h1>
          <p class="text-lg text-gray-300">Monitor transactions, revenue, and payment analytics</p>
        </div>

        <div class="flex items-center gap-3">
          <%= link_to "#", class: "inline-flex items-center justify-center bg-white text-yellow-600 hover:bg-gray-100 px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-yellow-600" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Export CSV
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <%# Payment Statistics Dashboard %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8 relative z-10">
    <%
      total_amount = @payments.sum(:amount)
      succeeded_amount = @payments.where(status: 'succeeded').sum(:amount)
      pending_amount = @payments.where(status: 'pending').sum(:amount)
      failed_amount = @payments.where(status: 'failed').sum(:amount)
    %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <%# Total Payments - Featured Card %>
      <div class="relative bg-gradient-to-br from-yellow-600 to-orange-700 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1">
        <%# Decorative Background Pattern %>
        <div class="absolute inset-0 opacity-10">
          <div class="absolute top-0 right-0 w-32 h-32 bg-white rounded-full -mr-16 -mt-16"></div>
          <div class="absolute bottom-0 left-0 w-24 h-24 bg-white rounded-full -ml-12 -mb-12"></div>
        </div>

        <div class="relative p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-white/20 backdrop-blur-sm rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4zM18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"/>
              </svg>
            </div>
            <div class="flex items-center space-x-1">
              <span class="h-2 w-2 bg-green-400 rounded-full animate-pulse"></span>
              <span class="text-xs font-medium text-white/80">Live</span>
            </div>
          </div>

          <div>
            <p class="text-sm font-medium text-white/80 mb-1">Total Payments</p>
            <p class="text-4xl font-bold text-white mb-2"><%= number_with_delimiter(@payments.total_count) %></p>
            <div class="flex items-center text-xs text-white/70">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"/>
              </svg>
              All transactions
            </div>
          </div>
        </div>
      </div>

      <%# Total Revenue %>
      <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
        <%# Accent Bar %>
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-green-500 to-emerald-500"></div>

        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="p-3 bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
              </svg>
            </div>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
              Revenue
            </span>
          </div>

          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Total Revenue</p>
            <p class="text-3xl font-bold text-gray-900 mb-2">$<%= number_with_precision(total_amount, precision: 2) %></p>
            <div class="flex items-center text-xs text-gray-500">
              <span class="h-1.5 w-1.5 bg-green-500 rounded-full mr-2"></span>
              All time earnings
            </div>
          </div>
        </div>
      </div>

      <%# Succeeded Payments %>
      <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
        <%# Accent Bar %>
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-emerald-500 to-green-500"></div>

        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="p-3 bg-gradient-to-br from-emerald-50 to-green-50 rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-800">
              <%= number_to_percentage((succeeded_amount.to_f / total_amount * 100), precision: 0) if total_amount > 0 %>
            </span>
          </div>

          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Succeeded</p>
            <p class="text-3xl font-bold text-gray-900 mb-2">$<%= number_with_precision(succeeded_amount, precision: 2) %></p>
            <div class="flex items-center text-xs text-gray-500">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Successful transactions
            </div>
          </div>
        </div>
      </div>

      <%# Pending Payments %>
      <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
        <%# Accent Bar %>
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-yellow-500 to-orange-500"></div>

        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="p-3 bg-gradient-to-br from-yellow-50 to-orange-50 rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
              Pending
            </span>
          </div>

          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Pending</p>
            <p class="text-3xl font-bold text-gray-900 mb-2">$<%= number_with_precision(pending_amount, precision: 2) %></p>
            <div class="flex items-center text-xs text-gray-500">
              <span class="h-1.5 w-1.5 bg-yellow-500 rounded-full mr-2"></span>
              Awaiting processing
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%# Search and Filters Section %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <%= form_with url: admin_payments_path, method: :get, class: "bg-white rounded-xl shadow-lg p-6" do |f| %>
      <%# Search Bar %>
      <div class="mb-6">
        <label for="search" class="block text-sm font-semibold text-gray-700 mb-2">
          <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Search Payments
        </label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <%= f.text_field :search,
            value: params[:search],
            placeholder: "Search by payer name, email, or Stripe ID...",
            class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-200" %>
        </div>
      </div>

      <%# Filters Grid %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <%# Status Filter %>
        <div>
          <label for="status" class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
          <%= f.select :status,
            options_for_select([
              ["All Statuses", ""],
              ["Succeeded", "succeeded"],
              ["Pending", "pending"],
              ["Failed", "failed"]
            ], params[:status]),
            {},
            {
              class: "py-3 px-4 block w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-200 bg-white"
            } %>
        </div>

        <%# Amount Range Filter %>
        <div>
          <label for="min_amount" class="block text-sm font-semibold text-gray-700 mb-2">Min Amount</label>
          <%= f.number_field :min_amount,
            value: params[:min_amount],
            placeholder: "0.00",
            step: 0.01,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-200" %>
        </div>

        <%# Start Date Filter %>
        <div>
          <label for="start_date" class="block text-sm font-semibold text-gray-700 mb-2">From Date</label>
          <%= f.date_field :start_date,
            value: params[:start_date],
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-200" %>
        </div>

        <%# End Date Filter %>
        <div>
          <label for="end_date" class="block text-sm font-semibold text-gray-700 mb-2">To Date</label>
          <%= f.date_field :end_date,
            value: params[:end_date],
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-200" %>
        </div>
      </div>

      <%# Action Buttons %>
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-2">
          <%= f.button "Apply Filters",
            type: "submit",
            class: "bg-gradient-to-r from-yellow-600 to-orange-700 hover:from-yellow-700 hover:to-orange-800 text-white px-6 py-2 rounded-lg text-sm font-semibold transition-all duration-200 shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2" %>

          <%= link_to "Clear Filters", admin_payments_path,
            class: "text-gray-700 hover:text-yellow-600 hover:bg-yellow-50 px-6 py-2 rounded-lg text-sm font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2" %>
        </div>

        <%# Results Count %>
        <div class="text-sm text-gray-600">
          <% if @payments.any? %>
            Showing <%= number_with_delimiter(@payments.total_count) %> payments
          <% end %>
        </div>
      </div>
    <% end %>
  </section>

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6 mb-12">
    <% if @payments.any? %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <%# Results Count %>
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2">
            <h2 class="text-lg font-semibold text-gray-900">All Payments</h2>
            <p class="text-sm text-gray-700">
              Showing <span class="font-semibold"><%= @payments.offset_value + 1 %></span> to
              <span class="font-semibold"><%= [@payments.offset_value + @payments.limit_value, @payments.total_count].min %></span> of
              <span class="font-semibold"><%= @payments.total_count %></span> results
            </p>
          </div>
        </div>

        <%# Table %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payer</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Appointment</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stripe ID</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @payments.each do |payment| %>
                <tr class="hover:bg-gray-50 transition-colors duration-150">
                  <%# Payment ID %>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    #<%= payment.id %>
                  </td>

                  <%# Payer Info with Avatar %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-gradient-to-br from-yellow-400 to-orange-500 flex items-center justify-center text-white font-bold text-sm">
                          <%= payment.payer.first_name.first.upcase %><%= payment.payer.last_name.first.upcase %>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-semibold text-gray-900"><%= payment.payer.full_name %></div>
                        <div class="text-sm text-gray-500"><%= payment.payer.email %></div>
                      </div>
                    </div>
                  </td>

                  <%# Amount %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-semibold text-gray-900">$<%= number_with_precision(payment.amount, precision: 2) %></div>
                    <div class="text-xs text-gray-500"><%= payment.currency.upcase %></div>
                  </td>

                  <%# Status Badge %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold <%= case payment.status
                      when 'succeeded' then 'bg-green-100 text-green-800'
                      when 'pending' then 'bg-yellow-100 text-yellow-800'
                      when 'failed' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                    end %>">
                      <span class="h-1.5 w-1.5 rounded-full <%= case payment.status
                        when 'succeeded' then 'bg-green-600'
                        when 'pending' then 'bg-yellow-600'
                        when 'failed' then 'bg-red-600'
                        else 'bg-gray-600'
                      end %> mr-1"></span>
                      <%= payment.status.humanize %>
                    </span>
                  </td>

                  <%# Appointment Link %>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if payment.appointment %>
                      <%= link_to "##{payment.appointment.id}", admin_appointment_path(payment.appointment), class: "text-yellow-600 hover:text-yellow-700 font-medium" %>
                    <% else %>
                      <span class="text-gray-400">N/A</span>
                    <% end %>
                  </td>

                  <%# Stripe ID %>
                  <td class="px-6 py-4 text-xs text-gray-500 font-mono">
                    <% if payment.stripe_payment_intent_id %>
                      <span class="bg-gray-100 px-2 py-1 rounded">
                        <%= payment.stripe_payment_intent_id[0..15] %>...
                      </span>
                    <% else %>
                      <span class="text-gray-400">N/A</span>
                    <% end %>
                  </td>

                  <%# Date %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= payment.created_at.strftime("%b %d, %Y") %></div>
                    <div class="text-xs text-gray-500"><%= payment.created_at.strftime("%I:%M %p") %></div>
                  </td>

                  <%# Actions %>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to admin_payment_path(payment),
                      class: "inline-flex items-center text-yellow-600 hover:text-yellow-700 transition-colors",
                      title: "View payment details" do %>
                      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      View
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%# Pagination %>
        <% if @payments.total_pages > 1 %>
          <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <div class="flex items-center justify-center">
              <%= paginate @payments, theme: 'twitter-bootstrap-4',
                pagination_class: "pagination justify-content-center mb-0",
                nav_class: "d-flex justify-content-center" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <%# Empty State %>
      <div class="bg-white rounded-xl shadow-lg p-12 text-center">
        <div class="max-w-md mx-auto">
          <svg class="mx-auto h-24 w-24 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>

          <h3 class="text-xl font-bold text-gray-900 mb-2">No payments found</h3>

          <% if params[:search].present? || params[:status].present? || params[:start_date].present? || params[:end_date].present? %>
            <p class="text-gray-600 mb-6">
              No payments match your current filters. Try adjusting your search criteria or clearing the filters.
            </p>

            <%= link_to "Clear All Filters", admin_payments_path,
              class: "inline-flex items-center bg-gradient-to-r from-yellow-600 to-orange-700 hover:from-yellow-700 hover:to-orange-800 text-white px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2" %>
          <% else %>
            <p class="text-gray-600 mb-6">
              No payments have been processed yet. Payments will appear here once users start making transactions.
            </p>
          <% end %>
        </div>
      </div>
    <% end %>
  </section>
</div>
