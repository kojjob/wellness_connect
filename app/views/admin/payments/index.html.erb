<% content_for :admin_page_title, "Payments Management" %>

<!-- Filters and Search -->
<div class="bg-white rounded-lg shadow mb-6">
  <div class="px-6 py-4">
    <%= form_with url: admin_payments_path, method: :get, class: "space-y-4" do |f| %>
      <!-- Search and Date Range Row -->
      <div class="flex flex-wrap gap-4 items-end">
        <!-- Search -->
        <div class="flex-1 min-w-[200px]">
          <%= f.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :search, value: params[:search], placeholder: "Payer name, email, or Stripe ID...", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <!-- Start Date -->
        <div class="w-48">
          <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :start_date, value: params[:start_date], class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <!-- End Date -->
        <div class="w-48">
          <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :end_date, value: params[:end_date], class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <!-- Status Filter -->
        <div class="w-48">
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :status,
              options_for_select([
                ['All Statuses', ''],
                ['Pending', 'pending'],
                ['Succeeded', 'succeeded'],
                ['Failed', 'failed']
              ], params[:status]),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <!-- Submit Buttons -->
        <div>
          <%= f.submit "Filter", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <%= link_to "Clear", admin_payments_path, class: "ml-2 px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Payment Statistics -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
  <%
    total_amount = @payments.sum(:amount)
    succeeded_amount = @payments.where(status: 'succeeded').sum(:amount)
    pending_amount = @payments.where(status: 'pending').sum(:amount)
    failed_amount = @payments.where(status: 'failed').sum(:amount)
  %>
  <div class="bg-white rounded-lg shadow px-6 py-4">
    <p class="text-sm font-medium text-gray-500">Total Payments</p>
    <p class="text-3xl font-bold text-gray-900 mt-2"><%= @payments.total_count %></p>
  </div>
  <div class="bg-white rounded-lg shadow px-6 py-4">
    <p class="text-sm font-medium text-gray-500">Total Revenue</p>
    <p class="text-3xl font-bold text-green-600 mt-2">$<%= number_with_precision(total_amount, precision: 2) %></p>
  </div>
  <div class="bg-white rounded-lg shadow px-6 py-4">
    <p class="text-sm font-medium text-gray-500">Succeeded</p>
    <p class="text-3xl font-bold text-green-600 mt-2">$<%= number_with_precision(succeeded_amount, precision: 2) %></p>
  </div>
  <div class="bg-white rounded-lg shadow px-6 py-4">
    <p class="text-sm font-medium text-gray-500">Pending</p>
    <p class="text-3xl font-bold text-yellow-600 mt-2">$<%= number_with_precision(pending_amount, precision: 2) %></p>
  </div>
</div>

<!-- Payments Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">All Payments</h2>
  </div>

  <% if @payments.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payer</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Appointment</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stripe ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @payments.each do |payment| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                #<%= payment.id %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= payment.payer.full_name %></div>
                <div class="text-sm text-gray-500"><%= payment.payer.email %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">$<%= number_with_precision(payment.amount, precision: 2) %></div>
                <div class="text-sm text-gray-500"><%= payment.currency.upcase %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case payment.status
                      when 'succeeded' then 'bg-green-100 text-green-800'
                      when 'pending' then 'bg-yellow-100 text-yellow-800'
                      when 'failed' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= payment.status.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if payment.appointment %>
                  <%= link_to "##{payment.appointment.id}", admin_appointment_path(payment.appointment), class: "text-indigo-600 hover:text-indigo-900" %>
                <% else %>
                  <span class="text-gray-400">N/A</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500 font-mono text-xs">
                <%= payment.stripe_payment_intent_id ? payment.stripe_payment_intent_id[0..20] + '...' : 'N/A' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= payment.created_at.strftime("%b %d, %Y") %><br>
                <%= payment.created_at.strftime("%I:%M %p") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View Details", admin_payment_path(payment), class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @payments.total_pages > 1 %>
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <div class="flex items-center justify-between">
          <div class="text-sm text-gray-700">
            Showing <%= @payments.offset_value + 1 %> to <%= [@payments.offset_value + @payments.limit_value, @payments.total_count].min %> of <%= @payments.total_count %> results
          </div>
          <div class="flex gap-2">
            <%= paginate @payments %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="px-6 py-12 text-center text-gray-500">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No payments found</h3>
      <p class="mt-1 text-sm text-gray-500">Try adjusting your search or filter criteria</p>
    </div>
  <% end %>
</div>
