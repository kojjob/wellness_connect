<% content_for :admin_page_title, "Appointment Details" %>

<%# Hero Section %>
<section class="relative bg-gradient-to-br from-green-600 via-gray-700 to-green-800 text-white overflow-hidden pt-6">
  <%# Gradient Overlay %>
  <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-transparent" aria-hidden="true"></div>

  <%# Animated Blobs %>
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute top-10 right-10 w-72 h-72 bg-green-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-10 left-10 w-72 h-72 bg-emerald-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-green-600 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%# Breadcrumbs %>
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to admin_root_path, class: "text-gray-300 hover:text-white transition-colors" do %>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
            </svg>
            <span class="sr-only">Dashboard</span>
          <% end %>
        </li>
        <li>
          <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </li>
        <li>
          <%= link_to "Appointments", admin_appointments_path, class: "text-gray-300 hover:text-white transition-colors" %>
        </li>
        <li>
          <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </li>
        <li class="text-gray-400" aria-current="page">Appointment #<%= @appointment.id %></li>
      </ol>
    </nav>

    <%# Header Content %>
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
      <div class="flex-1">
        <div class="flex items-center gap-4 mb-4">
          <div class="p-3 bg-white/20 backdrop-blur-sm rounded-xl">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 4v10m6-10v10m-6-4h6"/>
            </svg>
          </div>
          <div>
            <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-green-200 bg-clip-text text-transparent mb-2">
              Appointment #<%= @appointment.id %>
            </h1>
            <p class="text-lg text-gray-300"><%= @appointment.service.name %></p>
          </div>
        </div>

        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-300">
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 4v10m6-10v10m-6-4h6"/>
            </svg>
            <%= @appointment.start_time.strftime("%A, %B %d, %Y") %>
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <%= @appointment.start_time.strftime("%I:%M %p") %> - <%= @appointment.end_time.strftime("%I:%M %p") %>
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
            $<%= number_with_precision(@appointment.service.price, precision: 2) %>
          </div>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
        <%# Status Badge %>
        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold <%= case @appointment.status
          when 'scheduled' then 'bg-blue-100 text-blue-800'
          when 'completed' then 'bg-green-100 text-green-800'
          when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-100 text-red-800'
          when 'no_show' then 'bg-gray-100 text-gray-800'
          else 'bg-gray-100 text-gray-800'
        end %>">
          <span class="h-2 w-2 rounded-full <%= case @appointment.status
            when 'scheduled' then 'bg-blue-600'
            when 'completed' then 'bg-green-600'
            when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-600'
            when 'no_show' then 'bg-gray-600'
            else 'bg-gray-600'
          end %> mr-2"></span>
          <%= @appointment.status.humanize %>
        </span>

        <%# Action Buttons %>
        <div class="flex items-center gap-2">
          <%= link_to admin_appointments_path,
            class: "inline-flex items-center bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 border border-white/20" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Appointments
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<%# Main Content %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8 relative z-10">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <%# Left Column - Main Details %>
    <div class="lg:col-span-2 space-y-6">

      <%# Appointment Information Card %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-green-50 to-emerald-50 border-b border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-green-100 rounded-lg mr-3">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Appointment Information</h3>
          </div>
        </div>
        <div class="p-6">
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="bg-gray-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-1">Date & Time</dt>
              <dd class="text-lg font-semibold text-gray-900"><%= @appointment.start_time.strftime("%A, %B %d, %Y") %></dd>
              <dd class="text-sm text-gray-600"><%= @appointment.start_time.strftime("%I:%M %p") %> - <%= @appointment.end_time.strftime("%I:%M %p") %></dd>
            </div>
            <div class="bg-gray-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-1">Duration & Price</dt>
              <dd class="text-lg font-semibold text-gray-900"><%= @appointment.service.duration_minutes %> minutes</dd>
              <dd class="text-sm text-green-600 font-medium">$<%= number_with_precision(@appointment.service.price, precision: 2) %></dd>
            </div>
            <div class="bg-gray-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-1">Created</dt>
              <dd class="text-sm text-gray-900"><%= @appointment.created_at.strftime("%B %d, %Y") %></dd>
              <dd class="text-xs text-gray-500"><%= @appointment.created_at.strftime("%I:%M %p") %></dd>
            </div>
            <div class="bg-gray-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-1">Last Updated</dt>
              <dd class="text-sm text-gray-900"><%= @appointment.updated_at.strftime("%B %d, %Y") %></dd>
              <dd class="text-xs text-gray-500"><%= @appointment.updated_at.strftime("%I:%M %p") %></dd>
            </div>
          </dl>
        </div>
      </div>

      <%# Patient Information Card %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-blue-100 rounded-lg mr-3">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Patient Information</h3>
          </div>
        </div>
        <div class="p-6">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="h-16 w-16 rounded-full bg-gradient-to-br from-blue-400 to-indigo-500 flex items-center justify-center text-white font-bold text-xl shadow-lg">
                <%= @appointment.patient.first_name.first.upcase %><%= @appointment.patient.last_name.first.upcase %>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Full Name</dt>
                  <dd class="text-lg font-semibold text-gray-900"><%= @appointment.patient.full_name %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Email</dt>
                  <dd class="text-sm text-gray-900"><%= @appointment.patient.email %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Role</dt>
                  <dd>
                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800">
                      <span class="h-1.5 w-1.5 bg-blue-600 rounded-full mr-1"></span>
                      <%= @appointment.patient.role.capitalize %>
                    </span>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Actions</dt>
                  <dd>
                    <%= link_to admin_user_path(@appointment.patient),
                      class: "inline-flex items-center text-blue-600 hover:text-blue-700 text-sm font-medium transition-colors" do %>
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      View Profile
                    <% end %>
                  </dd>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%# Provider Information Card %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-pink-50 border-b border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-purple-100 rounded-lg mr-3">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Provider Information</h3>
          </div>
        </div>
        <div class="p-6">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="h-16 w-16 rounded-full bg-gradient-to-br from-purple-400 to-pink-500 flex items-center justify-center text-white font-bold text-xl shadow-lg">
                <%= @appointment.provider.first_name.first.upcase %><%= @appointment.provider.last_name.first.upcase %>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Full Name</dt>
                  <dd class="text-lg font-semibold text-gray-900"><%= @appointment.provider.full_name %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Email</dt>
                  <dd class="text-sm text-gray-900"><%= @appointment.provider.email %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Specialty</dt>
                  <dd class="text-sm text-gray-900">
                    <% if @appointment.provider.provider_profile&.specialty.present? %>
                      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-800">
                        <%= @appointment.provider.provider_profile.specialty %>
                      </span>
                    <% else %>
                      <span class="text-gray-400">Not specified</span>
                    <% end %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Actions</dt>
                  <dd>
                    <% if @appointment.provider.provider_profile %>
                      <%= link_to admin_provider_profile_path(@appointment.provider.provider_profile),
                        class: "inline-flex items-center text-purple-600 hover:text-purple-700 text-sm font-medium transition-colors" do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        View Profile
                      <% end %>
                    <% else %>
                      <span class="text-gray-400 text-sm">No profile available</span>
                    <% end %>
                  </dd>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%# Right Column - Service & Payment Details %>
    <div class="lg:col-span-1 space-y-6">

      <%# Service Details Card %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-emerald-50 to-green-50 border-b border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-emerald-100 rounded-lg mr-3">
              <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Service Details</h3>
          </div>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500 mb-2">Service Name</dt>
              <dd class="text-lg font-semibold text-gray-900"><%= @appointment.service.name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 mb-2">Price</dt>
              <dd class="text-2xl font-bold text-emerald-600">$<%= number_with_precision(@appointment.service.price, precision: 2) %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 mb-2">Duration</dt>
              <dd class="text-sm text-gray-900"><%= @appointment.service.duration_minutes %> minutes</dd>
            </div>
            <% if @appointment.service.description.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 mb-2">Description</dt>
                <dd class="text-sm text-gray-700 leading-relaxed"><%= @appointment.service.description %></dd>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <%# Payment Information Card %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-yellow-50 to-orange-50 border-b border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-yellow-100 rounded-lg mr-3">
              <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Payment Information</h3>
          </div>
        </div>
        <div class="p-6">
          <% if @payment %>
            <div class="space-y-4">
              <div class="bg-gray-50 rounded-lg p-4">
                <dt class="text-sm font-medium text-gray-500 mb-2">Payment Status</dt>
                <dd>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold <%= case @payment.status
                    when 'succeeded' then 'bg-green-100 text-green-800'
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    when 'failed' then 'bg-red-100 text-red-800'
                    else 'bg-gray-100 text-gray-800'
                  end %>">
                    <span class="h-2 w-2 rounded-full <%= case @payment.status
                      when 'succeeded' then 'bg-green-600'
                      when 'pending' then 'bg-yellow-600'
                      when 'failed' then 'bg-red-600'
                      else 'bg-gray-600'
                    end %> mr-2"></span>
                    <%= @payment.status.humanize %>
                  </span>
                </dd>
              </div>

              <div class="bg-gray-50 rounded-lg p-4">
                <dt class="text-sm font-medium text-gray-500 mb-2">Amount</dt>
                <dd class="text-xl font-bold text-gray-900">$<%= number_with_precision(@payment.amount, precision: 2) %> <span class="text-sm font-normal text-gray-500"><%= @payment.currency.upcase %></span></dd>
              </div>

              <% if @payment.stripe_payment_intent_id.present? %>
                <div class="bg-gray-50 rounded-lg p-4">
                  <dt class="text-sm font-medium text-gray-500 mb-2">Stripe Payment ID</dt>
                  <dd class="text-xs text-gray-900 font-mono bg-white px-2 py-1 rounded border">
                    <%= @payment.stripe_payment_intent_id %>
                  </dd>
                </div>
              <% end %>

              <div class="bg-gray-50 rounded-lg p-4">
                <dt class="text-sm font-medium text-gray-500 mb-2">Payment Date</dt>
                <dd class="text-sm text-gray-900">
                  <%= @payment.paid_at ? @payment.paid_at.strftime("%B %d, %Y at %I:%M %p") : "Not paid yet" %>
                </dd>
              </div>

              <div class="pt-4">
                <%= link_to admin_payment_path(@payment),
                  class: "inline-flex items-center w-full justify-center bg-gradient-to-r from-yellow-600 to-orange-700 hover:from-yellow-700 hover:to-orange-800 text-white px-4 py-2 rounded-lg text-sm font-semibold transition-all duration-200 shadow-md hover:shadow-lg" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  View Payment Details
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <p class="text-sm text-gray-500">No payment information available</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Cancellation Information (if applicable) %>
  <% if @appointment.status.start_with?('cancelled_') %>
    <div class="lg:col-span-3 mt-6">
      <div class="bg-white rounded-xl shadow-lg overflow-hidden border-l-4 border-red-500">
        <div class="px-6 py-4 bg-gradient-to-r from-red-50 to-pink-50 border-b border-gray-200">
          <div class="flex items-center">
            <div class="p-2 bg-red-100 rounded-lg mr-3">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Cancellation Information</h3>
          </div>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-red-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-2">Cancelled By</dt>
              <dd class="text-lg font-semibold text-red-700">
                <%= @appointment.status == 'cancelled_by_patient' ? 'Patient' : 'Provider' %>
              </dd>
            </div>
            <div class="bg-red-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500 mb-2">Cancellation Date</dt>
              <dd class="text-sm text-gray-900"><%= @appointment.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
            </div>
            <% if @appointment.cancellation_reason.present? %>
              <div class="md:col-span-2 bg-red-50 rounded-lg p-4">
                <dt class="text-sm font-medium text-gray-500 mb-2">Cancellation Reason</dt>
                <dd class="text-sm text-gray-900 leading-relaxed"><%= @appointment.cancellation_reason %></dd>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%# Additional Actions Section %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8 mb-12">
  <div class="bg-white rounded-xl shadow-lg p-6">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-1">Quick Actions</h3>
        <p class="text-sm text-gray-600">Manage this appointment or view related information</p>
      </div>
      <div class="flex flex-wrap items-center gap-3">
        <%= link_to admin_user_path(@appointment.patient),
          class: "inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          View Patient
        <% end %>

        <% if @appointment.provider.provider_profile %>
          <%= link_to admin_provider_profile_path(@appointment.provider.provider_profile),
            class: "inline-flex items-center bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            View Provider
          <% end %>
        <% end %>

        <% if @payment %>
          <%= link_to admin_payment_path(@payment),
            class: "inline-flex items-center bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            View Payment
          <% end %>
        <% end %>

        <%= link_to admin_appointments_path,
          class: "inline-flex items-center bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
          </svg>
          All Appointments
        <% end %>
      </div>
    </div>
  </div>
</div>
