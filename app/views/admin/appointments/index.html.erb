<% content_for :admin_page_title, "Appointments Management" %>

<!-- Filters and Search -->
<div class="bg-white rounded-lg shadow mb-6">
  <div class="px-6 py-4">
    <%= form_with url: admin_appointments_path, method: :get, class: "space-y-4" do |f| %>
      <!-- Search and Date Range Row -->
      <div class="flex flex-wrap gap-4 items-end">
        <!-- Search -->
        <div class="flex-1 min-w-[200px]">
          <%= f.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :search, value: params[:search], placeholder: "Patient, provider, or service name...", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <!-- Start Date -->
        <div class="w-48">
          <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :start_date, value: params[:start_date], class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <!-- End Date -->
        <div class="w-48">
          <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :end_date, value: params[:end_date], class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <!-- Status Filter -->
        <div class="w-48">
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :status,
              options_for_select([
                ['All Statuses', ''],
                ['Scheduled', 'scheduled'],
                ['Completed', 'completed'],
                ['Cancelled by Patient', 'cancelled_by_patient'],
                ['Cancelled by Provider', 'cancelled_by_provider'],
                ['No Show', 'no_show']
              ], params[:status]),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <!-- Submit Buttons -->
        <div>
          <%= f.submit "Filter", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <%= link_to "Clear", admin_appointments_path, class: "ml-2 px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Appointments Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
    <div>
      <h2 class="text-lg font-semibold text-gray-900">All Appointments</h2>
      <p class="text-sm text-gray-500 mt-1">Total: <%= @appointments.total_count %> appointments</p>
    </div>
  </div>

  <% if @appointments.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Patient</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date & Time</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @appointments.each do |appointment| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                #<%= appointment.id %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= appointment.patient.full_name %></div>
                <div class="text-sm text-gray-500"><%= appointment.patient.email %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= appointment.provider.full_name %></div>
                <div class="text-sm text-gray-500"><%= appointment.provider.email %></div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900"><%= appointment.service.name %></div>
                <div class="text-sm text-gray-500"><%= appointment.service.duration_minutes %> min - $<%= number_with_precision(appointment.service.price, precision: 2) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= appointment.start_time.strftime("%b %d, %Y") %><br>
                <%= appointment.start_time.strftime("%I:%M %p") %> - <%= appointment.end_time.strftime("%I:%M %p") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case appointment.status
                      when 'scheduled' then 'bg-blue-100 text-blue-800'
                      when 'completed' then 'bg-green-100 text-green-800'
                      when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-100 text-red-800'
                      when 'no_show' then 'bg-gray-100 text-gray-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= appointment.status.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View Details", admin_appointment_path(appointment), class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @appointments.total_pages > 1 %>
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <div class="flex items-center justify-between">
          <div class="text-sm text-gray-700">
            Showing <%= @appointments.offset_value + 1 %> to <%= [@appointments.offset_value + @appointments.limit_value, @appointments.total_count].min %> of <%= @appointments.total_count %> results
          </div>
          <div class="flex gap-2">
            <%= paginate @appointments %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="px-6 py-12 text-center text-gray-500">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No appointments found</h3>
      <p class="mt-1 text-sm text-gray-500">Try adjusting your search or filter criteria</p>
    </div>
  <% end %>
</div>
