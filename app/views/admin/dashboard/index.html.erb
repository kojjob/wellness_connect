<% content_for :admin_page_title, "Platform Overview" %>

<!-- Stats Overview Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Users -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Total Users</p>
        <p class="text-3xl font-bold text-gray-900 mt-2"><%= number_with_delimiter(@total_users) %></p>
      </div>
      <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
        </svg>
      </div>
    </div>
    <div class="mt-4 flex items-center gap-4 text-sm">
      <span class="text-gray-600">Patients: <%= @total_patients %></span>
      <span class="text-gray-600">Providers: <%= @total_providers %></span>
      <span class="text-gray-600">Admins: <%= @total_admins %></span>
    </div>
  </div>

  <!-- Total Appointments -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Appointments</p>
        <p class="text-3xl font-bold text-gray-900 mt-2"><%= number_with_delimiter(@total_appointments) %></p>
      </div>
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>
    <div class="mt-4 flex flex-col gap-1 text-sm">
      <span class="text-green-600">Completed: <%= @completed_appointments %></span>
      <span class="text-blue-600">Scheduled: <%= @scheduled_appointments %></span>
      <span class="text-red-600">Cancelled: <%= @cancelled_appointments %></span>
    </div>
  </div>

  <!-- Total Revenue -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Total Revenue</p>
        <p class="text-3xl font-bold text-gray-900 mt-2">$<%= number_with_delimiter(@total_revenue, precision: 2) %></p>
      </div>
      <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>
    <div class="mt-4 flex flex-col gap-1 text-sm">
      <span class="text-green-600">Successful: <%= @successful_payments %></span>
      <span class="text-yellow-600">Pending: <%= @pending_payments %></span>
      <span class="text-red-600">Failed: <%= @failed_payments %></span>
    </div>
  </div>

  <!-- Platform Rating -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Platform Rating</p>
        <p class="text-3xl font-bold text-gray-900 mt-2"><%= @average_platform_rating %></p>
      </div>
      <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
      </div>
    </div>
    <div class="mt-4 text-sm">
      <span class="text-gray-600">Total Reviews: <%= number_with_delimiter(@total_reviews) %></span>
    </div>
  </div>
</div>

<!-- Activity Sections -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Recent Users -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Recent Users</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% @recent_users.each do |user| %>
        <div class="px-6 py-4 hover:bg-gray-50 transition">
          <%= link_to admin_user_path(user), class: "flex items-center justify-between" do %>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full <%= user.provider? ? 'bg-purple-100 text-purple-600' : 'bg-blue-100 text-blue-600' %> flex items-center justify-center">
                <span class="font-semibold"><%= user.first_name.first.upcase %></span>
              </div>
              <div>
                <p class="font-medium text-gray-900"><%= user.full_name %></p>
                <p class="text-sm text-gray-500"><%= user.email %></p>
              </div>
            </div>
            <div class="text-right">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= user.provider? ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                <%= user.role.titleize %>
              </span>
              <p class="text-sm text-gray-500 mt-1"><%= time_ago_in_words(user.created_at) %> ago</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="px-6 py-3 bg-gray-50 text-center">
      <%= link_to "View All Users", admin_users_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>

  <!-- Recent Appointments -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Recent Appointments</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% @recent_appointments.each do |appointment| %>
        <div class="px-6 py-4 hover:bg-gray-50 transition">
          <%= link_to admin_appointment_path(appointment), class: "block" do %>
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <p class="font-medium text-gray-900"><%= appointment.service.name %></p>
                <p class="text-sm text-gray-600 mt-1">
                  Patient: <%= appointment.patient.full_name %> â†’
                  Provider: <%= appointment.provider.full_name %>
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  <%= appointment.start_time.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= case appointment.status
                    when 'scheduled' then 'bg-blue-100 text-blue-800'
                    when 'completed' then 'bg-green-100 text-green-800'
                    when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-100 text-red-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= appointment.status.humanize %>
              </span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="px-6 py-3 bg-gray-50 text-center">
      <%= link_to "View All Appointments", admin_appointments_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>

<!-- Recent Payments -->
<div class="mt-6 bg-white rounded-lg shadow">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">Recent Payments</h2>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payer</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @recent_payments.each do |payment| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to "##{payment.id}", admin_payment_path(payment), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= payment.payer.full_name %></div>
              <div class="text-sm text-gray-500"><%= payment.payer.email %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">$<%= number_with_precision(payment.amount / 100.0, precision: 2) %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= case payment.status
                    when 'succeeded' then 'bg-green-100 text-green-800'
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    when 'failed' then 'bg-red-100 text-red-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= payment.status.titleize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= payment.created_at.strftime("%b %d, %Y %I:%M %p") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="px-6 py-3 bg-gray-50 text-center border-t border-gray-200">
    <%= link_to "View All Payments", admin_payments_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>
