<% content_for :admin_page_title, "Platform Overview" %>

<!-- Date Range Filter -->
<%= render 'shared/date_range_picker',
           form_path: admin_dashboard_index_path,
           auto_submit: true,
           start_date: @start_date,
           end_date: @end_date %>

<!-- Export Button -->
<div class="mb-6">
  <%= link_to admin_dashboard_export_path(start_date: @start_date, end_date: @end_date),
              class: "inline-flex items-center gap-2 bg-teal-600 hover:bg-teal-700 text-white font-semibold px-6 py-3 rounded-lg transition duration-200 shadow-md hover:shadow-lg" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
    </svg>
    Export Platform Analytics
  <% end %>
</div>

<!-- Stats Overview Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Users -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Total Users</p>
        <p class="text-3xl font-bold text-gray-900 mt-2"><%= number_with_delimiter(@total_users) %></p>
      </div>
      <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
        </svg>
      </div>
    </div>
    <div class="mt-4 flex items-center gap-4 text-sm">
      <span class="text-gray-600">Patients: <%= @total_patients %></span>
      <span class="text-gray-600">Providers: <%= @total_providers %></span>
      <span class="text-gray-600">Admins: <%= @total_admins %></span>
    </div>
  </div>

  <!-- Total Appointments -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Appointments</p>
        <p class="text-3xl font-bold text-gray-900 mt-2"><%= number_with_delimiter(@total_appointments) %></p>
      </div>
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>
    <div class="mt-4 flex flex-col gap-1 text-sm">
      <span class="text-green-600">Completed: <%= @completed_appointments %></span>
      <span class="text-blue-600">Scheduled: <%= @scheduled_appointments %></span>
      <span class="text-red-600">Cancelled: <%= @cancelled_appointments %></span>
    </div>
  </div>

  <!-- Total Revenue -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Total Revenue</p>
        <p class="text-3xl font-bold text-gray-900 mt-2">$<%= number_with_delimiter(@total_revenue, precision: 2) %></p>
      </div>
      <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>
    <div class="mt-4 flex flex-col gap-1 text-sm">
      <span class="text-green-600">Successful: <%= @successful_payments %></span>
      <span class="text-yellow-600">Pending: <%= @pending_payments %></span>
      <span class="text-red-600">Failed: <%= @failed_payments %></span>
    </div>
  </div>

  <!-- Platform Rating -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Platform Rating</p>
        <p class="text-3xl font-bold text-gray-900 mt-2"><%= @average_platform_rating %></p>
      </div>
      <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
      </div>
    </div>
    <div class="mt-4 text-sm">
      <span class="text-gray-600">Total Reviews: <%= number_with_delimiter(@total_reviews) %></span>
    </div>
  </div>
</div>

<!-- Platform Performance Metrics -->
<div class="bg-white rounded-lg shadow-md p-6 mb-8">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Platform Performance</h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Payment Success Rate -->
    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-5 border border-green-200">
      <div class="flex items-center justify-between mb-2">
        <span class="text-sm font-medium text-green-700">Payment Success Rate</span>
        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="text-3xl font-bold text-green-900"><%= number_to_percentage(@payment_success_rate, precision: 1) %></div>
      <div class="text-xs text-green-600 mt-1"><%= @successful_payments %> of <%= @total_payments %> payments</div>
    </div>

    <!-- Average Transaction Value -->
    <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-5 border border-blue-200">
      <div class="flex items-center justify-between mb-2">
        <span class="text-sm font-medium text-blue-700">Avg Transaction Value</span>
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="text-3xl font-bold text-blue-900"><%= number_to_currency(@average_transaction_value, unit: "$") %></div>
      <div class="text-xs text-blue-600 mt-1">Per successful payment</div>
    </div>

    <!-- Total Services Available -->
    <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg p-5 border border-purple-200">
      <div class="flex items-center justify-between mb-2">
        <span class="text-sm font-medium text-purple-700">Active Services</span>
        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </div>
      <div class="text-3xl font-bold text-purple-900"><%= number_with_delimiter(@total_services) %></div>
      <div class="text-xs text-purple-600 mt-1">Across <%= @total_providers %> providers</div>
    </div>
  </div>
</div>

<!-- Growth Analytics Charts -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
  <!-- User Growth Chart -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">User Growth (Last 6 Months)</h3>
    <div class="space-y-3">
      <% if @users_growth_by_month.any? %>
        <% max_users = @users_growth_by_month.values.max || 1 %>
        <% @users_growth_by_month.each do |month, count| %>
          <div>
            <div class="flex justify-between items-center mb-1">
              <span class="text-sm font-medium text-gray-700"><%= month %></span>
              <span class="text-sm font-semibold text-blue-600"><%= count %> new users</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div class="bg-blue-500 h-3 rounded-full transition-all duration-300" style="width: <%= (count.to_f / max_users * 100).round(2) %>%"></div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500 text-center py-4">No user growth data available yet</p>
      <% end %>
    </div>

    <div class="mt-6 pt-4 border-t border-gray-200">
      <div class="grid grid-cols-2 gap-4 text-center">
        <div>
          <p class="text-xs text-gray-500 uppercase">Total Users</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@total_users) %></p>
        </div>
        <div>
          <p class="text-xs text-gray-500 uppercase">This Month</p>
          <p class="text-2xl font-bold text-gray-900"><%= @users_growth_by_month.values.last || 0 %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Revenue Growth Chart -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">Revenue Growth (Last 6 Months)</h3>
    <div class="space-y-3">
      <% if @revenue_by_month.any? %>
        <% max_revenue = @revenue_by_month.values.max || 1 %>
        <% @revenue_by_month.each do |month, revenue| %>
          <div>
            <div class="flex justify-between items-center mb-1">
              <span class="text-sm font-medium text-gray-700"><%= month %></span>
              <span class="text-sm font-semibold text-emerald-600"><%= number_to_currency(revenue, unit: "$") %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div class="bg-emerald-500 h-3 rounded-full transition-all duration-300" style="width: <%= (revenue / max_revenue * 100).round(2) %>%"></div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500 text-center py-4">No revenue data available yet</p>
      <% end %>
    </div>

    <div class="mt-6 pt-4 border-t border-gray-200">
      <div class="grid grid-cols-2 gap-4 text-center">
        <div>
          <p class="text-xs text-gray-500 uppercase">Total Revenue</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@total_revenue, unit: "$") %></p>
        </div>
        <div>
          <p class="text-xs text-gray-500 uppercase">This Month</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@revenue_by_month.values.last || 0, unit: "$") %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Top Performers Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
  <!-- Top Providers by Revenue -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">Top Providers by Revenue</h3>
    <% if @top_providers_by_revenue.any? %>
      <div class="space-y-3">
        <% @top_providers_by_revenue.each_with_index do |data, index| %>
          <% provider = data[:provider] %>
          <% revenue = data[:revenue] %>
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-purple-100 text-purple-600 flex items-center justify-center font-bold text-sm">
                #<%= index + 1 %>
              </div>
              <div>
                <p class="font-medium text-gray-900"><%= provider.full_name %></p>
                <p class="text-xs text-gray-500"><%= provider.email %></p>
              </div>
            </div>
            <div class="text-right">
              <p class="font-bold text-emerald-600"><%= number_to_currency(revenue, unit: "$") %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No revenue data available yet</p>
    <% end %>
  </div>

  <!-- Top Services by Bookings -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">Top Services by Bookings</h3>
    <% if @top_services_by_bookings.any? %>
      <div class="space-y-3">
        <% max_bookings = @top_services_by_bookings.first[:bookings] || 1 %>
        <% @top_services_by_bookings.each_with_index do |data, index| %>
          <% service = data[:service] %>
          <% bookings = data[:bookings] %>
          <div>
            <div class="flex items-center justify-between mb-1">
              <div class="flex items-center gap-2">
                <span class="w-6 h-6 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center font-bold text-xs">
                  <%= index + 1 %>
                </span>
                <span class="text-sm font-medium text-gray-700"><%= service.name %></span>
              </div>
              <span class="text-sm font-semibold text-blue-600"><%= bookings %> bookings</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2.5">
              <div class="bg-blue-500 h-2.5 rounded-full transition-all duration-300" style="width: <%= (bookings.to_f / max_bookings * 100).round(2) %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No booking data available yet</p>
    <% end %>
  </div>
</div>

<!-- Activity Sections -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Recent Users -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Recent Users</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% @recent_users.each do |user| %>
        <div class="px-6 py-4 hover:bg-gray-50 transition">
          <%= link_to admin_user_path(user), class: "flex items-center justify-between" do %>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full <%= user.provider? ? 'bg-purple-100 text-purple-600' : 'bg-blue-100 text-blue-600' %> flex items-center justify-center">
                <span class="font-semibold"><%= user.first_name.first.upcase %></span>
              </div>
              <div>
                <p class="font-medium text-gray-900"><%= user.full_name %></p>
                <p class="text-sm text-gray-500"><%= user.email %></p>
              </div>
            </div>
            <div class="text-right">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= user.provider? ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                <%= user.role.titleize %>
              </span>
              <p class="text-sm text-gray-500 mt-1"><%= time_ago_in_words(user.created_at) %> ago</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="px-6 py-3 bg-gray-50 text-center">
      <%= link_to "View All Users", admin_users_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>

  <!-- Recent Appointments -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Recent Appointments</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% @recent_appointments.each do |appointment| %>
        <div class="px-6 py-4 hover:bg-gray-50 transition">
          <%= link_to admin_appointment_path(appointment), class: "block" do %>
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <p class="font-medium text-gray-900"><%= appointment.service.name %></p>
                <p class="text-sm text-gray-600 mt-1">
                  Patient: <%= appointment.patient.full_name %> →
                  Provider: <%= appointment.provider.full_name %>
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  <%= appointment.start_time.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= case appointment.status
                    when 'scheduled' then 'bg-blue-100 text-blue-800'
                    when 'completed' then 'bg-green-100 text-green-800'
                    when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-100 text-red-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= appointment.status.humanize %>
              </span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="px-6 py-3 bg-gray-50 text-center">
      <%= link_to "View All Appointments", admin_appointments_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>

<!-- Recent Payments -->
<div class="mt-6 bg-white rounded-lg shadow">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">Recent Payments</h2>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payer</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @recent_payments.each do |payment| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to "##{payment.id}", admin_payment_path(payment), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= payment.payer.full_name %></div>
              <div class="text-sm text-gray-500"><%= payment.payer.email %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">$<%= number_with_precision(payment.amount / 100.0, precision: 2) %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= case payment.status
                    when 'succeeded' then 'bg-green-100 text-green-800'
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    when 'failed' then 'bg-red-100 text-red-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= payment.status.titleize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= payment.created_at.strftime("%b %d, %Y %I:%M %p") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="px-6 py-3 bg-gray-50 text-center border-t border-gray-200">
    <%= link_to "View All Payments", admin_payments_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>
