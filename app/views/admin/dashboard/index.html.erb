<% content_for :admin_page_title, "Platform Overview" %>

<div class="min-h-screen bg-gray-50 -mt-6">
  <%# Hero Header Section %>
  <section class="relative bg-gradient-to-br from-teal-600 via-gray-700 to-teal-800 text-white overflow-hidden pt-6">
    <%# Gradient Overlay %>
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-transparent" aria-hidden="true"></div>

    <%# Animated Blobs %>
    <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
      <div class="absolute top-10 right-10 w-72 h-72 bg-teal-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
      <div class="absolute bottom-10 left-10 w-72 h-72 bg-gray-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-teal-600 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-4000"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <%# Header Content %>
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-teal-200 bg-clip-text text-transparent mb-4">
          Platform Overview
        </h1>
        <p class="text-lg text-gray-300 max-w-2xl mx-auto">
          Monitor your platform's performance, user activity, and key metrics at a glance
        </p>
      </div>
    </div>
  </section>

  <%# Quick Stats Dashboard %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8 relative z-10">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <%# Total Users - Featured Card %>
      <div class="relative bg-gradient-to-br from-teal-600 to-gray-700 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1">
        <%# Decorative Background Pattern %>
        <div class="absolute inset-0 opacity-10">
          <div class="absolute top-0 right-0 w-32 h-32 bg-white rounded-full -mr-16 -mt-16"></div>
          <div class="absolute bottom-0 left-0 w-24 h-24 bg-white rounded-full -ml-12 -mb-12"></div>
        </div>

        <div class="relative p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-white/20 backdrop-blur-sm rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
              </svg>
            </div>
            <div class="flex items-center space-x-1">
              <span class="h-2 w-2 bg-green-400 rounded-full animate-pulse"></span>
              <span class="text-xs font-medium text-white/80">Live</span>
            </div>
          </div>

          <div>
            <p class="text-sm font-medium text-white/80 mb-1">Total Users</p>
            <p class="text-4xl font-bold text-white mb-2"><%= number_with_delimiter(@total_users) %></p>
            <div class="flex flex-wrap gap-2 text-xs text-white/70">
              <span>Patients: <%= @total_patients %></span>
              <span>•</span>
              <span>Providers: <%= @total_providers %></span>
              <span>•</span>
              <span>Admins: <%= @total_admins %></span>
            </div>
          </div>
        </div>
      </div>

      <%# Total Appointments %>
      <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
        <%# Accent Bar %>
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-green-500 to-emerald-500"></div>

        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="p-3 bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
              </svg>
            </div>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
              <%= number_to_percentage((@completed_appointments.to_f / @total_appointments * 100), precision: 0) if @total_appointments > 0 %>
            </span>
          </div>

          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Total Appointments</p>
            <p class="text-3xl font-bold text-gray-900 mb-2"><%= number_with_delimiter(@total_appointments) %></p>
            <div class="flex items-center text-xs text-gray-500">
              <span class="h-1.5 w-1.5 bg-green-500 rounded-full mr-2"></span>
              Completed: <%= @completed_appointments %> • Scheduled: <%= @scheduled_appointments %>
            </div>
          </div>
        </div>
      </div>

      <%# Total Revenue %>
      <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
        <%# Accent Bar %>
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-yellow-500 to-orange-500"></div>

        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="p-3 bg-gradient-to-br from-yellow-50 to-orange-50 rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-yellow-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
              </svg>
            </div>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
              Revenue
            </span>
          </div>

          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Total Revenue</p>
            <p class="text-3xl font-bold text-gray-900 mb-2">$<%= number_with_delimiter(@total_revenue, precision: 2) %></p>
            <div class="flex items-center text-xs text-gray-500">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"/>
              </svg>
              Successful: <%= @successful_payments %> • Pending: <%= @pending_payments %>
            </div>
          </div>
        </div>
      </div>

      <%# Platform Rating %>
      <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
        <%# Accent Bar %>
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-purple-500 to-pink-500"></div>

        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="p-3 bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            </div>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-800">
              <%= @total_reviews %> reviews
            </span>
          </div>

          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Platform Rating</p>
            <p class="text-3xl font-bold text-gray-900 mb-2"><%= @average_platform_rating %></p>
            <div class="flex items-center text-xs text-gray-500">
              <div class="flex items-center mr-2">
                <% 5.times do |i| %>
                  <svg class="w-3 h-3 <%= i < @average_platform_rating.round ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                <% end %>
              </div>
              Excellent rating
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%# Activity Sections %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <%# Recent Users %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-teal-50 to-gray-50 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="p-2 bg-teal-100 rounded-lg mr-3">
                <svg class="w-5 h-5 text-teal-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                </svg>
              </div>
              <h2 class="text-lg font-semibold text-gray-900">Recent Users</h2>
            </div>
            <%= link_to admin_users_path, class: "text-sm font-medium text-teal-600 hover:text-teal-700 transition-colors" do %>
              View All →
            <% end %>
          </div>
        </div>
        <div class="divide-y divide-gray-200">
          <% @recent_users.each do |user| %>
            <div class="px-6 py-4 hover:bg-gray-50 transition-colors duration-200">
              <%= link_to admin_user_path(user), class: "flex items-center justify-between" do %>
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-full bg-gradient-to-br <%= user.provider? ? 'from-teal-500 to-gray-600' : user.admin? ? 'from-gray-600 to-gray-700' : 'from-teal-400 to-teal-500' %> flex items-center justify-center text-white font-semibold text-sm">
                    <%= user.first_name.first.upcase %><%= user.last_name.first.upcase %>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900"><%= user.full_name %></p>
                    <p class="text-sm text-gray-500"><%= user.email %></p>
                  </div>
                </div>
                <div class="text-right">
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold <%= case user.role
                    when 'admin' then 'bg-red-100 text-red-800'
                    when 'provider' then 'bg-teal-100 text-teal-800'
                    else 'bg-gray-100 text-gray-800'
                  end %>">
                    <%= user.role.titleize %>
                  </span>
                  <p class="text-sm text-gray-500 mt-1"><%= time_ago_in_words(user.created_at) %> ago</p>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <%# Recent Appointments %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-green-50 to-emerald-50 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="p-2 bg-green-100 rounded-lg mr-3">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                </svg>
              </div>
              <h2 class="text-lg font-semibold text-gray-900">Recent Appointments</h2>
            </div>
            <%= link_to admin_appointments_path, class: "text-sm font-medium text-green-600 hover:text-green-700 transition-colors" do %>
              View All →
            <% end %>
          </div>
        </div>
        <div class="divide-y divide-gray-200">
          <% @recent_appointments.each do |appointment| %>
            <div class="px-6 py-4 hover:bg-gray-50 transition-colors duration-200">
              <%= link_to admin_appointment_path(appointment), class: "block" do %>
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <p class="font-medium text-gray-900"><%= appointment.service.name %></p>
                    <p class="text-sm text-gray-600 mt-1">
                      Patient: <%= appointment.patient.full_name %> →
                      Provider: <%= appointment.provider.full_name %>
                    </p>
                    <p class="text-sm text-gray-500 mt-1">
                      <%= appointment.start_time.strftime("%B %d, %Y at %I:%M %p") %>
                    </p>
                  </div>
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold
                    <%= case appointment.status
                        when 'scheduled' then 'bg-blue-100 text-blue-800'
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-100 text-red-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= appointment.status.humanize %>
                  </span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <%# Recent Payments %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8 mb-12">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-yellow-50 to-orange-50 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="p-2 bg-yellow-100 rounded-lg mr-3">
              <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-gray-900">Recent Payments</h2>
          </div>
          <%= link_to admin_payments_path, class: "text-sm font-medium text-yellow-600 hover:text-yellow-700 transition-colors" do %>
            View All →
          <% end %>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payer</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_payments.each do |payment| %>
              <tr class="hover:bg-gray-50 transition-colors duration-200">
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to "##{payment.id}", admin_payment_path(payment), class: "text-sm font-medium text-teal-600 hover:text-teal-700" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-8 w-8">
                      <div class="h-8 w-8 rounded-full bg-gradient-to-br from-teal-400 to-teal-500 flex items-center justify-center text-white font-bold text-xs">
                        <%= payment.payer.first_name.first.upcase %><%= payment.payer.last_name.first.upcase %>
                      </div>
                    </div>
                    <div class="ml-3">
                      <div class="text-sm font-medium text-gray-900"><%= payment.payer.full_name %></div>
                      <div class="text-sm text-gray-500"><%= payment.payer.email %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">$<%= number_with_precision(payment.amount / 100.0, precision: 2) %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold <%= case payment.status
                    when 'succeeded' then 'bg-green-100 text-green-800'
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    when 'failed' then 'bg-red-100 text-red-800'
                    else 'bg-gray-100 text-gray-800'
                  end %>">
                    <span class="h-1.5 w-1.5 rounded-full <%= case payment.status
                      when 'succeeded' then 'bg-green-600'
                      when 'pending' then 'bg-yellow-600'
                      when 'failed' then 'bg-red-600'
                      else 'bg-gray-600'
                    end %> mr-1"></span>
                    <%= payment.status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= payment.created_at.strftime("%b %d, %Y %I:%M %p") %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>
