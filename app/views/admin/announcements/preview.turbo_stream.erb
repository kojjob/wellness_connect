<%= turbo_stream.update "announcement-preview" do %>
  <div class="bg-white rounded-2xl shadow-xl border border-teal-200 overflow-hidden">
    <div class="bg-gradient-to-r from-teal-600 to-gray-700 px-6 py-4">
      <h3 class="text-lg font-bold text-white">Preview</h3>
    </div>
    <div class="p-6">
      <div class="flex items-start space-x-4">
        <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-gray-400 to-gray-500 flex items-center justify-center shadow-lg shadow-gray-500/30 ring-2 ring-white flex-shrink-0">
          <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="flex-1">
          <div class="flex items-center gap-3">
            <h4 class="text-base font-bold text-gray-900"><%= @announcement.title %></h4>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gradient-to-r from-teal-500 to-teal-600 text-white shadow-sm ring-2 ring-teal-100">
              <span class="flex h-2 w-2 mr-1.5">
                <span class="animate-ping absolute inline-flex h-2 w-2 rounded-full bg-white opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-white"></span>
              </span>
              New
            </span>
          </div>
          <p class="mt-2 text-sm text-gray-700"><%= @announcement.message %></p>
          <p class="mt-3 text-xs text-gray-500 font-medium">Just now</p>
        </div>
      </div>
    </div>
  </div>
<% end %>

