<% content_for :admin_page_title, "Edit User" %>

<div class="min-h-screen bg-gray-50 -mt-6">
  <%# Hero Header Section %>
  <section class="relative bg-gradient-to-br from-teal-600 via-gray-700 to-teal-800 text-white overflow-hidden pt-6 pb-16">
    <%# Animated Background Blobs %>
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-teal-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gray-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-teal-300 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <%# Breadcrumb Navigation %>
      <nav class="flex items-center space-x-2 text-sm mb-6" aria-label="Breadcrumb">
        <%= link_to admin_root_path, class: "text-white/80 hover:text-white transition-colors" do %>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
          </svg>
        <% end %>
        <svg class="w-4 h-4 text-white/60" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <%= link_to "Users", admin_users_path, class: "text-white/80 hover:text-white transition-colors" %>
        <svg class="w-4 h-4 text-white/60" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <%= link_to @user.full_name, admin_user_path(@user), class: "text-white/80 hover:text-white transition-colors" %>
        <svg class="w-4 h-4 text-white/60" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <span class="text-white font-medium">Edit</span>
      </nav>

      <%# Page Header %>
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div class="flex items-center gap-4">
          <%# User Avatar %>
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "w-16 h-16 rounded-full object-cover border-4 border-white/20 shadow-xl", alt: @user.full_name %>
          <% else %>
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-teal-400 to-gray-500 flex items-center justify-center border-4 border-white/20 shadow-xl">
              <span class="text-xl font-bold text-white"><%= @user.full_name.first.upcase %></span>
            </div>
          <% end %>

          <div>
            <h1 class="text-3xl font-bold bg-gradient-to-r from-white to-teal-200 bg-clip-text text-transparent mb-1">
              Edit User
            </h1>
            <p class="text-white/80 text-sm">Update information for <%= @user.full_name %></p>
          </div>
        </div>

        <div class="flex gap-3">
          <%= link_to admin_user_path(@user), class: "inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white rounded-lg transition-all duration-200 border border-white/20" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            View Profile
          <% end %>

          <%= link_to admin_users_path, class: "inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white rounded-lg transition-all duration-200 border border-white/20" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Users
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <%# Form Container %>
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8 pb-12 relative z-10">
    <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8">
      <%= render "form", user: @user %>
    </div>
  </section>
</div>
