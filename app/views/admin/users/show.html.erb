<% content_for :admin_page_title, "User Profile" %>

<div data-controller="admin-user-profile" data-admin-user-profile-user-id-value="<%= @user.id %>" class="min-h-screen bg-gray-50 -mt-6">
  <%# Hero Header Section %>
  <section class="relative bg-gradient-to-br from-teal-600 via-gray-700 to-teal-800 text-white overflow-hidden pt-6 pb-16">
    <%# Animated Background Blobs %>
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-teal-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gray-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-teal-300 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <%# Breadcrumb Navigation %>
      <nav class="flex items-center space-x-2 text-sm mb-6" aria-label="Breadcrumb">
        <%= link_to admin_root_path, class: "text-white/80 hover:text-white transition-colors" do %>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
          </svg>
        <% end %>
        <svg class="w-4 h-4 text-white/60" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <%= link_to "Users", admin_users_path, class: "text-white/80 hover:text-white transition-colors" %>
        <svg class="w-4 h-4 text-white/60" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <span class="text-white font-medium"><%= @user.full_name %></span>
      </nav>

      <%# User Overview Header %>
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="flex items-center gap-6">
          <%# Avatar %>
          <div class="relative flex-shrink-0">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, class: "w-24 h-24 rounded-full object-cover border-4 border-white/20 shadow-xl", alt: @user.full_name %>
            <% else %>
              <div class="w-24 h-24 rounded-full bg-gradient-to-br from-teal-400 to-gray-500 flex items-center justify-center border-4 border-white/20 shadow-xl">
                <span class="text-3xl font-bold text-white"><%= @user.full_name.first.upcase %></span>
              </div>
            <% end %>
            <%# Status Indicator %>
            <div class="absolute bottom-0 right-0 w-6 h-6 rounded-full border-4 border-white <%= @user.active? ? 'bg-green-500' : @user.suspended? ? 'bg-yellow-500' : 'bg-red-500' %>"></div>
          </div>

          <%# User Info %>
          <div>
            <h1 class="text-3xl font-bold bg-gradient-to-r from-white to-teal-200 bg-clip-text text-transparent mb-2">
              <%= @user.full_name %>
            </h1>
            <div class="flex flex-wrap items-center gap-3">
              <%# Role Badge %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold <%= @user.admin? ? 'bg-red-100 text-red-800' : @user.provider? ? 'bg-teal-100 text-teal-800' : 'bg-gray-100 text-gray-800' %>">
                <% if @user.admin? %>
                  <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                <% elsif @user.provider? %>
                  <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                  </svg>
                <% else %>
                  <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                  </svg>
                <% end %>
                <%= @user.role.titleize %>
              </span>

              <%# Status Badge %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold <%= @user.active? ? 'bg-green-100 text-green-800' : @user.suspended? ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                <span class="h-2 w-2 rounded-full mr-2 <%= @user.active? ? 'bg-green-500' : @user.suspended? ? 'bg-yellow-500' : 'bg-red-500' %>"></span>
                <%= @user.status.titleize %>
              </span>

              <%# Email %>
              <span class="text-white/80 text-sm flex items-center">
                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <%= @user.email %>
              </span>
            </div>
          </div>
        </div>

        <%# Quick Actions %>
        <div class="flex flex-wrap gap-3">
          <%= link_to edit_admin_user_path(@user), class: "inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white rounded-lg transition-all duration-200 border border-white/20" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit User
          <% end %>

          <button onclick="window.print()" class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white rounded-lg transition-all duration-200 border border-white/20">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
            </svg>
            Print
          </button>

          <%= link_to admin_users_path, class: "inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white rounded-lg transition-all duration-200 border border-white/20" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Users
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <%# Tab Navigation %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8 relative z-10">
    <div class="bg-white rounded-t-2xl shadow-lg border-b border-gray-200">
      <nav class="flex space-x-8 px-6" aria-label="Tabs">
        <button data-admin-user-profile-target="tabButton" data-tab="overview" data-action="click->admin-user-profile#switchTab" class="py-4 px-1 border-b-2 border-teal-600 text-teal-600 font-medium text-sm whitespace-nowrap">
          Overview
        </button>
        <button data-admin-user-profile-target="tabButton" data-tab="activity" data-action="click->admin-user-profile#switchTab" class="py-4 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm whitespace-nowrap">
          Activity
        </button>
        <button data-admin-user-profile-target="tabButton" data-tab="settings" data-action="click->admin-user-profile#switchTab" class="py-4 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm whitespace-nowrap">
          Settings
        </button>
      </nav>
    </div>
  </section>

  <%# Main Content Area %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <%# Main Content (Left - 2 columns) %>
      <div class="lg:col-span-2 space-y-6">
        <%# Overview Tab %>
        <div data-admin-user-profile-target="tabPanel" data-tab="overview">
          <%# Personal Information Card %>
          <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
            <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <svg class="w-6 h-6 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              Personal Information
            </h2>

            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">Full Name</dt>
                <dd class="text-base text-gray-900 font-medium"><%= @user.full_name %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">Email Address</dt>
                <dd class="text-base text-gray-900"><%= @user.email %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">User ID</dt>
                <dd class="text-base text-gray-900 font-mono">#<%= @user.id %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">Time Zone</dt>
                <dd class="text-base text-gray-900"><%= @user.time_zone %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">Account Created</dt>
                <dd class="text-base text-gray-900"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">Last Updated</dt>
                <dd class="text-base text-gray-900"><%= time_ago_in_words(@user.updated_at) %> ago</dd>
              </div>

              <% if @user.status_reason.present? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500 mb-1">Status Reason</dt>
                  <dd class="text-base text-gray-900 bg-yellow-50 border border-yellow-200 rounded-lg p-3">
                    <%= @user.status_reason %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>

          <%# Role-Specific Information %>
          <% if @user.provider? && @user.provider_profile.present? %>
            <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
              <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                Provider Information
              </h2>

              <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Services Offered</dt>
                  <dd class="text-base text-gray-900 font-medium"><%= @user.provider_profile.services.count %></dd>
                </div>

                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Total Appointments</dt>
                  <dd class="text-base text-gray-900 font-medium"><%= @user.appointments_as_provider.count %></dd>
                </div>

                <div class="sm:col-span-2">
                  <%= link_to provider_profile_path(@user.provider_profile), class: "inline-flex items-center text-teal-600 hover:text-teal-700 font-medium" do %>
                    View Provider Profile
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  <% end %>
                </div>
              </dl>
            </div>
          <% elsif @user.patient? %>
            <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
              <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
                Patient Information
              </h2>

              <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Total Appointments</dt>
                  <dd class="text-base text-gray-900 font-medium"><%= @user.appointments_as_patient.count %></dd>
                </div>

                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">Payments Made</dt>
                  <dd class="text-base text-gray-900 font-medium"><%= @user.payments_made.count %></dd>
                </div>
              </dl>
            </div>
          <% end %>

          <%# Avatar Upload Card %>
          <div class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <svg class="w-6 h-6 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Profile Avatar
            </h2>

            <div class="flex items-center gap-6">
              <div class="flex-shrink-0">
                <% if @user.avatar.attached? %>
                  <%= image_tag @user.avatar, class: "w-32 h-32 rounded-full object-cover border-4 border-gray-200", alt: @user.full_name, data: { admin_user_profile_target: "avatarPreview" } %>
                <% else %>
                  <div class="w-32 h-32 rounded-full bg-gradient-to-br from-teal-400 to-gray-500 flex items-center justify-center border-4 border-gray-200" data-admin-user-profile-target="avatarPlaceholder">
                    <span class="text-4xl font-bold text-white"><%= @user.full_name.first.upcase %></span>
                  </div>
                  <img data-admin-user-profile-target="avatarPreview" class="w-32 h-32 rounded-full object-cover border-4 border-gray-200 hidden" alt="Avatar preview">
                <% end %>
              </div>

              <div class="flex-1">
                <p class="text-sm text-gray-600 mb-4">Upload a new avatar for this user. Recommended size: 400x400px. Max file size: 5MB.</p>
                
                <div class="flex gap-3">
                  <button type="button" data-action="click->admin-user-profile#selectAvatar" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-teal-600 to-gray-700 hover:from-teal-700 hover:to-gray-800 text-white rounded-lg transition-all duration-200 shadow-md hover:shadow-lg">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
                    </svg>
                    Upload Avatar
                  </button>

                  <% if @user.avatar.attached? %>
                    <button type="button" data-action="click->admin-user-profile#removeAvatar" data-admin-user-profile-target="removeAvatarButton" class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-all duration-200">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                      Remove
                    </button>
                  <% end %>
                </div>

                <input type="file" accept="image/*" data-admin-user-profile-target="avatarInput" data-action="change->admin-user-profile#handleAvatarChange" class="hidden">
              </div>
            </div>
          </div>
        </div>

        <%# Activity Tab %>
        <div data-admin-user-profile-target="tabPanel" data-tab="activity" class="hidden">
          <div class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <svg class="w-6 h-6 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Recent Activity
            </h2>

            <div class="space-y-4">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 rounded-full bg-teal-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-teal-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <p class="text-sm font-medium text-gray-900">Account Created</p>
                  <p class="text-sm text-gray-500"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                </div>
              </div>

              <% if @user.suspended_at.present? %>
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 rounded-full bg-yellow-100 flex items-center justify-center">
                      <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-900">Account Suspended</p>
                    <p class="text-sm text-gray-500"><%= @user.suspended_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                  </div>
                </div>
              <% end %>

              <% if @user.blocked_at.present? %>
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
                      <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-900">Account Blocked</p>
                    <p class="text-sm text-gray-500"><%= @user.blocked_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <%# Settings Tab %>
        <div data-admin-user-profile-target="tabPanel" data-tab="settings" class="hidden">
          <div class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <svg class="w-6 h-6 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Account Settings
            </h2>

            <div class="space-y-4">
              <div class="flex items-center justify-between py-3 border-b border-gray-200">
                <div>
                  <p class="text-sm font-medium text-gray-900">Time Zone</p>
                  <p class="text-sm text-gray-500"><%= @user.time_zone %></p>
                </div>
              </div>

              <div class="flex items-center justify-between py-3 border-b border-gray-200">
                <div>
                  <p class="text-sm font-medium text-gray-900">Account Status</p>
                  <p class="text-sm text-gray-500"><%= @user.status.titleize %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%# Sidebar (Right - 1 column) %>
      <div class="lg:col-span-1 space-y-6">
        <%# Quick Actions Card %>
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Quick Actions
          </h2>

          <div class="space-y-3">
            <%= link_to edit_admin_user_path(@user), class: "w-full inline-flex items-center justify-center px-4 py-2 bg-gradient-to-r from-teal-600 to-gray-700 hover:from-teal-700 hover:to-gray-800 text-white rounded-lg transition-all duration-200 shadow-md hover:shadow-lg" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit User
            <% end %>

            <% if @user.active? %>
              <%= button_to suspend_admin_user_path(@user), method: :post, class: "w-full inline-flex items-center justify-center px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg transition-all duration-200", data: { confirm: "Are you sure you want to suspend this user?" } do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Suspend User
              <% end %>

              <%= button_to block_admin_user_path(@user), method: :post, class: "w-full inline-flex items-center justify-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-all duration-200", data: { confirm: "Are you sure you want to block this user?" } do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                </svg>
                Block User
              <% end %>
            <% elsif @user.suspended? %>
              <%= button_to unsuspend_admin_user_path(@user), method: :post, class: "w-full inline-flex items-center justify-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-all duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Unsuspend User
              <% end %>
            <% elsif @user.blocked? %>
              <%= button_to unblock_admin_user_path(@user), method: :post, class: "w-full inline-flex items-center justify-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-all duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Unblock User
              <% end %>
            <% end %>

            <%= button_to admin_user_path(@user), method: :delete, class: "w-full inline-flex items-center justify-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition-all duration-200", data: { confirm: "Are you sure you want to delete this user? This action cannot be undone." } do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
              Delete User
            <% end %>
          </div>
        </div>

        <%# User Statistics Card %>
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            Statistics
          </h2>

          <dl class="space-y-4">
            <div class="flex items-center justify-between">
              <dt class="text-sm text-gray-600">Account Age</dt>
              <dd class="text-sm font-semibold text-gray-900"><%= time_ago_in_words(@user.created_at) %></dd>
            </div>

            <% if @user.provider? %>
              <div class="flex items-center justify-between">
                <dt class="text-sm text-gray-600">Total Appointments</dt>
                <dd class="text-sm font-semibold text-gray-900"><%= @user.appointments_as_provider.count %></dd>
              </div>
            <% elsif @user.patient? %>
              <div class="flex items-center justify-between">
                <dt class="text-sm text-gray-600">Total Appointments</dt>
                <dd class="text-sm font-semibold text-gray-900"><%= @user.appointments_as_patient.count %></dd>
              </div>

              <div class="flex items-center justify-between">
                <dt class="text-sm text-gray-600">Payments Made</dt>
                <dd class="text-sm font-semibold text-gray-900"><%= @user.payments_made.count %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>
    </div>
  </section>
</div>

<%# END app/views/admin/users/show.html.erb %>
