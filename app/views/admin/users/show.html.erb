<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">User Details</h1>
    <%= link_to "Back to Users", admin_users_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
      <div>
        <dt class="text-sm font-medium text-gray-500">Name</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.full_name %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Email</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.email %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Role</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.role.titleize %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1">
          <%= @user.status %>
        </dd>
      </div>

      <% if @user.status_reason.present? %>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Status Reason</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.status_reason %></dd>
        </div>
      <% end %>

      <div>
        <dt class="text-sm font-medium text-gray-500">Created At</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.created_at.strftime("%B %d, %Y") %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Updated At</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.updated_at.strftime("%B %d, %Y") %></dd>
      </div>
    </dl>
  </div>

  <%# Action Buttons %>
  <div class="flex gap-4">
    <%= link_to "Edit User", edit_admin_user_path(@user), class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>

    <% if @user.active? %>
      <%= button_to "Suspend User", suspend_admin_user_path(@user), method: :post, class: "bg-yellow-600 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded", data: { confirm: "Are you sure you want to suspend this user?" } %>
      <%= button_to "Block User", block_admin_user_path(@user), method: :post, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", data: { confirm: "Are you sure you want to block this user?" } %>
    <% elsif @user.suspended? %>
      <%= button_to "Unsuspend User", unsuspend_admin_user_path(@user), method: :post, class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    <% elsif @user.blocked? %>
      <%= button_to "Unblock User", unblock_admin_user_path(@user), method: :post, class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>

    <%= button_to "Delete User", admin_user_path(@user), method: :delete, class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded", data: { confirm: "Are you sure you want to delete this user? This action cannot be undone." } %>
  </div>
</div>
