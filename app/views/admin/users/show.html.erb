<% content_for :admin_page_title, "User Details" %>

<!-- Back Button -->
<div class="mb-6">
  <%= link_to admin_users_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    Back to Users
  <% end %>
</div>

<!-- User Profile Card -->
<div class="bg-white rounded-lg shadow overflow-hidden mb-6">
  <!-- Header -->
  <div class="px-6 py-4 bg-gradient-to-r from-indigo-500 to-purple-600">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <div class="w-16 h-16 rounded-full <%= @user.admin? ? 'bg-purple-100 text-purple-600' : @user.provider? ? 'bg-green-100 text-green-600' : 'bg-blue-100 text-blue-600' %> flex items-center justify-center text-2xl font-bold">
          <%= @user.first_name.first.upcase %>
        </div>
        <div class="ml-4 text-white">
          <h2 class="text-2xl font-bold"><%= @user.full_name %></h2>
          <p class="text-indigo-100"><%= @user.email %></p>
        </div>
      </div>
      <div>
        <%= link_to "Edit User", edit_admin_user_path(@user), class: "px-4 py-2 bg-white text-indigo-600 rounded-md hover:bg-indigo-50 font-medium" %>
      </div>
    </div>
  </div>

  <!-- Basic Information -->
  <div class="px-6 py-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h3>
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">First Name</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.first_name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Last Name</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.last_name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Email</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.email %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Role</dt>
        <dd class="mt-1">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
            <%= @user.admin? ? 'bg-purple-100 text-purple-800' : @user.provider? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
            <%= @user.role.titleize %>
          </span>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Account Created</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
      </div>
    </dl>
  </div>
</div>

<!-- Role-Specific Information -->
<% if @user.provider? && @user.provider_profile %>
  <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Provider Profile</h3>
    </div>
    <div class="px-6 py-6">
      <dl class="grid grid-cols-1 gap-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Specialty</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.provider_profile.specialty %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Credentials</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.provider_profile.credentials || "Not specified" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Bio</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.provider_profile.bio || "No bio provided" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Services</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.provider_profile.services.count %> services</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Total Reviews</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @user.provider_profile.total_reviews %> reviews
            <% if @user.provider_profile.total_reviews > 0 %>
              (<%= @user.provider_profile.display_rating %> average)
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
<% elsif @user.patient? && @user.patient_profile %>
  <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Patient Profile</h3>
    </div>
    <div class="px-6 py-6">
      <dl class="grid grid-cols-1 gap-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Date of Birth</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.patient_profile.date_of_birth&.strftime("%B %d, %Y") || "Not specified" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Health Goals</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.patient_profile.health_goals || "No goals specified" %></dd>
        </div>
      </dl>
    </div>
  </div>
<% end %>

<!-- Activity Statistics -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <!-- Appointments as Patient -->
  <% if @user.patient? || @user.admin? %>
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Appointments as Patient</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @user.appointments_as_patient.count %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
          </svg>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Appointments as Provider -->
  <% if @user.provider? || @user.admin? %>
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Appointments as Provider</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @user.appointments_as_provider.count %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
          </svg>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Payments Made -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Payments Made</p>
        <p class="text-3xl font-bold text-gray-900 mt-2"><%= @user.payments_made.count %></p>
      </div>
      <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"/>
          <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>
  </div>
</div>
