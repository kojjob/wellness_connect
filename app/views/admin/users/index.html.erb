<% content_for :admin_page_title, "User Management" %>

<div data-controller="admin-users" class="min-h-screen bg-gray-50">
  <%# Hero Header Section %>
  <section class="relative bg-gradient-to-br from-teal-600 via-gray-700 to-teal-800 text-white overflow-hidden">
    <%# Gradient Overlay %>
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-transparent" aria-hidden="true"></div>

    <%# Animated Blobs %>
    <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
      <div class="absolute top-10 right-10 w-72 h-72 bg-teal-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
      <div class="absolute bottom-10 left-10 w-72 h-72 bg-gray-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-teal-600 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-4000"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <%# Breadcrumbs %>
      <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <%= link_to admin_root_path, class: "text-gray-300 hover:text-teal-400 inline-flex items-center text-sm font-medium transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
              </svg>
              Dashboard
            <% end %>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-300 md:ml-2">Users</span>
            </div>
          </li>
        </ol>
      </nav>

      <%# Header Content %>
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-teal-200 bg-clip-text text-transparent mb-2">
            User Management
          </h1>
          <p class="text-lg text-gray-300">Manage all users, roles, and permissions</p>
        </div>

        <%= link_to new_admin_user_path, class: "inline-flex items-center justify-center bg-white text-teal-600 hover:bg-gray-100 px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-teal-600" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Create New User
        <% end %>
      </div>
    </div>
  </section>

  <%# Quick Stats Dashboard %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8 relative z-10">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <%# Total Users - Featured Card %>
      <div class="relative bg-gradient-to-br from-teal-600 to-gray-700 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1">
        <%# Decorative Background Pattern %>
        <div class="absolute inset-0 opacity-10">
          <div class="absolute top-0 right-0 w-32 h-32 bg-white rounded-full -mr-16 -mt-16"></div>
          <div class="absolute bottom-0 left-0 w-24 h-24 bg-white rounded-full -ml-12 -mb-12"></div>
        </div>

        <div class="relative p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-white/20 backdrop-blur-sm rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <div class="flex items-center space-x-1">
              <span class="h-2 w-2 bg-green-400 rounded-full animate-pulse"></span>
              <span class="text-xs font-medium text-white/80">Live</span>
            </div>
          </div>

          <div>
            <p class="text-sm font-medium text-white/80 mb-1">Total Users</p>
            <p class="text-4xl font-bold text-white mb-2"><%= @total_users %></p>
            <div class="flex items-center text-xs text-white/70">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"/>
              </svg>
              All time
            </div>
          </div>
        </div>
      </div>

      <%# Active Users %>
      <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
        <%# Accent Bar %>
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-green-500 to-emerald-500"></div>

        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="p-3 bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
              <%= number_to_percentage((@active_users.to_f / @total_users * 100), precision: 0) %>
            </span>
          </div>

          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Active Users</p>
            <p class="text-3xl font-bold text-gray-900 mb-2"><%= @active_users %></p>
            <div class="flex items-center text-xs text-gray-500">
              <span class="h-1.5 w-1.5 bg-green-500 rounded-full mr-2"></span>
              Currently active
            </div>
          </div>
        </div>
      </div>

      <%# Providers %>
      <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
        <%# Accent Bar %>
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-teal-500 to-cyan-500"></div>

        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="p-3 bg-gradient-to-br from-teal-50 to-cyan-50 rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-teal-100 text-teal-800">
              <%= number_to_percentage((@providers_count.to_f / @total_users * 100), precision: 0) %>
            </span>
          </div>

          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Providers</p>
            <p class="text-3xl font-bold text-gray-900 mb-2"><%= @providers_count %></p>
            <div class="flex items-center text-xs text-gray-500">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
              </svg>
              Healthcare professionals
            </div>
          </div>
        </div>
      </div>

      <%# Patients %>
      <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group transform hover:-translate-y-1 border border-gray-100">
        <%# Accent Bar %>
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 to-indigo-500"></div>

        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="p-3 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800">
              <%= number_to_percentage((@patients_count.to_f / @total_users * 100), precision: 0) %>
            </span>
          </div>

          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Patients</p>
            <p class="text-3xl font-bold text-gray-900 mb-2"><%= @patients_count %></p>
            <div class="flex items-center justify-between text-xs">
              <div class="flex items-center text-gray-500">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                </svg>
                Platform users
              </div>
              <% if @recent_signups > 0 %>
                <div class="flex items-center text-purple-600 font-semibold">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"/>
                  </svg>
                  +<%= @recent_signups %> this week
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%# Search and Filters Section %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <%= form_with url: admin_users_path, method: :get, data: { admin_users_target: "form" }, class: "bg-white rounded-xl shadow-lg p-6" do |f| %>
      <%# Search Bar %>
      <div class="mb-6">
        <label for="search" class="block text-sm font-semibold text-gray-700 mb-2">
          <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Search Users
        </label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <%= f.text_field :q,
            value: params[:q],
            placeholder: "Search by name, email, or role...",
            data: { admin_users_target: "searchInput", action: "input->admin-users#search" },
            class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all duration-200" %>
        </div>
      </div>

      <%# Filters Grid %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <%# Role Filter %>
        <div>
          <label for="role" class="block text-sm font-semibold text-gray-700 mb-2">Role</label>
          <%= f.select :role,
            options_for_select([
              ["All Roles", ""],
              ["Patient", "patient"],
              ["Provider", "provider"],
              ["Admin", "admin"]
            ], params[:role]),
            {},
            {
              data: { action: "change->admin-users#search" },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all duration-200 bg-white"
            } %>
        </div>

        <%# Status Filter %>
        <div>
          <label for="status" class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
          <%= f.select :status,
            options_for_select([
              ["All Statuses", ""],
              ["Active", "active"],
              ["Suspended", "suspended"],
              ["Blocked", "blocked"],
              ["Inactive", "inactive"]
            ], params[:status]),
            {},
            {
              data: { action: "change->admin-users#search" },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all duration-200 bg-white"
            } %>
        </div>

        <%# Start Date Filter %>
        <div>
          <label for="start_date" class="block text-sm font-semibold text-gray-700 mb-2">From Date</label>
          <%= f.date_field :start_date,
            value: params[:start_date],
            data: { action: "change->admin-users#search" },
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all duration-200" %>
        </div>

        <%# End Date Filter %>
        <div>
          <label for="end_date" class="block text-sm font-semibold text-gray-700 mb-2">To Date</label>
          <%= f.date_field :end_date,
            value: params[:end_date],
            data: { action: "change->admin-users#search" },
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all duration-200" %>
        </div>
      </div>

      <%# Action Buttons %>
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-2">
          <%= f.button "Apply Filters",
            type: "submit",
            class: "bg-gradient-to-r from-teal-600 to-gray-700 hover:from-teal-700 hover:to-gray-800 text-white px-6 py-2 rounded-lg text-sm font-semibold transition-all duration-200 shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" %>

          <%= link_to "Clear Filters", "#",
            data: { action: "click->admin-users#clearFilters" },
            class: "text-gray-700 hover:text-teal-600 hover:bg-teal-50 px-6 py-2 rounded-lg text-sm font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" %>
        </div>

        <%# View Toggle %>
        <div class="flex items-center gap-2">
          <span class="text-sm font-medium text-gray-700 mr-2">View:</span>
          <div class="inline-flex rounded-lg shadow-sm" role="group">
            <button
              type="button"
              data-admin-users-target="tableButton"
              data-action="click->admin-users#showTable"
              class="px-4 py-2 text-sm font-medium border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:z-10 transition-all duration-200">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
            </button>
            <button
              type="button"
              data-admin-users-target="gridButton"
              data-action="click->admin-users#showGrid"
              class="px-4 py-2 text-sm font-medium border border-gray-300 rounded-r-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:z-10 transition-all duration-200">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <%# Hidden inputs for sorting and pagination %>
      <%= f.hidden_field :sort, value: params[:sort] %>
      <%= f.hidden_field :direction, value: params[:direction] %>
      <%= f.hidden_field :per_page, value: params[:per_page] %>
    <% end %>
  </section>

  <%# Bulk Actions Bar (Hidden by default) %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
    <div data-admin-users-target="bulkActions" class="hidden bg-teal-50 border-l-4 border-teal-600 rounded-lg p-4 shadow-md">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-teal-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="text-sm font-semibold text-teal-900">
            <span data-admin-users-target="selectedCount">0</span> user(s) selected
          </span>
        </div>

        <div class="flex items-center gap-2">
          <%= link_to "#",
            data: { action: "click->admin-users#exportSelected" },
            class: "inline-flex items-center bg-white text-teal-600 hover:bg-teal-50 border border-teal-600 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Export to CSV
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <%# Users Table/Grid Section %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6 mb-12">
    <% if @users.any? %>
      <%# Table View %>
      <div data-admin-users-target="tableView" class="bg-white rounded-xl shadow-lg overflow-hidden">
        <%# Results Count %>
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2">
            <p class="text-sm text-gray-700">
              Showing <span class="font-semibold"><%= @users.offset_value + 1 %></span> to
              <span class="font-semibold"><%= [@users.offset_value + @users.limit_value, @users.total_count].min %></span> of
              <span class="font-semibold"><%= @users.total_count %></span> results
            </p>

            <%# Per Page Selector %>
            <%= form_with url: admin_users_path, method: :get, class: "flex items-center gap-2" do |f| %>
              <%= f.hidden_field :q, value: params[:q] %>
              <%= f.hidden_field :role, value: params[:role] %>
              <%= f.hidden_field :status, value: params[:status] %>
              <%= f.hidden_field :start_date, value: params[:start_date] %>
              <%= f.hidden_field :end_date, value: params[:end_date] %>
              <%= f.hidden_field :sort, value: params[:sort] %>
              <%= f.hidden_field :direction, value: params[:direction] %>

              <label for="per_page" class="text-sm text-gray-700">Show:</label>
              <%= f.select :per_page,
                options_for_select([20, 50, 100], @per_page),
                {},
                {
                  data: { action: "change->admin-users#search" },
                  class: "px-3 py-1 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                } %>
            <% end %>
          </div>
        </div>

        <%# Table %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <%# Select All Checkbox %>
                <th scope="col" class="px-6 py-3 text-left">
                  <input
                    type="checkbox"
                    data-admin-users-target="selectAll"
                    data-action="change->admin-users#toggleSelectAll"
                    class="h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded cursor-pointer"
