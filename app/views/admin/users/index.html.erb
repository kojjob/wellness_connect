                    <% else %>
                      <svg class="ml-2 h-4 w-4 opacity-0 group-hover:opacity-50" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                  <% end %>
                </th>

                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>

                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  <%= link_to "#",
                    data: { action: "click->admin-users#sort", column: "created_at" },
                    class: "group inline-flex items-center hover:text-teal-600 transition-colors" do %>
                    Joined
                    <% if params[:sort] == "created_at" || params[:sort].blank? %>
                      <svg class="ml-2 h-4 w-4 <%= params[:direction] == 'asc' ? 'transform rotate-180' : '' %>" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                      </svg>
                    <% else %>
                      <svg class="ml-2 h-4 w-4 opacity-0 group-hover:opacity-50" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                  <% end %>
                </th>

                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>

            <tbody class="bg-white divide-y divide-gray-200">
              <% @users.each do |user| %>
                <tr class="hover:bg-gray-50 transition-colors duration-150">
                  <%# Checkbox %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <input
                      type="checkbox"
                      value="<%= user.id %>"
                      data-admin-users-target="userCheckbox"
                      data-action="change->admin-users#updateBulkActions"
                      class="h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded cursor-pointer">
                  </td>

                  <%# User Info with Avatar %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <% if user.avatar.attached? %>
                          <%= image_tag user.avatar, class: "h-10 w-10 rounded-full object-cover", alt: user.full_name %>
                        <% else %>
                          <div class="h-10 w-10 rounded-full bg-gradient-to-br <%= user.provider? ? 'from-teal-500 to-gray-600' : user.admin? ? 'from-gray-600 to-gray-700' : 'from-teal-400 to-teal-500' %> flex items-center justify-center text-white font-bold text-sm">
                            <%= user.full_name.split.map(&:first).join.upcase[0..1] %>
                          </div>
                        <% end %>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-semibold text-gray-900"><%= user.full_name %></div>
                        <% if user.provider? && user.provider_profile.present? %>
                          <div class="text-xs text-gray-500">
                            <%= link_to "View Profile", provider_profile_path(user.provider_profile), class: "text-teal-600 hover:text-teal-700", target: "_blank" %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </td>

                  <%# Email %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= user.email %></div>
                    <% if user.respond_to?(:confirmed_at) && user.confirmed_at.present? %>
                      <div class="text-xs text-green-600 flex items-center mt-1">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        Verified
                      </div>
                    <% elsif user.respond_to?(:confirmed_at) %>
                      <div class="text-xs text-gray-500 mt-1">Not verified</div>
                    <% end %>
                  </td>

                  <%# Role Badge %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= case user.role
                      when 'admin' then 'bg-red-100 text-red-800'
                      when 'provider' then 'bg-teal-100 text-teal-800'
                      else 'bg-gray-100 text-gray-800'
                    end %>">
                      <% if user.admin? %>
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                      <% elsif user.provider? %>
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                        </svg>
                      <% else %>
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                        </svg>
                      <% end %>
                      <%= user.role.titleize %>
                    </span>
                  </td>

                  <%# Status Badge %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= user.status_badge_class %>">
                      <span class="h-2 w-2 rounded-full <%= case user.status
                        when 'active' then 'bg-green-600'
                        when 'suspended' then 'bg-yellow-600'
                        when 'blocked' then 'bg-red-600'
                      end %> mr-2"></span>
                      <%= user.status.titleize %>
                    </span>
                  </td>

                  <%# Joined Date %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= user.created_at.strftime("%b %d, %Y") %></div>
                    <div class="text-xs text-gray-500"><%= time_ago_in_words(user.created_at) %> ago</div>
                  </td>

                  <%# Actions %>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex items-center justify-end gap-2">
                      <%= link_to admin_user_path(user),
                        class: "text-teal-600 hover:text-teal-700 transition-colors",
                        title: "View user" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      <% end %>

                      <%= link_to edit_admin_user_path(user),
                        class: "text-gray-600 hover:text-teal-600 transition-colors",
                        title: "Edit user" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      <% end %>

                      <%= button_to admin_user_path(user),
                        method: :delete,
                        data: {
                          action: "click->admin-users#confirmAction",
                          confirm_message: "Are you sure you want to delete #{user.full_name}? This action cannot be undone.",
                          turbo_confirm: "Are you sure you want to delete #{user.full_name}? This action cannot be undone."
                        },
                        class: "text-red-600 hover:text-red-700 transition-colors",
                        title: "Delete user" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%# Pagination %>
        <% if @users.total_pages > 1 %>
          <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <div class="flex items-center justify-center">
              <%= paginate @users, theme: 'twitter-bootstrap-4',
                pagination_class: "pagination justify-content-center mb-0",
                nav_class: "d-flex justify-content-center" %>
            </div>
          </div>
        <% end %>
      </div>

      <%# Grid View %>
      <div data-admin-users-target="gridView" class="hidden">
        <%# Results Count %>
        <div class="bg-white rounded-t-xl shadow-lg px-6 py-4 border-b border-gray-200">
          <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2">
            <p class="text-sm text-gray-700">
              Showing <span class="font-semibold"><%= @users.offset_value + 1 %></span> to
              <span class="font-semibold"><%= [@users.offset_value + @users.limit_value, @users.total_count].min %></span> of
              <span class="font-semibold"><%= @users.total_count %></span> results
            </p>

            <%# Per Page Selector %>
            <%= form_with url: admin_users_path, method: :get, class: "flex items-center gap-2" do |f| %>
              <%= f.hidden_field :q, value: params[:q] %>
              <%= f.hidden_field :role, value: params[:role] %>
              <%= f.hidden_field :status, value: params[:status] %>
              <%= f.hidden_field :start_date, value: params[:start_date] %>
              <%= f.hidden_field :end_date, value: params[:end_date] %>
              <%= f.hidden_field :sort, value: params[:sort] %>
              <%= f.hidden_field :direction, value: params[:direction] %>

              <label for="per_page_grid" class="text-sm text-gray-700">Show:</label>
              <%= f.select :per_page,
                options_for_select([20, 50, 100], @per_page),
                {},
                {
                  id: "per_page_grid",
                  data: { action: "change->admin-users#search" },
                  class: "px-3 py-1 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                } %>
            <% end %>
          </div>
        </div>

        <%# Grid Cards %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 p-6 bg-gray-50">
          <% @users.each do |user| %>
            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 overflow-hidden group">
              <%# Card Header with Gradient %>
              <div class="relative h-24 bg-gradient-to-br <%= user.provider? ? 'from-teal-500 to-gray-600' : user.admin? ? 'from-gray-600 to-gray-700' : 'from-teal-400 to-teal-500' %>">
                <div class="absolute inset-0 bg-gradient-to-t from-gray-900/20 to-transparent"></div>

                <%# Checkbox %>
                <div class="absolute top-3 left-3">
                  <input
                    type="checkbox"
                    value="<%= user.id %>"
                    data-admin-users-target="userCheckbox"
                    data-action="change->admin-users#updateBulkActions"
                    class="h-4 w-4 text-white bg-white/20 focus:ring-white border-white/50 rounded cursor-pointer">
                </div>

                <%# Status Badge %>
                <div class="absolute top-3 right-3">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-white/90 <%= case user.status
                    when 'active' then 'text-green-700'
                    when 'suspended' then 'text-yellow-700'
                    when 'blocked' then 'text-red-700'
                  end %>">
                    <span class="h-1.5 w-1.5 rounded-full <%= case user.status
                      when 'active' then 'bg-green-600'
                      when 'suspended' then 'bg-yellow-600'
                      when 'blocked' then 'bg-red-600'
                    end %> mr-1"></span>
                    <%= user.status.titleize %>
                  </span>
                </div>
              </div>

              <%# Avatar (Overlapping header) %>
              <div class="relative px-6 -mt-12">
                <div class="flex justify-center">
                  <% if user.avatar.attached? %>
                    <%= image_tag user.avatar, class: "h-24 w-24 rounded-full object-cover border-4 border-white shadow-lg", alt: user.full_name %>
                  <% else %>
                    <div class="h-24 w-24 rounded-full bg-gradient-to-br <%= user.provider? ? 'from-teal-500 to-gray-600' : user.admin? ? 'from-gray-600 to-gray-700' : 'from-teal-400 to-teal-500' %> flex items-center justify-center text-white font-bold text-2xl border-4 border-white shadow-lg">
                      <%= user.full_name.split.map(&:first).join.upcase[0..1] %>
                    </div>
                  <% end %>
                </div>
              </div>

              <%# Card Body %>
              <div class="px-6 pb-6 pt-4 text-center">
                <%# Name %>
                <h3 class="text-lg font-bold text-gray-900 mb-1"><%= user.full_name %></h3>

                <%# Email %>
                <p class="text-sm text-gray-600 mb-2 truncate"><%= user.email %></p>

                <%# Role Badge %>
                <div class="mb-3">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= case user.role
                    when 'admin' then 'bg-red-100 text-red-800'
                    when 'provider' then 'bg-teal-100 text-teal-800'
                    else 'bg-gray-100 text-gray-800'
                  end %>">
                    <% if user.admin? %>
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                    <% elsif user.provider? %>
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                      </svg>
                    <% else %>
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                    <%= user.role.titleize %>
                  </span>
                </div>

                <%# Meta Info %>
                <div class="flex items-center justify-center gap-4 text-xs text-gray-500 mb-4">
                  <div class="flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <%= time_ago_in_words(user.created_at) %> ago
                  </div>
                  <% if user.respond_to?(:confirmed_at) && user.confirmed_at.present? %>
                    <div class="flex items-center text-green-600">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                      Verified
                    </div>
                  <% end %>
                </div>

                <%# Actions %>
                <div class="flex items-center justify-center gap-2">
                  <%= link_to admin_user_path(user),
                    class: "flex-1 inline-flex items-center justify-center bg-teal-600 hover:bg-teal-700 text-white px-3 py-2 rounded-lg text-xs font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    View
                  <% end %>

                  <%= link_to edit_admin_user_path(user),
                    class: "flex-1 inline-flex items-center justify-center border-2 border-teal-600 text-teal-600 hover:bg-teal-50 px-3 py-2 rounded-lg text-xs font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Edit
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <%# Pagination for Grid View %>
        <% if @users.total_pages > 1 %>
          <div class="bg-white rounded-b-xl shadow-lg px-6 py-4 border-t border-gray-200">
            <div class="flex items-center justify-center">
              <%= paginate @users, theme: 'twitter-bootstrap-4',
                pagination_class: "pagination justify-content-center mb-0",
                nav_class: "d-flex justify-content-center" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <%# Empty State %>
      <div class="bg-white rounded-xl shadow-lg p-12 text-center">
