                </th>

                <%# Sortable Headers %>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  <%= link_to "#",
                    data: { action: "click->admin-users#sort", column: "first_name" },
                    class: "group inline-flex items-center hover:text-teal-600 transition-colors" do %>
                    Name
                    <% if params[:sort] == "first_name" %>
                      <svg class="ml-2 h-4 w-4 <%= params[:direction] == 'asc' ? 'transform rotate-180' : '' %>" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
