<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Edit Availability</h1>
      <p class="text-gray-600 mt-1">Update your availability time slot</p>
    </div>

    <div class="px-6 py-6">
      <%= render "form", availability: @availability, provider_profile: @provider_profile %>
    </div>
  </div>

  <div class="mt-6 flex justify-between">
    <%= link_to "← Back to Availabilities", provider_profile_availabilities_path(@provider_profile), class: "text-blue-600 hover:text-blue-800" %>
    <%= link_to "View Details", provider_profile_availability_path(@provider_profile, @availability), class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
