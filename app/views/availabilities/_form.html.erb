<%= form_with(model: [@provider_profile, availability], local: true, class: "space-y-6") do |form| %>
  <% if availability.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
      <h2 class="font-semibold mb-2"><%= pluralize(availability.errors.count, "error") %> prohibited this availability from being saved:</h2>
      <ul class="list-disc list-inside">
        <% availability.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :start_time, "Start Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.datetime_local_field :start_time, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div>
    <%= form.label :end_time, "End Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.datetime_local_field :end_time, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="flex items-center">
    <%= form.check_box :is_booked, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= form.label :is_booked, "Is Booked", class: "ml-2 block text-sm text-gray-700" %>
  </div>

  <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200">
    <%= link_to "Cancel", provider_profile_availabilities_path(@provider_profile), class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition duration-200" %>
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-lg transition duration-200" %>
  </div>
<% end %>
