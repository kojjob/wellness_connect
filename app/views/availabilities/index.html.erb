<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Availability Schedule</h1>
      <p class="text-gray-600 mt-2">Provider: <%= @provider_profile.user.first_name %> <%= @provider_profile.user.last_name %></p>
    </div>
    <% if user_signed_in? && current_user == @provider_profile.user %>
      <%= link_to "Add Availability", new_provider_profile_availability_path(@provider_profile), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition duration-200" %>
    <% end %>
  end

  <% if @availabilities.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Start Time</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">End Time</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <% if user_signed_in? && current_user == @provider_profile.user %>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            <% end %>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @availabilities.each do |availability| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= availability.start_time.strftime("%B %d, %Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= availability.start_time.strftime("%I:%M %p") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= availability.end_time.strftime("%I:%M %p") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if availability.is_booked %>
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                    Booked
                  </span>
                <% else %>
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    Available
                  </span>
                <% end %>
              </td>
              <% if user_signed_in? && current_user == @provider_profile.user %>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "Edit", edit_provider_profile_availability_path(@provider_profile, availability), class: "text-blue-600 hover:text-blue-900 mr-4" %>
                  <%= link_to "Delete", provider_profile_availability_path(@provider_profile, availability), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
      <p class="text-gray-600 text-lg">No availability slots have been created yet.</p>
      <% if user_signed_in? && current_user == @provider_profile.user %>
        <p class="text-gray-500 mt-2">Add your first availability slot to start receiving bookings.</p>
        <%= link_to "Add Availability", new_provider_profile_availability_path(@provider_profile), class: "inline-block mt-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition duration-200" %>
      <% end %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "â† Back to Provider Profile", provider_profile_path(@provider_profile), class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
