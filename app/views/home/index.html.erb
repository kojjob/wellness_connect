<% content_for :title, "WellnessConnect - Connect with Qualified Service Providers" %>
<% content_for :head do %>
  <meta name="description" content="WellnessConnect connects you with qualified service providers for virtual consultations. Book wellness coaches, business consultants, legal advisors, and more.">
  <meta name="keywords" content="wellness, coaching, consulting, virtual appointments, professional services">
  <meta property="og:title" content="WellnessConnect - Professional Services Marketplace">
  <meta property="og:description" content="Connect with qualified service providers for virtual consultations and professional services.">
  <meta property="og:type" content="website">
<% end %>

<div class="w-full">
  <!-- Hero Section - Dark Background with Image -->
  <section class="relative min-h-screen flex items-center bg-gradient-to-br from-gray-900 via-gray-800 to-indigo-900 pt-20 pb-16 overflow-hidden" role="banner">
    <!-- Background Image Overlay -->
    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-20" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;1920&quot; height=&quot;1080&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Crect fill=&quot;%23000&quot; width=&quot;1920&quot; height=&quot;1080&quot;/%3E%3C/svg%3E');" aria-hidden="true"></div>

    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-transparent" aria-hidden="true"></div>

    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
      <div class="absolute top-20 right-20 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
      <div class="absolute bottom-20 left-20 w-96 h-96 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 w-96 h-96 bg-pink-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-4000"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Left Column - Content -->
        <div class="text-left z-10">
          <!-- Trust Badge -->
          <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full mb-6">
            <svg class="w-4 h-4 text-emerald-400 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span class="text-sm font-semibold text-white">Trusted by 10,000+ Patients</span>
          </div>

          <!-- Main Headline -->
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white leading-tight mb-6">
            Transform Your
            <span class="block mt-2 bg-gradient-to-r from-emerald-400 via-teal-400 to-cyan-400 bg-clip-text text-transparent">Healthcare Journey</span>
          </h1>

          <!-- Subheadline -->
          <p class="text-xl md:text-2xl text-gray-300 mb-10 leading-relaxed max-w-xl">
            Connect with certified healthcare providers for virtual consultations. Access wellness coaches, therapists, nutritionists, and medical professionals from anywhere.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 mb-12">
            <%= link_to "Get Started", new_user_registration_path, class: "inline-flex items-center justify-center px-8 py-4 bg-emerald-500 hover:bg-emerald-600 text-white font-bold rounded-lg transition-all duration-300 shadow-lg hover:shadow-emerald-500/50 transform hover:-translate-y-1 active:translate-y-0", "aria-label": "Get started with WellnessConnect" %>
            <%= link_to "#how-it-works", class: "inline-flex items-center justify-center px-8 py-4 bg-white/10 hover:bg-white/20 backdrop-blur-sm border-2 border-white/30 text-white font-bold rounded-lg transition-all duration-300 group" do %>
              Learn More
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            <% end %>
          </div>

          <!-- Stats -->
          <div class="grid grid-cols-3 gap-8 max-w-lg border-t border-white/20 pt-8">
            <div class="text-left">
              <div class="text-4xl font-bold text-white mb-1">5K+</div>
              <div class="text-sm text-gray-400 uppercase tracking-wide">Healthcare Providers</div>
            </div>
            <div class="text-left">
              <div class="text-4xl font-bold text-white mb-1">50K+</div>
              <div class="text-sm text-gray-400 uppercase tracking-wide">Consultations</div>
            </div>
            <div class="text-left">
              <div class="text-4xl font-bold text-white mb-1">4.9</div>
              <div class="text-sm text-gray-400 uppercase tracking-wide">Patient Rating</div>
            </div>
          </div>
        </div>

        <!-- Right Column - Visual -->
        <div class="relative hidden lg:block">
          <div class="relative w-full h-[600px] rounded-3xl overflow-hidden shadow-2xl">
            <!-- Hero Image - Healthcare Professional -->
            <picture>
              <!-- WebP format for modern browsers -->
              <source
                srcset="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=800&h=1000&fit=crop&q=80&fm=webp"
                type="image/webp">
              <!-- JPG fallback -->
              <img
                src="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=800&h=1000&fit=crop&q=80"
                alt="Healthcare professional providing virtual consultation in a modern, welcoming office environment with laptop and warm lighting"
                class="w-full h-full object-cover"
                loading="lazy"
                width="800"
                height="1000">
            </picture>

            <!-- Gradient Overlay for depth -->
            <div class="absolute inset-0 bg-gradient-to-t from-indigo-900/40 via-transparent to-transparent"></div>

            <!-- Optional: Subtle vignette effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-indigo-900/20"></div>
          </div>

          <!-- Floating Cards - Healthcare Themed -->
          <!-- Appointment Confirmation Card -->
          <div class="absolute -top-6 -right-6 bg-white rounded-2xl shadow-xl p-4 max-w-xs animate-float">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm font-semibold text-gray-900">Appointment Confirmed</div>
                <div class="text-xs text-gray-600">Virtual consultation with</div>
                <div class="text-xs font-semibold text-gray-900">Dr. Sarah Johnson</div>
                <div class="text-xs text-green-600 mt-1">Today at 2:00 PM</div>
              </div>
            </div>
          </div>

          <!-- Provider Rating Card -->
          <div class="absolute -bottom-6 -left-6 bg-white rounded-2xl shadow-xl p-4 max-w-sm">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-semibold text-gray-900">Top Rated Provider</span>
              <div class="flex items-center space-x-0.5">
                <%= 5.times.map { '<svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>' }.join.html_safe %>
              </div>
            </div>
            <p class="text-xs text-gray-700 mb-2">"Exceptional care and professionalism. Helped me manage my wellness goals effectively."</p>
            <div class="flex items-center space-x-2">
              <div class="w-8 h-8 bg-indigo-600 rounded-full flex items-center justify-center text-white text-xs font-bold">JD</div>
              <div>
                <div class="text-xs font-semibold text-gray-900">Jennifer Davis</div>
                <div class="text-xs text-gray-500">Verified Patient</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Categories Carousel Section -->
  <section id="providers" class="py-20 bg-gradient-to-br from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Explore Healthcare Services</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">Connect with certified healthcare professionals across multiple specialties</p>
      </div>

      <!-- Carousel Container -->
      <div class="relative"
           data-controller="carousel"
           data-carousel-autoplay-value="true"
           data-carousel-interval-value="10000"
           data-carousel-slides-to-show-value="4"
           data-carousel-slides-to-show-tablet-value="2"
           data-carousel-slides-to-show-mobile-value="1"
           data-action="keydown->carousel#handleKeydown"
           tabindex="0"
           role="region"
           aria-label="Healthcare service categories carousel">

        <!-- Navigation Buttons -->
        <!-- Previous Button -->
        <button
          data-carousel-target="prevButton"
          data-action="click->carousel#previous"
          class="hidden lg:flex absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 z-10 w-12 h-12 items-center justify-center bg-white rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-4 focus:ring-indigo-500/50"
          aria-label="Previous slide">
          <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>

        <!-- Next Button -->
        <button
          data-carousel-target="nextButton"
          data-action="click->carousel#next"
          class="hidden lg:flex absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 z-10 w-12 h-12 items-center justify-center bg-white rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-4 focus:ring-indigo-500/50"
          aria-label="Next slide">
          <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>

        <!-- Carousel Track Wrapper -->
        <div class="overflow-hidden" data-action="mouseenter->carousel#pauseAutoplay mouseleave->carousel#resumeAutoplay">
          <!-- Carousel Track -->
          <div
            data-carousel-target="container"
            class="flex gap-6 transition-transform duration-500 ease-out"
            role="list">

            <!-- Slide 1: Mental Health -->
            <div data-carousel-target="slide" class="flex-shrink-0 w-full md:w-[calc(50%-12px)] lg:w-[calc(25%-18px)]" role="listitem">
              <div class="group relative h-96 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer transform hover:scale-105">
                <!-- Background Image -->
                <picture>
                  <source srcset="https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?w=600&h=800&fit=crop&q=80&fm=webp" type="image/webp">
                  <img
                    src="https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?w=600&h=800&fit=crop&q=80"
                    alt="Mental health therapy session"
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    loading="lazy">
                </picture>

                <!-- Gradient Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/80 to-gray-900/30"></div>

                <!-- Content -->
                <div class="absolute inset-0 p-8 flex flex-col justify-end">
                  <!-- Icon -->
                  <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center mb-4 group-hover:bg-white/30 transition-colors">
                    <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z"/>
                    </svg>
                  </div>

                  <!-- Title -->
                  <h3 class="text-2xl font-bold text-white mb-2">Mental Health</h3>

                  <!-- Description -->
                  <p class="text-gray-200 text-sm mb-4 line-clamp-2">Licensed therapists, counselors, and psychiatrists for mental wellness</p>

                  <!-- Provider Count -->
                  <div class="flex items-center justify-between">
                    <span class="text-white font-semibold text-sm">850+ Providers</span>
                    <div class="w-8 h-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Slide 2: Wellness & Nutrition -->
            <div data-carousel-target="slide" class="flex-shrink-0 w-full md:w-[calc(50%-12px)] lg:w-[calc(25%-18px)]" role="listitem">
              <div class="group relative h-96 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer transform hover:scale-105">
                <!-- Background Image -->
                <picture>
                  <source srcset="https://images.unsplash.com/photo-1490645935967-10de6ba17061?w=600&h=800&fit=crop&q=80&fm=webp" type="image/webp">
                  <img
                    src="https://images.unsplash.com/photo-1490645935967-10de6ba17061?w=600&h=800&fit=crop&q=80"
                    alt="Healthy nutrition and wellness consultation"
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    loading="lazy">
                </picture>

                <!-- Gradient Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-emerald-900 via-emerald-900/80 to-emerald-900/30"></div>

                <!-- Content -->
                <div class="absolute inset-0 p-8 flex flex-col justify-end">
                  <!-- Icon -->
                  <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center mb-4 group-hover:bg-white/30 transition-colors">
                    <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"/>
                    </svg>
                  </div>

                  <!-- Title -->
                  <h3 class="text-2xl font-bold text-white mb-2">Wellness & Nutrition</h3>

                  <!-- Description -->
                  <p class="text-gray-200 text-sm mb-4 line-clamp-2">Nutritionists, dietitians, and wellness coaches for healthy living</p>

                  <!-- Provider Count -->
                  <div class="flex items-center justify-between">
                    <span class="text-white font-semibold text-sm">1,200+ Providers</span>
                    <div class="w-8 h-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Slide 3: Primary Care -->
            <div data-carousel-target="slide" class="flex-shrink-0 w-full md:w-[calc(50%-12px)] lg:w-[calc(25%-18px)]" role="listitem">
              <div class="group relative h-96 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer transform hover:scale-105">
                <!-- Background Image -->
                <picture>
                  <source srcset="https://images.unsplash.com/photo-1559839734-2b71ea197ec2?w=600&h=800&fit=crop&q=80&fm=webp" type="image/webp">
                  <img
                    src="https://images.unsplash.com/photo-1559839734-2b71ea197ec2?w=600&h=800&fit=crop&q=80"
                    alt="Primary care doctor consultation"
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    loading="lazy">
                </picture>

                <!-- Gradient Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-blue-900 via-blue-900/80 to-blue-900/30"></div>

                <!-- Content -->
                <div class="absolute inset-0 p-8 flex flex-col justify-end">
                  <!-- Icon -->
                  <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center mb-4 group-hover:bg-white/30 transition-colors">
                    <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"/>
                    </svg>
                  </div>

                  <!-- Title -->
                  <h3 class="text-2xl font-bold text-white mb-2">Primary Care</h3>

                  <!-- Description -->
                  <p class="text-gray-200 text-sm mb-4 line-clamp-2">General practitioners and family doctors for routine healthcare</p>

                  <!-- Provider Count -->
                  <div class="flex items-center justify-between">
                    <span class="text-white font-semibold text-sm">650+ Providers</span>
                    <div class="w-8 h-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Slide 4: Specialty Care -->
            <div data-carousel-target="slide" class="flex-shrink-0 w-full md:w-[calc(50%-12px)] lg:w-[calc(25%-18px)]" role="listitem">
              <div class="group relative h-96 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer transform hover:scale-105">
                <!-- Background Image -->
                <picture>
                  <source srcset="https://images.unsplash.com/photo-1631217868264-e5b90bb7e133?w=600&h=800&fit=crop&q=80&fm=webp" type="image/webp">
                  <img
                    src="https://images.unsplash.com/photo-1631217868264-e5b90bb7e133?w=600&h=800&fit=crop&q=80"
                    alt="Medical specialist in clinical setting"
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    loading="lazy">
                </picture>

                <!-- Gradient Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-purple-900 via-purple-900/80 to-purple-900/30"></div>

                <!-- Content -->
                <div class="absolute inset-0 p-8 flex flex-col justify-end">
                  <!-- Icon -->
                  <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center mb-4 group-hover:bg-white/30 transition-colors">
                    <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                      <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z"/>
                    </svg>
                  </div>

                  <!-- Title -->
                  <h3 class="text-2xl font-bold text-white mb-2">Specialty Care</h3>

                  <!-- Description -->
                  <p class="text-gray-200 text-sm mb-4 line-clamp-2">Specialists across cardiology, dermatology, and other medical fields</p>

                  <!-- Provider Count -->
                  <div class="flex items-center justify-between">
                    <span class="text-white font-semibold text-sm">950+ Providers</span>
                    <div class="w-8 h-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Slide 5: Physical Therapy -->
            <div data-carousel-target="slide" class="flex-shrink-0 w-full md:w-[calc(50%-12px)] lg:w-[calc(25%-18px)]" role="listitem">
              <div class="group relative h-96 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer transform hover:scale-105">
                <!-- Background Image -->
                <picture>
                  <source srcset="https://images.unsplash.com/photo-1576091160550-2173dba999ef?w=600&h=800&fit=crop&q=80&fm=webp" type="image/webp">
                  <img
                    src="https://images.unsplash.com/photo-1576091160550-2173dba999ef?w=600&h=800&fit=crop&q=80"
                    alt="Physical therapy session"
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    loading="lazy">
                </picture>

                <!-- Gradient Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-teal-900 via-teal-900/80 to-teal-900/30"></div>

                <!-- Content -->
                <div class="absolute inset-0 p-8 flex flex-col justify-end">
                  <!-- Icon -->
