              <div class="text-sm text-gray-400 uppercase tracking-wide">Patient Rating</div>
            </div>
          </div>
        </div>

        <!-- Right Column - Visual -->
        <div class="relative hidden lg:block">
          <div class="relative w-full h-[600px] rounded-3xl overflow-hidden shadow-2xl">
            <!-- Hero Image - Healthcare Professional -->
            <picture>
              <!-- WebP format for modern browsers -->
              <source
                srcset="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=800&h=1000&fit=crop&q=80&fm=webp"
                type="image/webp">
