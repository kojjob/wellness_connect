                loading="lazy"
                width="800"
                height="1000">
            </picture>

            <!-- Gradient Overlay for depth -->
            <div class="absolute inset-0 bg-gradient-to-t from-indigo-900/40 via-transparent to-transparent"></div>

            <!-- Optional: Subtle vignette effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-indigo-900/20"></div>
          </div>

          <!-- Floating Cards - Healthcare Themed -->
          <!-- Appointment Confirmation Card -->
          <div class="absolute -top-6 -right-6 bg-white rounded-2xl shadow-xl p-4 max-w-xs animate-float">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm font-semibold text-gray-900">Appointment Confirmed</div>
                <div class="text-xs text-gray-600">Virtual consultation with</div>
                <div class="text-xs font-semibold text-gray-900">Dr. Sarah Johnson</div>
                <div class="text-xs text-green-600 mt-1">Today at 2:00 PM</div>
              </div>
            </div>
          </div>

          <!-- Provider Rating Card -->
