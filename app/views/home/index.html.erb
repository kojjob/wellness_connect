                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            <% end %>
          </div>

          <!-- Stats -->
          <div class="grid grid-cols-3 gap-8 max-w-lg border-t border-white/20 pt-8">
            <div class="text-left">
              <div class="text-4xl font-bold text-white mb-1">5K+</div>
              <div class="text-sm text-gray-400 uppercase tracking-wide">Healthcare Providers</div>
            </div>
            <div class="text-left">
              <div class="text-4xl font-bold text-white mb-1">50K+</div>
              <div class="text-sm text-gray-400 uppercase tracking-wide">Consultations</div>
