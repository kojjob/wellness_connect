<% content_for :title, "Sign Up - WellnessConnect" %>

<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl w-full">
    <div class="grid lg:grid-cols-2 gap-8 items-center">

      <!-- Left Column - Branding & Benefits (Hidden on mobile) -->
      <div class="hidden lg:block">
        <div class="bg-gradient-to-br from-purple-600 to-pink-600 rounded-3xl p-12 text-white shadow-2xl">
          <!-- Logo -->
          <div class="flex items-center space-x-3 mb-8">
            <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
            </svg>
            <span class="text-3xl font-bold">WellnessConnect</span>
          </div>

          <h1 class="text-4xl font-bold mb-6 leading-tight">
            Start Your Journey to Better Wellness
          </h1>

          <p class="text-xl text-purple-100 mb-12">
            Join thousands of people connecting with expert providers for personalized guidance and support.
          </p>

          <!-- Benefits List -->
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">5,000+ Verified Providers</h3>
                <p class="text-purple-100 text-sm">Access certified professionals across multiple specialties</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Flexible Scheduling</h3>
                <p class="text-purple-100 text-sm">Book sessions that fit your schedule, 24/7</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Secure & Confidential</h3>
                <p class="text-purple-100 text-sm">Your privacy protected with enterprise-grade encryption</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Transparent Pricing</h3>
                <p class="text-purple-100 text-sm">No hidden fees, pay only for sessions you book</p>
              </div>
            </div>
          </div>

          <!-- Social Proof -->
          <div class="mt-12 pt-8 border-t border-white/20">
            <div class="flex items-center space-x-2 mb-3">
              <div class="flex -space-x-2">
                <div class="w-10 h-10 rounded-full bg-white/30 border-2 border-white"></div>
                <div class="w-10 h-10 rounded-full bg-white/30 border-2 border-white"></div>
                <div class="w-10 h-10 rounded-full bg-white/30 border-2 border-white"></div>
                <div class="w-10 h-10 rounded-full bg-white/30 border-2 border-white flex items-center justify-center text-sm font-semibold">
                  +10K
                </div>
              </div>
            </div>
            <p class="text-purple-100 text-sm">Join over 10,000 satisfied clients who found their perfect provider</p>
          </div>
        </div>
      </div>

      <!-- Right Column - Sign Up Form -->
      <div class="w-full">
        <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-12">
          <!-- Mobile Logo -->
          <div class="lg:hidden flex items-center justify-center space-x-2 mb-8">
            <svg class="w-10 h-10 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
            </svg>
            <span class="text-2xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">WellnessConnect</span>
          </div>

          <div class="text-center lg:text-left mb-8">
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">Create Account</h2>
            <p class="text-gray-600">Start your wellness journey today</p>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Name Fields Row -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <!-- First Name -->
              <div>
                <%= f.label :first_name, "First Name", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= f.text_field :first_name,
                    autofocus: true,
                    autocomplete: "given-name",
                    placeholder: "John",
                    class: "block w-full px-4 py-3.5 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition text-base",
                    aria: { label: "First name" } %>
              </div>

              <!-- Last Name -->
              <div>
                <%= f.label :last_name, "Last Name", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= f.text_field :last_name,
                    autocomplete: "family-name",
                    placeholder: "Doe",
                    class: "block w-full px-4 py-3.5 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition text-base",
                    aria: { label: "Last name" } %>
              </div>
            </div>

            <!-- Email Field -->
            <div>
              <%= f.label :email, "Email Address", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                  </svg>
                </div>
                <%= f.email_field :email,
                    autocomplete: "email",
                    placeholder: "you@example.com",
                    class: "block w-full pl-12 pr-4 py-3.5 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition text-base",
                    aria_label: "Email address" %>
              </div>
            </div>

            <!-- Password Field with Strength Indicator -->
            <div data-controller="password">
              <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
                Password
                <% if @minimum_password_length %>
                  <span class="text-xs font-normal text-gray-500">(minimum <%= @minimum_password_length %> characters)</span>
                <% end %>
              <% end %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                </div>
                <%= f.password_field :password,
                    autocomplete: "new-password",
                    placeholder: "Create a strong password",
                    data: { password_target: "input", action: "input->password#checkStrength" },
                    class: "block w-full pl-12 pr-12 py-3.5 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition text-base",
                    aria_label: "Password" %>
                <button type="button"
                        data-password-target="toggle"
                        data-action="click->password#toggle"
                        class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600 transition"
                        aria-label="Toggle password visibility">
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 010-1.113zM17.25 12a5.25 5.25 0 11-10.5 0 5.25 5.25 0 0110.5 0z" clip-rule="evenodd"></path>
                  </svg>
                </button>
              </div>

              <!-- Password Strength Indicator -->
              <div class="mt-2" data-password-target="strength">
                <div class="flex items-center justify-between mb-1">
                  <span class="text-xs text-gray-600">Password strength</span>
                  <span data-password-target="strengthText" class="text-xs font-medium"></span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2 overflow-hidden">
                  <div data-password-target="strengthBar" class="h-full rounded-full transition-all duration-300" style="width: 0%"></div>
                </div>
              </div>
            </div>

            <!-- Password Confirmation Field -->
            <div data-controller="password">
              <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <%= f.password_field :password_confirmation,
                    autocomplete: "new-password",
                    placeholder: "Re-enter your password",
                    data: { password_target: "input" },
                    class: "block w-full pl-12 pr-12 py-3.5 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition text-base",
                    aria_label: "Confirm password" %>
                <button type="button"
                        data-password-target="toggle"
                        data-action="click->password#toggle"
                        class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600 transition"
                        aria-label="Toggle password visibility">
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 010-1.113zM17.25 12a5.25 5.25 0 11-10.5 0 5.25 5.25 0 0110.5 0z" clip-rule="evenodd"></path>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Role Selection (Optional - can be hidden if you want all users to default to patient) -->
            <div>
              <%= f.label :role, "I am signing up as a", class: "block text-sm font-semibold text-gray-700 mb-3" %>
              <div class="grid grid-cols-2 gap-4">
                <label class="relative flex items-center p-4 border-2 border-gray-300 rounded-xl cursor-pointer hover:border-indigo-500 transition has-[:checked]:border-indigo-600 has-[:checked]:bg-indigo-50">
                  <%= f.radio_button :role, "patient", checked: true, class: "sr-only peer" %>
                  <div class="flex items-center space-x-3 w-full">
                    <div class="flex-shrink-0 w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center peer-checked:bg-indigo-600">
                      <svg class="w-6 h-6 text-indigo-600 peer-checked:text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <div class="font-semibold text-gray-900">Client</div>
                      <div class="text-xs text-gray-500">Find providers</div>
                    </div>
                  </div>
                </label>

                <label class="relative flex items-center p-4 border-2 border-gray-300 rounded-xl cursor-pointer hover:border-purple-500 transition has-[:checked]:border-purple-600 has-[:checked]:bg-purple-50">
                  <%= f.radio_button :role, "provider", class: "sr-only peer" %>
                  <div class="flex items-center space-x-3 w-full">
                    <div class="flex-shrink-0 w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center peer-checked:bg-purple-600">
                      <svg class="w-6 h-6 text-purple-600 peer-checked:text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"/>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <div class="font-semibold text-gray-900">Provider</div>
                      <div class="text-xs text-gray-500">Offer services</div>
                    </div>
                  </div>
                </label>
              </div>
            </div>

            <!-- Terms and Conditions -->
            <div class="flex items-start">
              <div class="flex items-center h-5 mt-1">
                <input type="checkbox"
                       id="terms"
                       name="terms"
                       required
                       class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded cursor-pointer">
              </div>
              <div class="ml-3">
                <label for="terms" class="text-sm text-gray-700 cursor-pointer">
                  I agree to the
                  <a href="#" class="text-indigo-600 hover:text-indigo-500 font-medium">Terms of Service</a>
                  and
                  <a href="#" class="text-indigo-600 hover:text-indigo-500 font-medium">Privacy Policy</a>
                </label>
              </div>
            </div>

            <!-- Submit Button -->
            <div>
              <%= f.submit "Create Account", class: "w-full flex justify-center py-3.5 px-4 border border-transparent rounded-xl shadow-lg text-base font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200 hover:scale-[1.02]" %>
            </div>
          <% end %>

          <!-- Divider -->
          <div class="mt-8">
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-4 bg-white text-gray-500">Already have an account?</span>
              </div>
            </div>
          </div>

          <!-- Sign In Link -->
          <div class="mt-6 text-center">
            <%= link_to new_session_path(resource_name), class: "inline-flex items-center justify-center w-full py-3.5 px-4 border-2 border-indigo-600 rounded-xl text-base font-semibold text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
              Sign In Instead
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
