<!-- Modern Notifications Page with Animated Background -->
<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-teal-50/30 py-8 px-4 sm:px-6 lg:px-8">
  <!-- Animated Background Blobs -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 right-20 w-96 h-96 bg-teal-500/5 rounded-full blur-3xl animate-blob"></div>
    <div class="absolute bottom-20 left-20 w-80 h-80 bg-indigo-500/5 rounded-full blur-2xl animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-purple-400/5 rounded-full blur-xl animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative max-w-5xl mx-auto">
    <!-- Hero Header Section -->
    <div class="mb-8 bg-gradient-to-r from-teal-600 via-teal-700 to-gray-700 rounded-2xl shadow-2xl overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 bg-gradient-to-r from-teal-500/20 to-gray-600/20"></div>
      <div class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/5 rounded-full blur-2xl"></div>

      <div class="relative px-8 py-10">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <div class="flex items-center space-x-4">
            <div class="h-16 w-16 rounded-2xl bg-white/20 backdrop-blur-sm flex items-center justify-center shadow-lg ring-2 ring-white/40">
              <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/>
              </svg>
            </div>
            <div>
              <h1 class="text-3xl font-bold text-white">Notifications</h1>
              <p class="text-teal-100 mt-1">Stay updated with your latest activities</p>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <% if current_user.notifications.unread.any? %>
              <%= link_to mark_all_as_read_notifications_path,
                  data: { turbo_method: :post },
                  class: "inline-flex items-center px-5 py-2.5 rounded-xl text-sm font-semibold text-white bg-white/20 hover:bg-white/30 backdrop-blur-sm transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" do %>
                <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Mark All Read
              <% end %>
            <% end %>

            <%= link_to edit_notification_preferences_path,
                class: "inline-flex items-center px-5 py-2.5 rounded-xl text-sm font-semibold text-teal-700 bg-white hover:bg-gray-50 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" do %>
              <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
              </svg>
              Settings
            <% end %>
          </div>
        </div>

        <!-- Stats Bar -->
        <% if @notifications.any? %>
          <div class="mt-6 grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="bg-white/10 backdrop-blur-sm rounded-xl px-4 py-3 border border-white/20">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-teal-100 text-xs font-medium">Total</p>
                  <p class="text-white text-2xl font-bold"><%= @notifications.total_count %></p>
                </div>
                <div class="h-10 w-10 rounded-lg bg-white/20 flex items-center justify-center">
                  <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                    <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                  </svg>
                </div>
              </div>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl px-4 py-3 border border-white/20">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-teal-100 text-xs font-medium">Unread</p>
                  <p class="text-white text-2xl font-bold"><%= current_user.notifications.unread.count %></p>
                </div>
                <div class="h-10 w-10 rounded-lg bg-white/20 flex items-center justify-center">
                  <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                  </svg>
                </div>
              </div>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl px-4 py-3 border border-white/20">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-teal-100 text-xs font-medium">Read</p>
                  <p class="text-white text-2xl font-bold"><%= current_user.notifications.read.count %></p>
                </div>
                <div class="h-10 w-10 rounded-lg bg-white/20 flex items-center justify-center">
                  <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%= turbo_stream_from "user_#{current_user.id}_notifications" %>

    <!-- Notifications List -->
    <% if @notifications.any? %>
      <div id="notifications" class="space-y-4">
        <%= render @notifications %>
      </div>

      <!-- Pagination -->
      <% if @notifications.total_pages > 1 %>
        <div class="mt-8 bg-white rounded-2xl shadow-xl border border-gray-200 p-6">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-600">
              Showing <span class="font-semibold text-gray-900"><%= @notifications.offset_value + 1 %></span> to
              <span class="font-semibold text-gray-900"><%= [@notifications.offset_value + @notifications.length, @notifications.total_count].min %></span> of
              <span class="font-semibold text-gray-900"><%= @notifications.total_count %></span> notifications
            </div>
            <div class="flex items-center space-x-2">
              <%= paginate @notifications, theme: 'twitter-bootstrap-4' %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Enhanced Empty State -->
      <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden">
        <div class="relative px-8 py-16 text-center">
          <!-- Decorative background -->
          <div class="absolute inset-0 bg-gradient-to-br from-teal-50/50 via-white to-indigo-50/50"></div>

          <div class="relative">
            <!-- Animated icon -->
            <div class="mx-auto h-24 w-24 rounded-2xl bg-gradient-to-br from-teal-100 to-indigo-100 flex items-center justify-center mb-6 shadow-lg">
              <svg class="h-12 w-12 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
            </div>

            <h3 class="text-2xl font-bold bg-gradient-to-r from-teal-600 to-gray-700 bg-clip-text text-transparent mb-3">
              All Caught Up!
            </h3>
            <p class="text-gray-600 mb-8 max-w-md mx-auto">
              You have no notifications at the moment. We'll notify you when there's something new.
            </p>

            <div class="flex items-center justify-center space-x-4">
              <%= link_to dashboard_path,
                  class: "inline-flex items-center px-6 py-3 rounded-xl text-sm font-semibold text-white bg-gradient-to-r from-teal-600 to-gray-700 hover:from-teal-700 hover:to-gray-800 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" do %>
                <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
                </svg>
                Go to Dashboard
              <% end %>

              <%= link_to edit_notification_preferences_path,
                  class: "inline-flex items-center px-6 py-3 rounded-xl text-sm font-semibold text-gray-700 bg-gray-100 hover:bg-gray-200 transition-all duration-200 shadow-sm hover:shadow-md" do %>
                <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                </svg>
                Notification Settings
              <% end %>
            </div>

            <!-- Info cards -->
            <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-3xl mx-auto">
              <div class="bg-gradient-to-br from-teal-50 to-teal-100/50 rounded-xl p-4 border border-teal-200">
                <div class="h-8 w-8 rounded-lg bg-teal-500 flex items-center justify-center mb-3 mx-auto">
                  <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-xs font-semibold text-teal-900">Appointments</p>
                <p class="text-xs text-teal-700 mt-1">Get notified about bookings</p>
              </div>

              <div class="bg-gradient-to-br from-indigo-50 to-indigo-100/50 rounded-xl p-4 border border-indigo-200">
                <div class="h-8 w-8 rounded-lg bg-indigo-500 flex items-center justify-center mb-3 mx-auto">
                  <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
                    <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
                  </svg>
                </div>
                <p class="text-xs font-semibold text-indigo-900">Messages</p>
                <p class="text-xs text-indigo-700 mt-1">Stay connected with updates</p>
              </div>

              <div class="bg-gradient-to-br from-purple-50 to-purple-100/50 rounded-xl p-4 border border-purple-200">
                <div class="h-8 w-8 rounded-lg bg-purple-500 flex items-center justify-center mb-3 mx-auto">
                  <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-xs font-semibold text-purple-900">System Updates</p>
                <p class="text-xs text-purple-700 mt-1">Important announcements</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
