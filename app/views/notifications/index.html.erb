<div class="min-h-screen bg-gray-50">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%# Match the Home hero styling (compact header for app pages) %>
    <section class="relative overflow-hidden rounded-3xl bg-linear-to-br from-gray-900 via-gray-800 to-indigo-900 px-6 sm:px-8 py-8 sm:py-10 shadow-2xl">
      <div class="absolute inset-0 bg-linear-to-r from-gray-900/95 via-gray-900/80 to-transparent" aria-hidden="true"></div>
      <div class="relative flex flex-col gap-6">
        <div class="flex items-start justify-between gap-4 flex-wrap">
          <div>
            <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full">
              <svg class="w-4 h-4 text-emerald-400 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/>
              </svg>
              <span class="text-sm font-semibold text-white">Updates</span>
            </div>

            <h1 class="mt-6 text-3xl sm:text-4xl font-bold text-white leading-tight">
              <span class="bg-linear-to-r from-emerald-400 via-teal-400 to-cyan-400 bg-clip-text text-transparent">Notifications</span>
            </h1>
            <p class="mt-2 text-gray-300">Stay up to date with bookings, messages, and account activity.</p>
          </div>

          <div class="flex items-center gap-3">
            <% if current_user.notifications.unread.any? %>
              <%= link_to mark_all_as_read_notifications_path,
                  data: { turbo_method: :post },
                  class: "inline-flex items-center px-4 py-2 rounded-xl text-sm font-semibold text-white bg-white/10 hover:bg-white/15 border border-white/20 backdrop-blur-sm transition-colors" do %>
                <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Mark all read
              <% end %>
            <% end %>

            <%= link_to edit_notification_preferences_path,
                class: "inline-flex items-center px-4 py-2 rounded-xl text-sm font-semibold text-gray-900 bg-white hover:bg-gray-50 transition-colors" do %>
              <svg class="h-4 w-4 mr-2 text-gray-700" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
              </svg>
              Settings
            <% end %>
          </div>
        </div>

        <% if @notifications.any? %>
          <% unread_count = current_user.notifications.unread.count %>
          <% read_count = current_user.notifications.read.count %>
          <div class="flex flex-wrap items-center gap-3 text-sm">
            <span class="inline-flex items-center px-3 py-1.5 rounded-full bg-white/10 border border-white/20 text-white">
              Total: <span class="ml-1 font-semibold"><%= @notifications.total_count %></span>
            </span>
            <span class="inline-flex items-center px-3 py-1.5 rounded-full bg-white/10 border border-white/20 text-white">
              Unread: <span class="ml-1 font-semibold"><%= unread_count %></span>
            </span>
            <span class="inline-flex items-center px-3 py-1.5 rounded-full bg-white/10 border border-white/20 text-white">
              Read: <span class="ml-1 font-semibold"><%= read_count %></span>
            </span>
          </div>
        <% end %>
      </div>
    </section>

    <%= turbo_stream_from "user_#{current_user.id}_notifications" %>

    <% if @notifications.any? %>
      <div class="mt-8 bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 sm:px-6 py-4 border-b border-gray-200 flex items-center justify-between">
          <h2 class="text-base font-semibold text-gray-900">Recent</h2>
          <p class="text-xs text-gray-500">Newest first</p>
        </div>

        <div id="notifications" class="divide-y divide-gray-200">
          <%= render @notifications %>
        </div>
      </div>

      <% if @notifications.total_pages > 1 %>
        <div class="mt-8 bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
          <div class="flex items-center justify-between flex-wrap gap-3">
            <div class="text-sm text-gray-600">
              Showing <span class="font-semibold text-gray-900"><%= @notifications.offset_value + 1 %></span> to
              <span class="font-semibold text-gray-900"><%= [@notifications.offset_value + @notifications.length, @notifications.total_count].min %></span> of
              <span class="font-semibold text-gray-900"><%= @notifications.total_count %></span>
            </div>
            <div class="flex items-center space-x-2">
              <%= paginate @notifications, theme: 'twitter-bootstrap-4' %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="mt-8 bg-white rounded-2xl border border-gray-200 p-10 text-center">
        <div class="mx-auto h-12 w-12 rounded-xl bg-teal-50 border border-teal-200 flex items-center justify-center">
          <svg class="h-6 w-6 text-teal-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
        </div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">All caught up</h3>
        <p class="mt-2 text-sm text-gray-600">You have no notifications right now.</p>
        <div class="mt-6 flex items-center justify-center gap-3">
          <%= link_to dashboard_path,
              class: "inline-flex items-center justify-center px-6 py-3 rounded-lg text-sm font-semibold text-white bg-emerald-500 hover:bg-emerald-600 transition-colors" do %>
            Go to Dashboard
          <% end %>
          <%= link_to edit_notification_preferences_path,
              class: "inline-flex items-center justify-center px-6 py-3 rounded-lg text-sm font-semibold text-gray-700 bg-gray-100 hover:bg-gray-200 transition-colors" do %>
            Notification Settings
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
