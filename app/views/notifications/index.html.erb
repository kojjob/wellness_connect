<!-- Modern Notifications Page with Animated Background -->
<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-teal-50/30 py-8 px-4 sm:px-6 lg:px-8">
  <!-- Animated Background Blobs -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 right-20 w-96 h-96 bg-teal-500/5 rounded-full blur-3xl animate-blob"></div>
    <div class="absolute bottom-20 left-20 w-80 h-80 bg-indigo-500/5 rounded-full blur-2xl animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-purple-400/5 rounded-full blur-xl animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative max-w-5xl mx-auto">
    <!-- Hero Header Section -->
    <div class="mb-8 bg-gradient-to-r from-teal-600 via-teal-700 to-gray-700 rounded-2xl shadow-2xl overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 bg-gradient-to-r from-teal-500/20 to-gray-600/20"></div>
      <div class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/5 rounded-full blur-2xl"></div>

      <div class="relative px-8 py-10">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <div class="flex items-center space-x-4">
            <div class="h-16 w-16 rounded-2xl bg-white/20 backdrop-blur-sm flex items-center justify-center shadow-lg ring-2 ring-white/40">
              <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/>
              </svg>
            </div>
            <div>
              <h1 class="text-3xl font-bold text-white">Notifications</h1>
              <p class="text-teal-100 mt-1">Stay updated with your latest activities</p>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <% if current_user.notifications.unread.any? %>
              <%= link_to mark_all_as_read_notifications_path,
                  data: { turbo_method: :post },
                  class: "inline-flex items-center px-5 py-2.5 rounded-xl text-sm font-semibold text-white bg-white/20 hover:bg-white/30 backdrop-blur-sm transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" do %>
                <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Mark All Read
              <% end %>
            <% end %>

            <%= link_to edit_notification_preferences_path,
                class: "inline-flex items-center px-5 py-2.5 rounded-xl text-sm font-semibold text-teal-700 bg-white hover:bg-gray-50 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" do %>
              <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
              </svg>
              Settings
            <% end %>
          </div>
        </div>

        <!-- Stats Bar -->
        <% if @notifications.any? %>
          <div class="mt-6 grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="bg-white/10 backdrop-blur-sm rounded-xl px-4 py-3 border border-white/20">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-teal-100 text-xs font-medium">Total</p>
                  <p class="text-white text-2xl font-bold"><%= @notifications.total_count %></p>
                </div>
                <div class="h-10 w-10 rounded-lg bg-white/20 flex items-center justify-center">
                  <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                    <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                  </svg>
                </div>
              </div>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl px-4 py-3 border border-white/20">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-teal-100 text-xs font-medium">Unread</p>
                  <p class="text-white text-2xl font-bold"><%= current_user.notifications.unread.count %></p>
                </div>
                <div class="h-10 w-10 rounded-lg bg-white/20 flex items-center justify-center">
                  <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                  </svg>
                </div>
              </div>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl px-4 py-3 border border-white/20">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-teal-100 text-xs font-medium">Read</p>
                  <p class="text-white text-2xl font-bold"><%= current_user.notifications.read.count %></p>
                </div>
                <div class="h-10 w-10 rounded-lg bg-white/20 flex items-center justify-center">
                  <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Notifications List -->
    <% if @notifications.any? %>
      <div class="space-y-4">
        <% @notifications.each do |notification| %>
          <div class="bg-white rounded-2xl shadow-xl border <%= notification.unread? ? 'border-teal-200 ring-2 ring-teal-100' : 'border-gray-200' %> overflow-hidden transform transition-all duration-300 hover:shadow-2xl hover:scale-[1.01]">
            <div class="p-6">
              <div class="flex items-start justify-between gap-4">
                <div class="flex items-start space-x-4 flex-1 min-w-0">
                  <!-- Icon with gradient background -->
                  <div class="flex-shrink-0">
                    <% case notification.notification_type %>
                    <% when 'appointment_booked', 'appointment_reminder' %>
                      <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-green-400 to-emerald-500 flex items-center justify-center shadow-lg shadow-green-500/30 ring-2 ring-white">
                        <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                    <% when 'appointment_cancelled' %>
                      <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-red-400 to-rose-500 flex items-center justify-center shadow-lg shadow-red-500/30 ring-2 ring-white">
                        <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                    <% when 'payment_received', 'payment_failed', 'refund_processed', 'no_refund' %>
                      <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-blue-400 to-indigo-500 flex items-center justify-center shadow-lg shadow-blue-500/30 ring-2 ring-white">
                        <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                    <% when 'new_review' %>
                      <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-yellow-400 to-orange-500 flex items-center justify-center shadow-lg shadow-yellow-500/30 ring-2 ring-white">
                        <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      </div>
                    <% else %>
                      <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-gray-400 to-gray-500 flex items-center justify-center shadow-lg shadow-gray-500/30 ring-2 ring-white">
                        <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                    <% end %>
                  </div>

              <!-- Content -->
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-3 flex-wrap">
                      <h3 class="text-base font-bold text-gray-900">
                        <%= notification.title %>
                      </h3>
                      <% if notification.unread? %>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gradient-to-r from-teal-500 to-teal-600 text-white shadow-sm ring-2 ring-teal-100">
                          <span class="flex h-2 w-2 mr-1.5">
                            <span class="animate-ping absolute inline-flex h-2 w-2 rounded-full bg-white opacity-75"></span>
                            <span class="relative inline-flex rounded-full h-2 w-2 bg-white"></span>
                          </span>
                          New
                        </span>
                      <% end %>
                    </div>
                    <p class="mt-2 text-sm text-gray-700 leading-relaxed"><%= notification.message %></p>
                    <div class="mt-3 flex items-center space-x-2">
                      <svg class="h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                      </svg>
                      <p class="text-xs text-gray-500 font-medium">
                        <%= time_ago_in_words(notification.created_at) %> ago
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center space-x-2 flex-shrink-0">
                  <% if notification.action_url.present? %>
                    <%= link_to mark_as_read_notification_path(notification),
                        data: { turbo_method: :post },
                        class: "inline-flex items-center px-4 py-2.5 rounded-xl text-sm font-semibold text-white bg-gradient-to-r from-teal-600 to-teal-700 hover:from-teal-700 hover:to-teal-800 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105",
                        aria_label: "View notification" do %>
                      <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                      </svg>
                      View
                    <% end %>
                  <% elsif notification.unread? %>
                    <%= link_to mark_as_read_notification_path(notification),
                        data: { turbo_method: :post },
                        class: "inline-flex items-center px-4 py-2.5 rounded-xl text-sm font-semibold text-gray-700 bg-gray-100 hover:bg-gray-200 transition-all duration-200 shadow-sm hover:shadow-md",
                        aria_label: "Mark as read" do %>
                      <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      Mark Read
                    <% end %>
                  <% end %>

                  <%= button_to notification_path(notification),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this notification?" },
                      class: "inline-flex items-center p-2.5 rounded-xl text-gray-400 hover:text-red-600 hover:bg-red-50 transition-all duration-200 shadow-sm hover:shadow-md",
                      aria_label: "Delete notification" do %>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @notifications.total_pages > 1 %>
        <div class="mt-8 bg-white rounded-2xl shadow-xl border border-gray-200 p-6">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-600">
              Showing <span class="font-semibold text-gray-900"><%= @notifications.offset_value + 1 %></span> to
              <span class="font-semibold text-gray-900"><%= [@notifications.offset_value + @notifications.length, @notifications.total_count].min %></span> of
              <span class="font-semibold text-gray-900"><%= @notifications.total_count %></span> notifications
            </div>
            <div class="flex items-center space-x-2">
              <%= paginate @notifications, theme: 'twitter-bootstrap-4' %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Enhanced Empty State -->
      <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden">
        <div class="relative px-8 py-16 text-center">
          <!-- Decorative background -->
          <div class="absolute inset-0 bg-gradient-to-br from-teal-50/50 via-white to-indigo-50/50"></div>

          <div class="relative">
            <!-- Animated icon -->
            <div class="mx-auto h-24 w-24 rounded-2xl bg-gradient-to-br from-teal-100 to-indigo-100 flex items-center justify-center mb-6 shadow-lg">
              <svg class="h-12 w-12 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
            </div>

            <h3 class="text-2xl font-bold bg-gradient-to-r from-teal-600 to-gray-700 bg-clip-text text-transparent mb-3">
              All Caught Up!
            </h3>
            <p class="text-gray-600 mb-8 max-w-md mx-auto">
              You have no notifications at the moment. We'll notify you when there's something new.
            </p>

            <div class="flex items-center justify-center space-x-4">
              <%= link_to dashboard_path,
                  class: "inline-flex items-center px-6 py-3 rounded-xl text-sm font-semibold text-white bg-gradient-to-r from-teal-600 to-gray-700 hover:from-teal-700 hover:to-gray-800 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" do %>
                <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
                </svg>
                Go to Dashboard
              <% end %>

              <%= link_to edit_notification_preferences_path,
                  class: "inline-flex items-center px-6 py-3 rounded-xl text-sm font-semibold text-gray-700 bg-gray-100 hover:bg-gray-200 transition-all duration-200 shadow-sm hover:shadow-md" do %>
                <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                </svg>
                Notification Settings
              <% end %>
            </div>

            <!-- Info cards -->
            <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-3xl mx-auto">
              <div class="bg-gradient-to-br from-teal-50 to-teal-100/50 rounded-xl p-4 border border-teal-200">
                <div class="h-8 w-8 rounded-lg bg-teal-500 flex items-center justify-center mb-3 mx-auto">
                  <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-xs font-semibold text-teal-900">Appointments</p>
                <p class="text-xs text-teal-700 mt-1">Get notified about bookings</p>
              </div>

              <div class="bg-gradient-to-br from-indigo-50 to-indigo-100/50 rounded-xl p-4 border border-indigo-200">
                <div class="h-8 w-8 rounded-lg bg-indigo-500 flex items-center justify-center mb-3 mx-auto">
                  <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
                    <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
                  </svg>
                </div>
                <p class="text-xs font-semibold text-indigo-900">Messages</p>
                <p class="text-xs text-indigo-700 mt-1">Stay connected with updates</p>
              </div>

              <div class="bg-gradient-to-br from-purple-50 to-purple-100/50 rounded-xl p-4 border border-purple-200">
