<div id="<%= dom_id(notification) %>" class="px-5 sm:px-6 py-4 <%= notification.unread? ? 'bg-teal-50/40' : 'bg-white' %>">
  <div class="flex items-start justify-between gap-4">
    <div class="flex items-start gap-4 flex-1 min-w-0">
      <div class="shrink-0">
        <% case notification.notification_type %>
        <% when 'appointment_booked', 'appointment_reminder' %>
          <div class="h-10 w-10 rounded-xl bg-emerald-50 border border-emerald-200 flex items-center justify-center">
            <svg class="h-5 w-5 text-emerald-700" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
            </svg>
          </div>
        <% when 'appointment_cancelled' %>
          <div class="h-10 w-10 rounded-xl bg-rose-50 border border-rose-200 flex items-center justify-center">
            <svg class="h-5 w-5 text-rose-700" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
        <% when 'payment_received', 'payment_failed', 'refund_processed', 'no_refund' %>
          <div class="h-10 w-10 rounded-xl bg-indigo-50 border border-indigo-200 flex items-center justify-center">
            <svg class="h-5 w-5 text-indigo-700" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
            </svg>
          </div>
        <% when 'new_review' %>
          <div class="h-10 w-10 rounded-xl bg-amber-50 border border-amber-200 flex items-center justify-center">
            <svg class="h-5 w-5 text-amber-700" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          </div>
        <% when 'new_message' %>
          <div class="h-10 w-10 rounded-xl bg-purple-50 border border-purple-200 flex items-center justify-center">
            <svg class="h-5 w-5 text-purple-700" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
              <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
            </svg>
          </div>
        <% else %>
          <div class="h-10 w-10 rounded-xl bg-gray-50 border border-gray-200 flex items-center justify-center">
            <svg class="h-5 w-5 text-gray-700" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
        <% end %>
      </div>

      <div class="min-w-0 flex-1">
        <div class="flex items-center gap-2 flex-wrap">
          <h3 class="text-sm sm:text-base font-semibold text-gray-900">
            <%= notification.title %>
          </h3>
          <% if notification.unread? %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-teal-50 text-teal-700 border border-teal-200">
              New
            </span>
          <% end %>
        </div>

        <p class="mt-1.5 text-sm text-gray-700"><%= notification.message %></p>
        <p class="mt-2 text-xs text-gray-500"><%= time_ago_in_words(notification.created_at) %> ago</p>
      </div>
    </div>

    <div class="shrink-0 flex items-center gap-2">
      <% if notification.action_url.present? %>
        <%= link_to mark_as_read_notification_path(notification),
            data: { turbo_method: :post },
            class: "inline-flex items-center px-4 py-2 rounded-lg text-sm font-semibold text-white bg-emerald-500 hover:bg-emerald-600 transition-colors",
            aria: { label: "View notification" } do %>
          View
        <% end %>
      <% elsif notification.unread? %>
        <%= link_to mark_as_read_notification_path(notification),
            data: { turbo_method: :post },
            class: "inline-flex items-center px-4 py-2 rounded-lg text-sm font-semibold text-gray-700 bg-gray-100 hover:bg-gray-200 transition-colors",
            aria: { label: "Mark as read" } do %>
          Mark read
        <% end %>
      <% end %>

      <%= button_to notification_path(notification),
          method: :delete,
          data: { turbo_confirm: "Are you sure you want to delete this notification?" },
          class: "inline-flex items-center p-2 rounded-lg text-gray-400 hover:text-red-600 hover:bg-red-50 transition-colors",
          aria: { label: "Delete notification" } do %>
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
      <% end %>
    </div>
  </div>
</div>
