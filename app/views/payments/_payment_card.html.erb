<div class="p-4 hover:bg-gray-50 transition-colors">
  <div class="flex items-start gap-4">
    <%# User Avatar %>
    <% user = current_user.provider? ? payment.appointment.patient : payment.appointment.provider %>
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar.variant(resize_to_limit: [48, 48]),
                    alt: user.full_name,
                    class: "w-12 h-12 rounded-full object-cover ring-2 ring-gray-200 flex-shrink-0" %>
    <% else %>
      <div class="w-12 h-12 rounded-full bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center ring-2 ring-gray-200 flex-shrink-0">
        <span class="text-white text-sm font-semibold">
          <%= user.full_name.split.map(&:first).join.upcase %>
        </span>
      </div>
    <% end %>

    <%# Payment Details %>
    <div class="flex-1 min-w-0">
      <%# Header: Service Name & Amount %>
      <div class="flex items-start justify-between gap-2 mb-2">
        <div class="flex-1 min-w-0">
          <h4 class="text-sm font-bold text-gray-900 truncate">
            <%= payment.appointment.service.name %>
          </h4>
          <p class="text-xs text-gray-600">
            <%= user.full_name %>
            <% if !current_user.provider? && user.provider_profile %>
              â€¢ <%= user.provider_profile.specialty %>
            <% end %>
          </p>
        </div>
        <div class="text-right flex-shrink-0">
          <p class="text-lg font-bold text-gray-900">
            <%= number_to_currency(payment.amount, unit: "$") %>
          </p>
        </div>
      </div>

      <%# Status Badge %>
      <div class="mb-3">
        <span class="px-2.5 py-1 inline-flex text-xs leading-5 font-semibold rounded-full
          <%= case payment.status
              when 'succeeded' then 'bg-green-100 text-green-800'
              when 'pending' then 'bg-yellow-100 text-yellow-800'
              when 'failed' then 'bg-red-100 text-red-800'
              when 'refunded' then 'bg-purple-100 text-purple-800'
              else 'bg-gray-100 text-gray-800'
              end %>">
          <%= payment.status.titleize %>
        </span>
      </div>

      <%# Payment Info Grid %>
      <div class="grid grid-cols-2 gap-3 mb-3 text-xs">
        <div>
          <p class="text-gray-500 mb-0.5">Payment Date</p>
          <p class="text-gray-900 font-medium">
            <%= payment.created_at.strftime("%b %d, %Y") %>
          </p>
          <p class="text-gray-500">
            <%= payment.created_at.strftime("%I:%M %p") %>
          </p>
        </div>
        <div>
          <p class="text-gray-500 mb-0.5">Appointment</p>
          <p class="text-gray-900 font-medium">
            <%= payment.appointment.start_time.strftime("%b %d, %Y") %>
          </p>
          <p class="text-gray-500">
            <%= payment.appointment.start_time.strftime("%I:%M %p") %>
          </p>
        </div>
      </div>

      <%# Transaction ID %>
      <% if payment.stripe_payment_intent_id.present? %>
        <div class="mb-3">
          <p class="text-xs text-gray-500 mb-0.5">Transaction ID</p>
          <p class="text-xs text-gray-700 font-mono">
            <%= truncate(payment.stripe_payment_intent_id, length: 30) %>
          </p>
        </div>
      <% end %>

      <%# Additional Status Info %>
      <% if payment.refunded? && payment.refunded_at.present? %>
        <div class="mb-3 p-2 bg-purple-50 rounded-lg border border-purple-100">
          <p class="text-xs text-purple-700">
            <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
            </svg>
            Refunded on <%= payment.refunded_at.strftime("%b %d, %Y") %>
          </p>
        </div>
      <% elsif payment.succeeded? && payment.paid_at.present? %>
        <div class="mb-3 p-2 bg-green-50 rounded-lg border border-green-100">
          <p class="text-xs text-green-700">
            <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Paid on <%= payment.paid_at.strftime("%b %d, %Y") %>
          </p>
        </div>
      <% end %>

      <%# Action Buttons %>
      <div class="flex flex-wrap gap-2">
        <%= link_to appointment_path(payment.appointment),
                    class: "inline-flex items-center gap-1.5 px-3 py-2 bg-teal-600 hover:bg-teal-700 text-white text-xs font-semibold rounded-lg transition-colors" do %>
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          View Appointment
        <% end %>

        <% if payment.succeeded? %>
          <button data-action="click->payments#downloadReceipt" data-payment-id="<%= payment.id %>" class="inline-flex items-center gap-1.5 px-3 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 text-xs font-semibold rounded-lg transition-colors">
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Download Receipt
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

