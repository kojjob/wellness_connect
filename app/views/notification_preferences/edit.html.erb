                  <p class="text-xs text-gray-600 mt-0.5">Bookings, cancellations, and reminders</p>
                </div>
                <div class="relative inline-block w-12 h-6 transition duration-200 ease-in-out">
                  <%= f.check_box :email_appointments, 
                      class: "sr-only peer",
                      id: "notification_preference_email_appointments" %>
