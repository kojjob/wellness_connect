  <!-- Animated Background Blobs -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 right-20 w-96 h-96 bg-teal-500/5 rounded-full blur-3xl animate-blob"></div>
    <div class="absolute bottom-20 left-20 w-80 h-80 bg-gray-500/5 rounded-full blur-2xl animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-teal-400/5 rounded-full blur-xl animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative max-w-4xl mx-auto">
    <!-- Header Section -->
    <div class="mb-8">
      <%= link_to notifications_path, class: "inline-flex items-center text-sm font-medium text-gray-600 hover:text-teal-600 transition-colors duration-200 mb-4" do %>
        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Notifications
      <% end %>

      <div class="flex items-center space-x-4">
        <div class="h-16 w-16 rounded-2xl bg-gradient-to-br from-teal-500 to-gray-600 flex items-center justify-center shadow-lg shadow-teal-500/30">
          <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold bg-gradient-to-r from-teal-600 via-teal-700 to-gray-700 bg-clip-text text-transparent">
            Notification Preferences
          </h1>
          <p class="text-gray-600 mt-1">Customize how you receive notifications</p>
        </div>
      </div>
    </div>

    <%= form_with model: @preference, url: notification_preferences_path, method: :patch, local: true, class: "space-y-6" do |f| %>
