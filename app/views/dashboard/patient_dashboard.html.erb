<div class="container mx-auto px-4 py-8">
  <!-- Payment Success Message -->
  <% if params[:payment_success] == 'true' %>
    <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-6 rounded-md shadow-sm">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-green-800">Payment Successful!</h3>
          <div class="mt-2 text-sm text-green-700">
            <p>Your appointment has been confirmed and payment processed successfully. You'll receive a confirmation email shortly.</p>
          </div>
          <div class="mt-3">
            <%= link_to "View Appointments", dashboard_path, class: "text-sm font-medium text-green-600 hover:text-green-500" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Payment Failed Message -->
  <% if params[:payment_failed] == 'true' %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-md shadow-sm">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-red-800">Payment Failed</h3>
          <div class="mt-2 text-sm text-red-700">
            <p>Unfortunately, your payment could not be processed. Please try again or contact support if the problem persists.</p>
          </div>
          <div class="mt-3 flex gap-4">
            <%= link_to "Try Again", providers_path, class: "text-sm font-medium text-red-600 hover:text-red-500" %>
            <span class="text-gray-400">|</span>
            <%= link_to "Contact Support", contact_path, class: "text-sm font-medium text-red-600 hover:text-red-500" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">My Dashboard</h1>
    <%= link_to dashboard_export_path(start_date: params[:start_date], end_date: params[:end_date]),
                class: "inline-flex items-center gap-2 bg-teal-600 hover:bg-teal-700 text-white font-semibold px-6 py-3 rounded-lg transition duration-200" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
      </svg>
      Export Analytics
    <% end %>
  </div>

  <!-- My Appointments Section -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">My Appointments</h2>

    <% if @appointments.any? %>
      <div class="space-y-4">
        <% @appointments.each do |appointment| %>
          <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition" id="appointment-<%= appointment.id %>">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= appointment.service.name %></h3>
                
                <div class="space-y-1 text-sm text-gray-600">
                  <p>
                    <span class="font-medium">Provider:</span>
                    <%= appointment.provider.full_name %>
                  </p>
                  
                  <p>
                    <span class="font-medium">Date:</span>
                    <%= appointment.start_time.in_time_zone(current_user.time_zone || 'UTC').strftime("%B %d, %Y") %>
                  </p>
                  
                  <p>
                    <span class="font-medium">Time:</span>
                    <%= appointment.start_time.in_time_zone(current_user.time_zone || 'UTC').strftime("%I:%M %p %Z") %>
                  </p>
                  
                  <p>
                    <span class="font-medium">Duration:</span>
                    <%= appointment.service.duration_minutes %> minutes
                  </p>
                  
                  <p>
                    <span class="font-medium">Status:</span>
                    <span class="px-2 py-1 rounded-full text-xs font-medium
                      <%= case appointment.status
                          when 'scheduled' then 'bg-green-100 text-green-800'
                          when 'completed' then 'bg-blue-100 text-blue-800'
                          when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-100 text-red-800'
                          when 'no_show' then 'bg-gray-100 text-gray-800'
                          when 'payment_pending' then 'bg-yellow-100 text-yellow-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= appointment.status.titleize %>
                    </span>
                  </p>

                  <% if appointment.payment.present? %>
                    <p>
                      <span class="font-medium">Payment:</span>
                      <span class="px-2 py-1 rounded-full text-xs font-medium
                        <%= case appointment.payment.status
                            when 'succeeded' then 'bg-green-100 text-green-800'
                            when 'pending' then 'bg-yellow-100 text-yellow-800'
                            when 'failed' then 'bg-red-100 text-red-800'
                            when 'refunded' then 'bg-purple-100 text-purple-800'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= appointment.payment.status.titleize %>
                      </span>
                      <span class="ml-2 font-semibold text-gray-900">
                        <%= number_to_currency(appointment.payment.amount, unit: "$") %>
                      </span>

                      <% if appointment.payment.refunded? %>
                        <span class="ml-2 text-xs text-gray-500">
                          (Refunded <%= time_ago_in_words(appointment.payment.refunded_at) %> ago)
                        </span>
                      <% elsif appointment.payment.succeeded? %>
                        <span class="ml-2 text-xs text-gray-500">
                          (Paid <%= time_ago_in_words(appointment.payment.paid_at) %> ago)
                        </span>
                      <% end %>
                    </p>
                  <% end %>
                </div>
              </div>

              <div class="flex flex-col gap-2 ml-4">
                <% if appointment.scheduled? %>
                  <%= button_to "Cancel Appointment",
                                cancel_appointment_path(appointment),
                                method: :patch,
                                form: { data: { turbo_confirm: "Are you sure you want to cancel this appointment?" } },
                                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">
        You don't have any appointments yet.
        <%= link_to "Browse Providers", providers_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
        to book your first session.
      </p>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
    <div class="flex flex-wrap gap-4">
      <%= link_to "Browse Providers",
                  providers_path,
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

      <%= link_to "Payment History",
                  payments_path,
                  class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
</div>
