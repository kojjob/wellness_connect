<%# Patient Dashboard - Clean Modern Design %>
<div data-controller="patient-dashboard" class="min-h-screen bg-gray-50">
  <%# Header Section %>
  <div class="bg-white border-b border-gray-200">
    <div class="dashboard-container">
      <div class="dashboard-header">
        <h1 class="dashboard-title">
          Welcome back, <%= current_user.first_name || 'there' %>! ðŸ‘‹
        </h1>
        <p class="dashboard-subtitle">
          Manage your appointments, view health records, and stay connected with your providers.
        </p>
      </div>

      <%# Quick Stats Overview %>
      <div class="stats-grid">
        <%# Upcoming Appointments Stat %>
        <div class="stats-card stats-card-primary">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600 mb-1">Upcoming Appointments</p>
              <p class="text-3xl font-bold text-gray-900"><%= @upcoming_count %></p>
            </div>
            <div class="stats-card-icon">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
          </div>
        </div>

        <%# Health Records Stat %>
        <div class="stats-card stats-card-success">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600 mb-1">Health Records</p>
              <p class="text-3xl font-bold text-gray-900"><%= @recent_health_records.count %></p>
            </div>
            <div class="stats-card-icon">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
          </div>
        </div>

        <%# Messages Stat %>
        <div class="stats-card stats-card-warning">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600 mb-1">Unread Messages</p>
              <p class="text-3xl font-bold text-gray-900"><%= @unread_messages_count %></p>
            </div>
            <div class="stats-card-icon">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <%# Quick Action Buttons %>
      <div class="flex flex-wrap gap-4 pb-8">
        <%= link_to providers_path, class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Book Appointment
        <% end %>

        <%= link_to notifications_path, class: "btn-secondary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
          Notifications
          <% if @unread_messages_count > 0 %>
            <span class="ml-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full"><%= @unread_messages_count %></span>
          <% end %>
        <% end %>

        <%= link_to payments_path, class: "btn-secondary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
          Payment History
        <% end %>
      </div>
    </div>
  </div>

  <%# Payment Success/Failed Messages %>
  <% if params[:payment_success] == 'true' %>
    <div class="dashboard-container">
      <div class="bg-green-50 border-l-4 border-green-400 p-4 rounded-r-lg shadow-sm mb-6">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-green-800">Payment Successful! âœ“</h3>
            <p class="mt-2 text-sm text-green-700">Your appointment has been confirmed and payment processed successfully.</p>
          </div>
          <button data-action="click->patient-dashboard#dismissAlert" class="ml-auto flex-shrink-0 text-green-500 hover:text-green-700">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>

  <% if params[:payment_failed] == 'true' %>
    <div class="dashboard-container">
      <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg shadow-sm mb-6">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-red-800">Payment Failed</h3>
            <p class="mt-2 text-sm text-red-700">Unfortunately, your payment could not be processed. Please try again or contact support.</p>
            <div class="mt-3 flex gap-4">
              <%= link_to "Try Again", providers_path, class: "text-sm font-medium text-red-600 hover:text-red-500" %>
              <span class="text-gray-400">|</span>
              <%= link_to "Contact Support", contact_path, class: "text-sm font-medium text-red-600 hover:text-red-500" %>
            </div>
          </div>
          <button data-action="click->patient-dashboard#dismissAlert" class="ml-auto flex-shrink-0 text-red-500 hover:text-red-700">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>

  <%# Main Dashboard Content %>
  <div class="dashboard-container">
    <div class="dashboard-grid">
      <%# Left Column - Main Content (2/3 width) %>
      <div class="space-y-8">
        <%# Upcoming Appointments Card %>
        <div class="dashboard-card">
          <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="stats-card-icon stats-card-primary mr-3">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <h2 class="text-xl font-bold text-gray-900">Upcoming Appointments</h2>
              </div>
              <span class="status-badge status-badge-success"><%= @upcoming_count %> scheduled</span>
            </div>
          </div>

          <div class="p-6">
            <% if @upcoming_appointments.any? %>
              <div class="space-y-4">
                <%= render partial: 'dashboard/upcoming_appointment', collection: @upcoming_appointments, as: :appointment %>
              </div>
            <% else %>
              <%# Empty State %>
              <div class="empty-state">
                <div class="empty-state-icon">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <h3 class="empty-state-title">No Upcoming Appointments</h3>
                <p class="empty-state-description">You don't have any scheduled appointments. Browse our providers to book your first session.</p>
                <%= link_to providers_path, class: "btn-primary" do %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                  </svg>
                  Browse Providers
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <%# Recent Health Records Card %>
        <div class="dashboard-card">
          <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="stats-card-icon stats-card-success mr-3">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
                <h2 class="text-xl font-bold text-gray-900">Recent Health Records</h2>
              </div>
            </div>
          </div>

          <div class="p-6">
            <% if @recent_health_records.any? %>
              <div class="space-y-4">
                <%= render partial: 'dashboard/health_record', collection: @recent_health_records, as: :appointment %>
              </div>
            <% else %>
              <%# Empty State %>
              <div class="empty-state">
                <div class="empty-state-icon">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
                <h3 class="empty-state-title">No Health Records Yet</h3>
                <p class="empty-state-description">Your consultation notes and health records will appear here after completed appointments.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <%# Right Column - Sidebar (1/3 width) %>
      <div class="space-y-8">
        <%= render 'dashboard/notifications_card' %>
        <%= render 'dashboard/recommended_providers_card' %>
      </div>
    </div>
  </div>
</div>
