<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">My Dashboard</h1>

  <!-- My Appointments Section -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">My Appointments</h2>

    <% if @appointments.any? %>
      <div class="space-y-4">
        <% @appointments.each do |appointment| %>
          <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition" id="appointment-<%= appointment.id %>">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= appointment.service.name %></h3>
                
                <div class="space-y-1 text-sm text-gray-600">
                  <p>
                    <span class="font-medium">Provider:</span>
                    <%= appointment.provider.full_name %>
                  </p>
                  
                  <p>
                    <span class="font-medium">Date:</span>
                    <%= appointment.start_time.in_time_zone(current_user.time_zone || 'UTC').strftime("%B %d, %Y") %>
                  </p>
                  
                  <p>
                    <span class="font-medium">Time:</span>
                    <%= appointment.start_time.in_time_zone(current_user.time_zone || 'UTC').strftime("%I:%M %p %Z") %>
                  </p>
                  
                  <p>
                    <span class="font-medium">Duration:</span>
                    <%= appointment.service.duration_minutes %> minutes
                  </p>
                  
                  <p>
                    <span class="font-medium">Status:</span>
                    <span class="px-2 py-1 rounded-full text-xs font-medium
                      <%= case appointment.status
                          when 'scheduled' then 'bg-green-100 text-green-800'
                          when 'completed' then 'bg-blue-100 text-blue-800'
                          when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-100 text-red-800'
                          when 'no_show' then 'bg-gray-100 text-gray-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= appointment.status.titleize %>
                    </span>
                  </p>
                </div>
              </div>

              <div class="flex flex-col gap-2 ml-4">
                <% if appointment.scheduled? %>
                  <%= button_to "Cancel Appointment",
                                cancel_appointment_path(appointment),
                                method: :patch,
                                form: { data: { turbo_confirm: "Are you sure you want to cancel this appointment?" } },
                                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">
        You don't have any appointments yet.
        <%= link_to "Browse Providers", providers_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
        to book your first session.
      </p>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
    <div class="flex gap-4">
      <%= link_to "Browse Providers",
                  providers_path,
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
</div>
