<div class="max-w-7xl mx-auto px-4 py-8">
  <!-- Header Section -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Provider Dashboard</h1>
      <p class="text-gray-600 mt-2">Welcome back, <%= current_user.first_name %> <%= current_user.last_name %></p>
    </div>
    <div class="flex gap-3">
      <%= link_to dashboard_export_path(start_date: params[:start_date], end_date: params[:end_date]),
                  class: "bg-teal-600 hover:bg-teal-700 text-white font-semibold px-6 py-3 rounded-lg transition duration-200 flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        Export Analytics
      <% end %>
      <%= link_to "Edit Profile", edit_provider_profile_path(@provider_profile), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition duration-200" %>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Total Services Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Total Services</p>
          <h3 class="text-3xl font-bold text-gray-900 mt-2"><%= @total_services %></h3>
        </div>
        <div class="bg-blue-100 rounded-full p-3">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Available Slots Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Available Slots</p>
          <h3 class="text-3xl font-bold text-gray-900 mt-2"><%= @total_availability_slots %></h3>
        </div>
        <div class="bg-green-100 rounded-full p-3">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Total Earnings Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Total Earnings</p>
          <h3 class="text-3xl font-bold text-gray-900 mt-2">
            <%= number_to_currency(@total_earnings || 0, unit: "$", precision: 2) %>
          </h3>
          <p class="text-sm text-gray-500 mt-1">
            This month: <%= number_to_currency(@earnings_this_month || 0, unit: "$", precision: 2) %>
          </p>
        </div>
        <div class="bg-emerald-100 rounded-full p-3">
          <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Performance Metrics Section -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Performance Metrics</h2>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <!-- Completion Rate Card -->
      <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-5 border border-green-200">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-green-700">Completion Rate</span>
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="text-3xl font-bold text-green-900"><%= number_to_percentage(@completion_rate, precision: 1) %></div>
        <div class="text-xs text-green-600 mt-1"><%= @completed_appointments %> of <%= @total_appointments %> sessions</div>
      </div>

      <!-- Cancellation Rate Card -->
      <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-lg p-5 border border-yellow-200">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-yellow-700">Cancellation Rate</span>
          <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div class="text-3xl font-bold text-yellow-900"><%= number_to_percentage(@cancellation_rate, precision: 1) %></div>
        <div class="text-xs text-yellow-600 mt-1"><%= @cancelled_appointments %> cancellations</div>
      </div>

      <!-- No-Show Rate Card -->
      <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-lg p-5 border border-red-200">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-red-700">No-Show Rate</span>
          <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </div>
        <div class="text-3xl font-bold text-red-900"><%= number_to_percentage(@no_show_rate, precision: 1) %></div>
        <div class="text-xs text-red-600 mt-1"><%= @no_show_appointments %> no-shows</div>
      </div>

      <!-- Average Bookings Card -->
      <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-5 border border-blue-200">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-blue-700">Avg per Week</span>
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <div class="text-3xl font-bold text-blue-900"><%= number_with_precision(@average_appointments_per_week, precision: 1) %></div>
        <div class="text-xs text-blue-600 mt-1">appointments/week</div>
      </div>
    </div>
  </div>

  <!-- Analytics Charts Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Revenue Trends Chart -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-4">Revenue Trends (Last 6 Months)</h3>
      <div class="space-y-3">
        <% if @revenue_by_month.any? %>
          <% max_revenue = @revenue_by_month.values.max || 1 %>
          <% @revenue_by_month.each do |month, revenue| %>
            <div>
              <div class="flex justify-between items-center mb-1">
                <span class="text-sm font-medium text-gray-700"><%= month %></span>
                <span class="text-sm font-semibold text-emerald-600"><%= number_to_currency(revenue, unit: "$") %></span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="bg-emerald-500 h-3 rounded-full transition-all duration-300" style="width: <%= (revenue / max_revenue * 100).round(2) %>%"></div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-center py-4">No revenue data available yet</p>
        <% end %>
      </div>

      <div class="mt-6 pt-4 border-t border-gray-200">
        <div class="grid grid-cols-2 gap-4 text-center">
          <div>
            <p class="text-xs text-gray-500 uppercase">Total Revenue</p>
            <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@total_earnings, unit: "$") %></p>
          </div>
          <div>
            <p class="text-xs text-gray-500 uppercase">Avg per Session</p>
            <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@average_revenue_per_appointment, unit: "$") %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Appointment Trends Chart -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-4">Appointment Trends (Last 6 Months)</h3>
      <div class="space-y-3">
        <% if @appointments_by_month.any? %>
          <% max_appointments = @appointments_by_month.values.max || 1 %>
          <% @appointments_by_month.each do |month, count| %>
            <div>
              <div class="flex justify-between items-center mb-1">
                <span class="text-sm font-medium text-gray-700"><%= month %></span>
                <span class="text-sm font-semibold text-blue-600"><%= count %> sessions</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="bg-blue-500 h-3 rounded-full transition-all duration-300" style="width: <%= (count.to_f / max_appointments * 100).round(2) %>%"></div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-center py-4">No appointment data available yet</p>
        <% end %>
      </div>

      <div class="mt-6 pt-4 border-t border-gray-200">
        <div class="grid grid-cols-2 gap-4 text-center">
          <div>
            <p class="text-xs text-gray-500 uppercase">Total Sessions</p>
            <p class="text-2xl font-bold text-gray-900"><%= @total_appointments %></p>
          </div>
          <div>
            <p class="text-xs text-gray-500 uppercase">Scheduled</p>
            <p class="text-2xl font-bold text-gray-900"><%= @scheduled_appointments %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Service Performance Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Revenue by Service -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-4">Revenue by Service</h3>
      <% if @revenue_by_service.any? %>
        <div class="space-y-3">
          <% @revenue_by_service.sort_by { |service, revenue| -revenue }.first(5).each do |service_name, revenue| %>
            <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-0">
              <span class="text-sm font-medium text-gray-700 flex-1"><%= truncate(service_name, length: 30) %></span>
              <span class="text-sm font-bold text-emerald-600 ml-4"><%= number_to_currency(revenue, unit: "$") %></span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No service revenue data available yet</p>
      <% end %>
    </div>

    <!-- Peak Booking Hours -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-4">Peak Booking Hours</h3>
      <% if @peak_booking_hours.any? %>
        <div class="space-y-3">
          <% @peak_booking_hours.each do |hour, count| %>
            <% hour_12 = hour.to_i == 0 ? 12 : (hour.to_i > 12 ? hour.to_i - 12 : hour.to_i) %>
            <% am_pm = hour.to_i >= 12 ? 'PM' : 'AM' %>
            <div>
              <div class="flex justify-between items-center mb-1">
                <span class="text-sm font-medium text-gray-700"><%= "#{hour_12}:00 #{am_pm}" %></span>
                <span class="text-sm font-semibold text-purple-600"><%= count %> bookings</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <% max_bookings = @peak_booking_hours.values.max || 1 %>
                <div class="bg-purple-500 h-3 rounded-full transition-all duration-300" style="width: <%= (count.to_f / max_bookings * 100).round(2) %>%"></div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No booking data available yet</p>
      <% end %>
    </div>
  </div>

  <!-- Recent Payments Section -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Recent Payments</h2>
      <%= link_to "View All Payments", payments_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
    </div>

    <% if @recent_payments.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_payments.each do |payment| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= payment.created_at.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= payment.appointment.patient.full_name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= truncate(payment.appointment.service.name, length: 30) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                  <%= number_to_currency(payment.amount, unit: "$") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full
                    <%= case payment.status
                        when 'succeeded' then 'bg-green-100 text-green-800'
                        when 'pending' then 'bg-yellow-100 text-yellow-800'
                        when 'refunded' then 'bg-purple-100 text-purple-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= payment.status.titleize %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-8">
        <div class="bg-gray-100 rounded-full w-16 h-16 mx-auto flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <p class="text-gray-500 mb-2 font-medium">No payments yet</p>
        <p class="text-gray-400 text-sm">Payments from your appointments will appear here</p>
      </div>
    <% end %>
  </div>

  <!-- Services Section -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Your Services</h2>
      <%= link_to "View All Services", provider_profile_services_path(@provider_profile), class: "text-blue-600 hover:text-blue-700 font-medium" %>
    </div>

    <% if @services.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @services.take(4).each do |service| %>
          <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-500 transition duration-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              <%= link_to service.name, provider_profile_service_path(@provider_profile, service), class: "text-blue-600 hover:text-blue-700" %>
            </h3>
            <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= truncate(service.description, length: 100) %></p>
            <div class="flex justify-between items-center">
              <span class="text-blue-600 font-bold">$<%= number_with_precision(service.price, precision: 2) %></span>
              <span class="text-gray-500 text-sm"><%= service.duration_minutes %> min</span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 mb-4">You haven't created any services yet.</p>
        <%= link_to "Create Your First Service", new_provider_profile_service_path(@provider_profile), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition duration-200" %>
      </div>
    <% end %>
  </div>

  <!-- Upcoming Availabilities Section -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Upcoming Availability</h2>
      <%= link_to "Manage Availability", provider_profile_availabilities_path(@provider_profile), class: "text-blue-600 hover:text-blue-700 font-medium" %>
    </div>

    <% if @availabilities.any? %>
      <div class="space-y-3">
        <% @availabilities.each do |availability| %>
          <div class="flex justify-between items-center p-4 border border-gray-200 rounded-lg hover:border-blue-500 transition duration-200">
            <div>
              <p class="font-semibold text-gray-900">
                <%= availability.start_time.strftime("%B %d, %Y") %>
              </p>
              <p class="text-gray-600 text-sm">
                <%= availability.start_time.strftime("%I:%M %p") %> - <%= availability.end_time.strftime("%I:%M %p") %>
              </p>
            </div>
            <% if availability.is_booked %>
              <span class="px-3 py-1 bg-red-100 text-red-800 text-sm font-medium rounded-full">Booked</span>
            <% else %>
              <span class="px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">Available</span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 mb-4">You have no upcoming availability slots.</p>
        <%= link_to "Add Availability", new_provider_profile_availability_path(@provider_profile), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>
