<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-5xl mx-auto">
    <!-- Back Link -->
    <div class="mb-6">
      <%= link_to appointments_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Appointments
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Appointment Details Card -->
        <div class="bg-white rounded-lg shadow-md">
          <!-- Header with Status -->
          <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
            <h1 class="text-2xl font-bold text-gray-900">Appointment Details</h1>
            <span class="<%= case @appointment.status
              when 'scheduled' then 'bg-green-100 text-green-800'
              when 'completed' then 'bg-blue-100 text-blue-800'
              when 'cancelled_by_patient', 'cancelled_by_provider' then 'bg-red-100 text-red-800'
              when 'no_show' then 'bg-gray-100 text-gray-800'
              else 'bg-gray-100 text-gray-800'
            end %> px-4 py-2 rounded-full text-sm font-semibold">
              <%= @appointment.status.humanize %>
            </span>
          </div>

          <div class="p-6 space-y-6">
            <!-- Date and Time Section -->
            <div>
              <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Date & Time</h3>
              <div class="bg-indigo-50 rounded-lg p-4 space-y-2">
                <div class="flex items-center text-indigo-900">
                  <svg class="w-5 h-5 mr-3 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                  </svg>
                  <div>
                    <div class="font-semibold text-lg"><%= @appointment.start_time.strftime("%A, %B %d, %Y") %></div>
                    <div class="text-sm text-indigo-700"><%= @appointment.start_time.strftime("%I:%M %p") %> - <%= @appointment.end_time.strftime("%I:%M %p") %></div>
                  </div>
                </div>
                <div class="flex items-center text-indigo-800 text-sm">
                  <svg class="w-4 h-4 mr-3 ml-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"/>
                    <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"/>
                  </svg>
                  <span>Duration: <%= @appointment.service.duration_minutes %> minutes</span>
                </div>
              </div>

              <!-- Time Until Appointment -->
              <% if @appointment.status == 'scheduled' && @appointment.start_time > Time.current %>
                <%
                  time_diff = @appointment.start_time - Time.current
                  days = (time_diff / 1.day).floor
                  hours = ((time_diff % 1.day) / 1.hour).floor
                  minutes = ((time_diff % 1.hour) / 1.minute).floor
                %>
                <div class="mt-3 p-3 bg-amber-50 rounded-lg">
                  <div class="flex items-center text-sm text-amber-900">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                    </svg>
                    <span class="font-medium">
                      <% if days > 0 %>
                        Appointment in <%= pluralize(days, 'day') %> and <%= pluralize(hours, 'hour') %>
                      <% elsif hours > 0 %>
                        Appointment in <%= pluralize(hours, 'hour') %> and <%= pluralize(minutes, 'minute') %>
                      <% else %>
                        Appointment in <%= pluralize(minutes, 'minute') %>
                      <% end %>
                    </span>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Service Details Section -->
            <div>
              <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Service</h3>
              <div class="border border-gray-200 rounded-lg p-4">
                <h4 class="text-lg font-semibold text-gray-900 mb-2"><%= @service.name %></h4>
                <p class="text-gray-600 mb-3"><%= @service.description %></p>
                <div class="flex items-center justify-between pt-3 border-t border-gray-200">
                  <span class="text-sm text-gray-600">Price</span>
                  <span class="text-xl font-bold text-indigo-600">$<%= number_with_precision(@service.price, precision: 2) %></span>
                </div>
              </div>
            </div>

            <!-- Payment Information -->
            <% if @appointment.payment.present? %>
              <div>
                <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Payment Details</h3>
                <div class="border border-gray-200 rounded-lg p-4 space-y-3">
                  <!-- Payment Status -->
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-600">Status</span>
                    <span class="px-3 py-1 rounded-full text-xs font-semibold
                      <%= case @appointment.payment.status
                          when 'succeeded' then 'bg-green-100 text-green-800'
                          when 'pending' then 'bg-yellow-100 text-yellow-800'
                          when 'failed' then 'bg-red-100 text-red-800'
                          when 'refunded' then 'bg-purple-100 text-purple-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= @appointment.payment.status.titleize %>
                    </span>
                  </div>

                  <!-- Payment Amount -->
                  <div class="flex items-center justify-between pt-2 border-t border-gray-200">
                    <span class="text-sm text-gray-600">Amount</span>
                    <span class="text-lg font-bold text-gray-900">
                      <%= number_to_currency(@appointment.payment.amount, unit: "$") %>
                    </span>
                  </div>

                  <!-- Payment Date -->
                  <% if @appointment.payment.paid_at.present? %>
                    <div class="flex items-center justify-between">
                      <span class="text-sm text-gray-600">Paid On</span>
                      <span class="text-sm text-gray-900">
                        <%= @appointment.payment.paid_at.strftime("%B %d, %Y at %I:%M %p") %>
                      </span>
                    </div>
                  <% end %>

                  <!-- Refund Information -->
                  <% if @appointment.payment.refunded? %>
                    <div class="mt-3 pt-3 border-t border-gray-200 bg-purple-50 -mx-4 -mb-4 px-4 py-3 rounded-b-lg">
                      <div class="flex items-start">
                        <svg class="w-5 h-5 text-purple-600 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
                        </svg>
                        <div class="flex-1">
                          <p class="font-semibold text-purple-900 text-sm">Refund Processed</p>
                          <p class="text-xs text-purple-700 mt-1">
                            Refunded on <%= @appointment.payment.refunded_at.strftime("%B %d, %Y") %>
                          </p>
                          <p class="text-xs text-purple-600 mt-1">
                            Please allow 5-10 business days for the refund to appear in your account.
                          </p>
                        </div>
                      </div>
                    </div>
                  <% elsif @appointment.payment.pending? %>
                    <div class="mt-3 pt-3 border-t border-gray-200 bg-yellow-50 -mx-4 -mb-4 px-4 py-3 rounded-b-lg">
                      <div class="flex items-start">
                        <svg class="w-5 h-5 text-yellow-600 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        <div class="flex-1">
                          <p class="font-semibold text-yellow-900 text-sm">Payment Pending</p>
                          <p class="text-xs text-yellow-700 mt-1">
                            Payment confirmation is still processing. This usually takes a few minutes.
                          </p>
                        </div>
                      </div>
                    </div>
                  <% elsif @appointment.payment.succeeded? && current_user.patient? %>
                    <div class="mt-3 pt-3 border-t border-gray-200">
                      <p class="text-xs text-gray-500 flex items-start">
                        <svg class="w-4 h-4 mr-1.5 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                        <span>
                          Cancellations made more than 24 hours before the appointment are eligible for a full refund.
                        </span>
                      </p>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Participant Information -->
            <div>
              <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">
                <% if current_user.patient? %>
                  Service Provider
                <% else %>
                  Client
                <% end %>
              </h3>

              <% other_user = current_user.patient? ? @provider : @patient %>
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center space-x-4">
                  <% if other_user.avatar.attached? %>
                    <%= image_tag other_user.avatar,
                        class: "w-16 h-16 rounded-full object-cover",
                        alt: other_user.full_name %>
                  <% else %>
                    <div class="w-16 h-16 rounded-full bg-indigo-100 flex items-center justify-center">
                      <span class="text-indigo-600 font-semibold text-2xl">
                        <%= other_user.full_name.first %>
                      </span>
                    </div>
                  <% end %>

                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900"><%= other_user.full_name %></h4>
                    <p class="text-sm text-gray-600"><%= other_user.email %></p>
                    <% if current_user.patient? && @provider.provider_profile.present? %>
                      <p class="text-sm text-indigo-600 font-medium mt-1"><%= @provider.provider_profile.specialty %></p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Cancellation Information -->
            <% if @appointment.cancellation_reason.present? %>
              <div>
                <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Cancellation Details</h3>
                <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                  <div class="flex items-start">
                    <svg class="w-5 h-5 text-red-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    <div>
                      <p class="font-semibold text-red-900 mb-1">
                        Cancelled by <%= @appointment.status == 'cancelled_by_patient' ? 'client' : 'provider' %>
                      </p>
                      <p class="text-sm text-red-800"><%= @appointment.cancellation_reason %></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Additional Notes (if present) -->
            <%# TODO: Add notes field to appointments or use consultation_notes association %>
            <% if false # @appointment.notes.present? %>
              <div>
                <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Additional Notes</h3>
                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
                  <p class="text-gray-700"><%#= @appointment.notes %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar Actions -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-md p-6 sticky top-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Actions</h3>

          <div class="space-y-3">
            <!-- Cancel Appointment -->
            <% if @appointment.status == 'scheduled' %>
              <% if policy(@appointment).cancel? %>
                <%= button_to "Cancel Appointment",
                    cancel_appointment_path(@appointment),
                    method: :patch,
                    form: { data: { turbo_confirm: "Are you sure you want to cancel this appointment? This action cannot be undone." } },
                    params: { cancellation_reason: "Cancelled by #{current_user.role}" },
                    class: "w-full px-4 py-3 bg-red-600 text-white rounded-lg font-semibold hover:bg-red-700 transition shadow-md text-center" %>
                <p class="text-xs text-gray-500 text-center">
                  Cancellations must be made at least 24 hours in advance
                </p>
              <% else %>
                <div class="px-4 py-3 bg-gray-100 text-gray-500 rounded-lg text-center text-sm">
                  <svg class="w-5 h-5 mx-auto mb-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                  </svg>
                  Cannot cancel<br/>(less than 24 hours notice)
                </div>
              <% end %>
            <% end %>

            <!-- Join Session (future video integration) -->
            <% if @appointment.status == 'scheduled' && @appointment.start_time <= 15.minutes.from_now && @appointment.end_time >= Time.current %>
              <%= link_to "#",
                  class: "block w-full px-4 py-3 bg-green-600 text-white rounded-lg font-semibold hover:bg-green-700 transition shadow-md text-center" do %>
                <svg class="w-5 h-5 inline-block mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
                </svg>
                Join Video Session
              <% end %>
              <p class="text-xs text-gray-500 text-center">Session available now</p>
            <% end %>

            <!-- View Provider/Client Profile -->
            <% if current_user.patient? && @provider.provider_profile.present? %>
              <%= link_to "View Provider Profile",
                  provider_profile_path(@provider.provider_profile),
                  class: "block w-full px-4 py-3 border-2 border-indigo-600 text-indigo-600 rounded-lg font-semibold hover:bg-indigo-50 transition text-center" %>
            <% end %>

            <!-- Back to List -->
            <%= link_to "View All Appointments",
                appointments_path,
                class: "block w-full px-4 py-3 bg-gray-100 text-gray-700 rounded-lg font-semibold hover:bg-gray-200 transition text-center" %>
          </div>

          <!-- Important Information -->
          <div class="mt-6 pt-6 border-t border-gray-200">
            <h4 class="text-sm font-semibold text-gray-700 mb-3 flex items-center">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              Important Information
            </h4>
            <ul class="space-y-2 text-xs text-gray-600">
              <li class="flex items-start">
                <span class="text-indigo-600 mr-2">•</span>
                <span>You will receive email reminders 24 hours and 1 hour before your appointment</span>
              </li>
              <li class="flex items-start">
                <span class="text-indigo-600 mr-2">•</span>
                <span>Please join the session 5 minutes early to ensure a smooth start</span>
              </li>
              <% if current_user.patient? %>
                <li class="flex items-start">
                  <span class="text-indigo-600 mr-2">•</span>
                  <span>Payment has been processed. Refund policies apply for cancellations</span>
                </li>
              <% end %>
              <li class="flex items-start">
                <span class="text-indigo-600 mr-2">•</span>
                <span>Contact support if you need to reschedule or have any questions</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
