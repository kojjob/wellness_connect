<div class="min-h-screen bg-gradient-to-br from-gray-50 to-white py-8 sm:py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Flash Messages (inline for this page) -->
    <% if flash[:error].present? || flash[:alert].present? %>
      <div class="mb-6 max-w-4xl mx-auto">
        <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4 shadow-md" role="alert">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div class="flex-1">
              <h3 class="text-sm font-bold text-red-800 mb-1">Booking Error</h3>
              <p class="text-sm text-red-700"><%= flash[:error] || flash[:alert] %></p>
            </div>
            <button type="button" onclick="this.parentElement.parentElement.parentElement.remove()" class="ml-3 flex-shrink-0 text-red-500 hover:text-red-700" aria-label="Dismiss">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Header -->
    <div class="text-center mb-10">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-3">
        <span class="bg-gradient-to-r from-teal-600 to-gray-700 bg-clip-text text-transparent">Book Your</span>
        <span class="block mt-1">Appointment</span>
      </h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">Select an available time slot to schedule your appointment with our healthcare professionals</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8">
      <!-- Main Booking Form -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-200 p-6 sm:p-8" data-controller="booking-form">
          <%= form_with(model: @appointment, url: appointments_path, local: true, class: "space-y-8", data: { booking_form_target: "form", action: "submit->booking-form#submit" }) do |form| %>

            <!-- Hidden Fields -->
            <%= form.hidden_field :service_id, value: @service&.id %>
            <%= form.hidden_field :provider_id, value: @provider&.id %>
            <%= form.hidden_field :start_time, id: "appointment_start_time" %>
            <%= form.hidden_field :end_time, id: "appointment_end_time" %>
            <%= hidden_field_tag "appointment[availability_id]", @availability&.id, id: "appointment_availability_id" %>

            <!-- Service Selection (if not pre-selected) -->
            <% unless @service.present? %>
              <div class="form-group">
                <%= form.label :service_id, "Select Service", class: "block text-sm font-semibold text-gray-900 mb-3" %>
                <%= form.collection_select :service_id,
                    Service.where(is_active: true),
                    :id,
                    :name,
                    { prompt: "Choose a service..." },
                    { class: "py-3 px-4 mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-teal-500 focus:ring-2 focus:ring-teal-500 transition-all duration-200",
                      required: true,
                      data: { action: "change->appointments#loadAvailability" } } %>
              </div>
            <% end %>

            <!-- Available Time Slots -->
            <% if @service.present? %>
              <div class="form-group">
                <div class="flex items-center mb-6">
                  <svg class="w-6 h-6 text-teal-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <h3 class="text-2xl font-bold text-gray-900">Choose Your Time Slot</h3>
                </div>

                <%
                  # Get available time slots for the next 30 days
                  availabilities = @service.provider_profile.availabilities
                    .where(is_booked: false)
                    .where("start_time >= ?", Time.current)
                    .where("start_time <= ?", 30.days.from_now)
                    .order(:start_time)

                  # Group by date
                  grouped_availabilities = availabilities.group_by { |a| a.start_time.to_date }
                %>

                <% if grouped_availabilities.any? %>
                  <div class="space-y-8">
                    <% grouped_availabilities.each do |date, slots| %>
                      <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
                        <div class="flex items-center mb-4">
                          <div class="flex-shrink-0 w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mr-3">
                            <span class="text-teal-700 font-bold text-lg">
                              <%= date.strftime("%d") %>
                            </span>
                          </div>
                          <div>
                            <h4 class="text-lg font-bold text-gray-900">
                              <%= date.strftime("%A") %>
                            </h4>
                            <p class="text-sm text-gray-600">
                              <%= date.strftime("%B %Y") %>
                            </p>
                          </div>
                        </div>

                        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
                          <% slots.each do |availability| %>
                            <label class="relative flex flex-col items-center justify-center p-4 bg-white border-2 border-gray-200 rounded-xl cursor-pointer hover:border-teal-500 hover:shadow-md transition-all duration-200 group min-h-[80px]">
                              <input
                                type="radio"
                                name="selected_time_slot"
                                value="<%= availability.id %>"
                                data-start-time="<%= availability.start_time.iso8601 %>"
                                data-end-time="<%= availability.end_time.iso8601 %>"
                                class="sr-only peer"
                                required
                                <%= "checked" if @availability&.id == availability.id %>
                              />

                              <svg class="w-5 h-5 text-gray-400 group-hover:text-teal-500 peer-checked:text-teal-600 mb-2 transition-colors" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                              </svg>

                              <div class="text-center peer-checked:text-teal-600">
                                <div class="font-bold text-base">
                                  <%= availability.start_time.strftime("%I:%M %p") %>
                                </div>
                                <div class="text-xs text-gray-500 group-hover:text-teal-600 peer-checked:text-teal-600 mt-1">
                                  <%= ((availability.end_time - availability.start_time) / 60).to_i %> minutes
                                </div>
                              </div>

                              <div class="absolute inset-0 border-2 border-transparent peer-checked:border-teal-600 peer-checked:bg-teal-50 rounded-xl pointer-events-none transition-all duration-200"></div>
                            </label>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="text-center py-16 bg-gradient-to-br from-gray-50 to-white rounded-2xl border-2 border-dashed border-gray-300">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
                      <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">No Availability</h3>
                    <p class="text-sm text-gray-600 mb-6 max-w-sm mx-auto">This provider has no available time slots in the next 30 days. Please check back later or browse other providers.</p>
                    <%= link_to providers_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-teal-600 to-gray-700 hover:from-teal-700 hover:to-gray-800 text-white rounded-lg font-semibold transition-all duration-200 shadow-md hover:shadow-lg" do %>
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                      </svg>
                      Browse Other Providers
                    <% end %>
                  </div>
                <% end %>
              </div>

              <!-- Additional Notes (Optional) -->
              <div class="form-group">
                <div class="flex items-center mb-3">
                  <svg class="w-5 h-5 text-teal-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <%= form.label :notes, "Additional Notes (Optional)", class: "text-sm font-semibold text-gray-900" %>
                </div>
                <%= form.text_area :notes,
                    rows: 4,
                    placeholder: "Share any specific concerns, symptoms, or information the provider should know before your appointment...",
                    class: "block w-full rounded-xl border-gray-300 shadow-sm focus:border-teal-500 focus:ring-2 focus:ring-teal-500 transition-all duration-200 resize-none" %>
              </div>

              <!-- Actions -->
              <div class="flex flex-col sm:flex-row items-center justify-between gap-4 pt-6 border-t-2 border-gray-100">
                <%= link_to :back, class: "w-full sm:w-auto px-6 py-3 text-sm font-semibold text-gray-700 hover:text-teal-600 hover:bg-teal-50 rounded-lg transition-all duration-200 text-center" do %>
                  <span class="inline-flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Go Back
                  </span>
                <% end %>

                <%= form.submit "Confirm Booking",
                    class: "w-full sm:w-auto px-8 py-3 bg-gradient-to-r from-teal-600 to-gray-700 hover:from-teal-700 hover:to-gray-800 text-white rounded-lg font-bold transition-all duration-200 shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed transform hover:scale-105",
                    data: { booking_form_target: "submitButton", disable_with: "Processing..." } %>
              </div>
            <% end %>

          <% end %>
        </div>
      </div>

      <!-- Sidebar - Booking Summary -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-2xl shadow-xl p-6 sm:p-8 sticky top-6 border border-gray-100">
          <div class="flex items-center mb-6">
            <svg class="w-6 h-6 text-teal-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            <h3 class="text-2xl font-bold text-gray-900">Booking Summary</h3>
          </div>

          <% if @service.present? %>
            <!-- Provider Info -->
            <div class="mb-6 pb-6 border-b-2 border-gray-100">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Your Provider</p>
              <div class="flex items-center space-x-4">
                <% provider_user = @service.provider_profile.user %>
                <% if provider_user.avatar.attached? %>
                  <%= image_tag provider_user.avatar.variant(resize_to_limit: [128, 128]),
                      class: "w-16 h-16 rounded-xl object-cover ring-2 ring-teal-100 shadow-sm",
                      alt: "#{provider_user.full_name}, #{@service.provider_profile.specialty}",
                      loading: "lazy" %>
                <% else %>
                  <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center ring-2 ring-teal-100 shadow-md">
                    <span class="text-white font-bold text-2xl">
                      <%= provider_user.full_name.first.upcase %>
                    </span>
                  </div>
                <% end %>

                <div class="flex-1">
                  <h4 class="font-bold text-gray-900 text-lg"><%= provider_user.full_name %></h4>
                  <p class="text-sm text-teal-600 font-medium"><%= @service.provider_profile.specialty %></p>
                </div>
              </div>
            </div>

            <!-- Service Details -->
            <div class="mb-6 pb-6 border-b-2 border-gray-100">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Service Details</p>
              <div class="bg-gradient-to-br from-teal-50 to-gray-50 rounded-xl p-4 mb-4">
                <h4 class="text-lg font-bold text-gray-900 mb-2"><%= @service.name %></h4>
                <p class="text-sm text-gray-700 leading-relaxed"><%= @service.description %></p>
              </div>

              <div class="space-y-3">
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-teal-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-sm font-medium text-gray-700">Duration</span>
                  </div>
                  <span class="font-bold text-gray-900"><%= @service.duration_minutes %> min</span>
                </div>

                <div class="flex items-center justify-between p-3 bg-gradient-to-r from-teal-50 to-gray-50 rounded-lg">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-teal-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-sm font-medium text-gray-700">Price</span>
                  </div>
                  <span class="font-bold text-teal-600 text-lg">$<%= number_with_precision(@service.price, precision: 2) %></span>
                </div>
              </div>
            </div>

            <!-- Selected Time Slot -->
            <div class="mb-6 pb-6 border-b-2 border-gray-100" id="selected-time-display">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Selected Time</p>
              <div id="time-slot-info" class="text-sm">
                <% if @availability.present? %>
                  <div class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-xl p-4 border-2 border-teal-200 shadow-sm">
                    <div class="flex items-start mb-3">
                      <div class="flex-shrink-0 w-10 h-10 bg-teal-600 rounded-lg flex items-center justify-center mr-3">
                        <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                      <div class="flex-1">
                        <p class="text-xs font-semibold text-teal-700 uppercase tracking-wide mb-1">Date</p>
                        <p class="font-bold text-gray-900"><%= @availability.start_time.strftime("%A, %B %d, %Y") %></p>
                      </div>
                    </div>
                    <div class="flex items-start">
                      <div class="flex-shrink-0 w-10 h-10 bg-teal-600 rounded-lg flex items-center justify-center mr-3">
                        <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                      <div class="flex-1">
                        <p class="text-xs font-semibold text-teal-700 uppercase tracking-wide mb-1">Time</p>
                        <p class="font-bold text-gray-900"><%= @availability.start_time.strftime("%I:%M %p") %> - <%= @availability.end_time.strftime("%I:%M %p") %></p>
                      </div>
                    </div>
                  </div>
                <% else %>
                  <div class="bg-gray-50 rounded-xl p-4 border-2 border-dashed border-gray-300 text-center">
                    <svg class="w-8 h-8 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <p class="text-gray-500 font-medium">No time slot selected</p>
                    <p class="text-xs text-gray-400 mt-1">Choose a time slot above</p>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Important Information -->
            <div class="bg-gradient-to-br from-amber-50 to-orange-50 rounded-xl p-5 border-l-4 border-amber-400 shadow-sm">
              <div class="flex items-start mb-3">
                <div class="flex-shrink-0 w-8 h-8 bg-amber-400 rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <h4 class="text-sm font-bold text-amber-900 uppercase tracking-wide">Important Information</h4>
              </div>
              <ul class="space-y-2">
                <li class="flex items-start text-sm text-amber-900">
                  <svg class="w-4 h-4 text-amber-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Cancellations must be made at least 24 hours in advance</span>
                </li>
                <li class="flex items-start text-sm text-amber-900">
                  <svg class="w-4 h-4 text-amber-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Payment will be processed after booking confirmation</span>
                </li>
                <li class="flex items-start text-sm text-amber-900">
                  <svg class="w-4 h-4 text-amber-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>You will receive email confirmation and reminders</span>
                </li>
                <li class="flex items-start text-sm text-amber-900">
                  <svg class="w-4 h-4 text-amber-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Please arrive 5-10 minutes early for your appointment</span>
                </li>
              </ul>
            </div>
          <% else %>
            <div class="text-center py-12">
              <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              <p class="text-sm text-gray-500 font-medium">Select a service to view details</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Update hidden fields when time slot is selected
    const timeSlotRadios = document.querySelectorAll('input[name="selected_time_slot"]');

    timeSlotRadios.forEach(radio => {
      radio.addEventListener('change', function() {
        if (this.checked) {
          // Update hidden fields
          document.getElementById('appointment_start_time').value = this.dataset.startTime;
          document.getElementById('appointment_end_time').value = this.dataset.endTime;
          document.getElementById('appointment_availability_id').value = this.value;

          // Update sidebar display
          const startTime = new Date(this.dataset.startTime);
          const endTime = new Date(this.dataset.endTime);

          const displayHtml = `
            <div class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-xl p-4 border-2 border-teal-200 shadow-sm">
              <div class="flex items-start mb-3">
                <div class="flex-shrink-0 w-10 h-10 bg-teal-600 rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <p class="text-xs font-semibold text-teal-700 uppercase tracking-wide mb-1">Date</p>
