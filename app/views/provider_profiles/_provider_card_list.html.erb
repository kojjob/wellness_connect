<%# List View Card - Horizontal card design for list layout %>
<div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden group">
  <%= link_to provider_profile_path(provider_profile), class: "block" do %>
    <div class="flex flex-col md:flex-row">
      <!-- Left: Avatar and Quick Info -->
      <div class="md:w-64 bg-gradient-to-br from-indigo-500 to-purple-600 p-6 flex flex-col items-center justify-center relative">
        <!-- Verified Badge -->
        <div class="absolute top-4 right-4">
          <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-white text-xs font-medium flex items-center">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
            </svg>
            Verified
          </div>
        </div>

        <!-- Avatar -->
        <div class="relative mb-4">
          <% if provider_profile.avatar.attached? %>
            <%= image_tag provider_profile.avatar,
                alt: provider_profile.full_name,
                class: "w-24 h-24 rounded-full object-cover border-4 border-white shadow-lg" %>
          <% else %>
            <div class="w-24 h-24 rounded-full bg-white/20 backdrop-blur-sm border-4 border-white shadow-lg flex items-center justify-center">
              <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
              </svg>
            </div>
          <% end %>
          <!-- Online Status -->
          <div class="absolute -bottom-1 -right-1 bg-green-500 rounded-full p-1.5 border-2 border-white">
            <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
            </svg>
          </div>
        </div>

        <!-- Name and Credentials -->
        <h3 class="text-xl font-bold text-white text-center mb-1">
          <%= provider_profile.full_name %>
        </h3>
        <p class="text-indigo-100 text-sm text-center mb-3">
          <%= provider_profile.credentials %>
        </p>

        <!-- Rating -->
        <div class="flex items-center bg-white/20 backdrop-blur-sm px-3 py-1.5 rounded-full">
          <svg class="w-5 h-5 text-yellow-300 mr-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
          </svg>
          <span class="font-semibold text-white"><%= provider_profile.display_rating %></span>
          <span class="text-indigo-100 ml-1 text-sm">(<%= provider_profile.total_reviews || 0 %>)</span>
        </div>
      </div>

      <!-- Right: Details -->
      <div class="flex-1 p-6">
        <div class="flex flex-col h-full">
          <!-- Specialty Badge -->
          <div class="mb-3">
            <span class="inline-flex items-center px-4 py-2 bg-indigo-100 text-indigo-800 rounded-full text-sm font-medium">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
              </svg>
              <%= provider_profile.specialty %>
            </span>
          </div>

          <!-- Bio -->
          <p class="text-gray-700 mb-4 line-clamp-2 leading-relaxed">
            <%= truncate(provider_profile.bio, length: 200) %>
          </p>

          <!-- Key Stats -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
            <!-- Experience -->
            <% if provider_profile.years_of_experience.present? %>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="w-5 h-5 mr-2 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                </svg>
                <div>
                  <div class="font-semibold text-gray-900"><%= provider_profile.years_of_experience %>+ years</div>
                  <div class="text-xs text-gray-500">Experience</div>
                </div>
              </div>
            <% end %>

            <!-- Languages -->
            <% if provider_profile.languages.present? %>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="w-5 h-5 mr-2 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zm6.93 6h-2.95c-.32-1.25-.78-2.45-1.38-3.56 1.84.63 3.37 1.91 4.33 3.56zM12 4.04c.83 1.2 1.48 2.53 1.91 3.96h-3.82c.43-1.43 1.08-2.76 1.91-3.96zM4.26 14C4.1 13.36 4 12.69 4 12s.1-1.36.26-2h3.38c-.08.66-.14 1.32-.14 2s.06 1.34.14 2H4.26zm.82 2h2.95c.32 1.25.78 2.45 1.38 3.56-1.84-.63-3.37-1.9-4.33-3.56zm2.95-8H5.08c.96-1.66 2.49-2.93 4.33-3.56C8.81 5.55 8.35 6.75 8.03 8zM12 19.96c-.83-1.2-1.48-2.53-1.91-3.96h3.82c-.43 1.43-1.08 2.76-1.91 3.96zM14.34 14H9.66c-.09-.66-.16-1.32-.16-2s.07-1.35.16-2h4.68c.09.65.16 1.32.16 2s-.07 1.34-.16 2zm.25 5.56c.6-1.11 1.06-2.31 1.38-3.56h2.95c-.96 1.65-2.49 2.93-4.33 3.56zM16.36 14c.08-.66.14-1.32.14-2s-.06-1.34-.14-2h3.38c.16.64.26 1.31.26 2s-.1 1.36-.26 2h-3.38z"/>
                </svg>
                <div>
                  <div class="font-semibold text-gray-900"><%= provider_profile.languages_array.first %></div>
                  <div class="text-xs text-gray-500">
                    <% if provider_profile.languages_array.length > 1 %>
                      +<%= provider_profile.languages_array.length - 1 %> more
                    <% else %>
                      Language
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Response Time (Placeholder) -->
            <div class="flex items-center text-sm text-gray-600">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              <div>
                <div class="font-semibold text-gray-900">Within 24h</div>
                <div class="text-xs text-gray-500">Response</div>
              </div>
            </div>

            <!-- Sessions (Placeholder) -->
            <div class="flex items-center text-sm text-gray-600">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
              </svg>
              <div>
                <div class="font-semibold text-gray-900">50+</div>
                <div class="text-xs text-gray-500">Sessions</div>
              </div>
            </div>
          </div>

          <!-- Bottom: Price and CTA -->
          <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-200">
            <div>
              <p class="text-xs text-gray-600 mb-1">Starting from</p>
              <p class="text-3xl font-bold text-indigo-600">
                $<%= number_with_precision(provider_profile.consultation_rate, precision: 0) %>
                <span class="text-base text-gray-500 font-normal">/session</span>
              </p>
            </div>

            <div class="flex gap-3">
              <button class="px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg transition shadow-md flex items-center group-hover:shadow-lg">
                View Profile
                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

