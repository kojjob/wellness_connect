<div class="min-h-screen bg-gray-50 py-12">
  <div class="container mx-auto px-4 max-w-5xl">
    <!-- Page Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2">Edit Provider Profile</h1>
          <p class="text-gray-600">Update your professional information and settings</p>
        </div>
        <%= link_to provider_profile_path(@provider_profile), class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" do %>
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
          </svg>
          Back to Profile
        <% end %>
      </div>
    </div>

    <%= render "form", provider_profile: @provider_profile %>
  </div>
</div>
