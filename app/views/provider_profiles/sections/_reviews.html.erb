<section id="reviews" class="bg-white rounded-2xl shadow-lg p-8">
  <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center">
    <svg class="w-8 h-8 mr-3 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
    </svg>
    Client Reviews & Testimonials
  </h2>

  <%# TODO: This section will be populated when the Review model is implemented %>
  <%# For now, showing a placeholder with sample testimonials %>

  <!-- Rating Summary -->
  <div class="mb-8 p-6 bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl border border-indigo-200">
    <div class="flex flex-col md:flex-row items-center gap-8">
      <!-- Overall Rating -->
      <div class="text-center">
        <div class="text-6xl font-bold text-indigo-600 mb-2">
          <%= @provider_profile.display_rating %>
        </div>
        <div class="flex items-center justify-center mb-2">
          <% 5.times do |i| %>
            <svg class="w-6 h-6 <%= i < @provider_profile.display_rating.floor ? 'text-yellow-400' : 'text-gray-300' %>"
                 fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
            </svg>
          <% end %>
        </div>
        <p class="text-sm text-gray-600">Based on client feedback</p>
      </div>

      <!-- Rating Breakdown (Placeholder) -->
      <div class="flex-grow w-full">
        <% [5, 4, 3, 2, 1].each do |stars| %>
          <div class="flex items-center gap-3 mb-2">
            <span class="text-sm font-medium text-gray-700 w-12"><%= stars %> star</span>
            <div class="flex-grow bg-gray-200 rounded-full h-2 overflow-hidden">
              <div class="bg-yellow-400 h-full rounded-full" style="width: <%= stars == 5 ? '100' : '0' %>%"></div>
            </div>
            <span class="text-sm text-gray-600 w-12 text-right"><%= stars == 5 ? '100' : '0' %>%</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Sample Testimonials (Placeholder) -->
