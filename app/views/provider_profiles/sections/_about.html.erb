<section id="about" class="bg-white rounded-2xl shadow-lg p-8 scroll-mt-24">
  <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center">
    <svg class="w-8 h-8 mr-3 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
    </svg>
    About <%= provider_profile.full_name %>
  </h2>

  <!-- Bio -->
  <div class="mb-8">
    <h3 class="text-xl font-semibold text-gray-800 mb-3">Professional Background</h3>
    <p class="text-gray-700 leading-relaxed text-lg whitespace-pre-line"><%= provider_profile.bio %></p>
  </div>

  <!-- Key Information Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Years of Experience -->
    <% if provider_profile.years_of_experience.present? %>
      <div class="flex items-start space-x-4 p-4 bg-indigo-50 rounded-xl">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-indigo-600 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
            </svg>
          </div>
        </div>
        <div>
          <h4 class="font-semibold text-gray-900 mb-1">Experience</h4>
          <p class="text-gray-700"><%= provider_profile.years_of_experience %> years in practice</p>
        </div>
      </div>
    <% end %>

    <!-- Specialty -->
    <div class="flex items-start space-x-4 p-4 bg-purple-50 rounded-xl">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
          </svg>
        </div>
      </div>
      <div>
        <h4 class="font-semibold text-gray-900 mb-1">Specialty</h4>
        <p class="text-gray-700"><%= provider_profile.specialty %></p>
      </div>
    </div>
  </div>

  <!-- Education -->
  <% if provider_profile.education.present? %>
    <div class="mb-8">
      <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-6 h-6 mr-2 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82zM12 3L1 9l11 6 9-4.91V17h2V9L12 3z"/>
        </svg>
        Education
      </h3>
      <div class="bg-gray-50 rounded-xl p-6">
        <p class="text-gray-700 leading-relaxed whitespace-pre-line"><%= provider_profile.education %></p>
      </div>
    </div>
  <% end %>

  <!-- Certifications -->
  <% if provider_profile.certifications.present? %>
    <div class="mb-8">
      <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-6 h-6 mr-2 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
        Certifications & Credentials
      </h3>
      <div class="bg-gray-50 rounded-xl p-6">
        <p class="text-gray-700 leading-relaxed whitespace-pre-line"><%= provider_profile.certifications %></p>
      </div>
    </div>
  <% end %>

  <!-- Languages -->
  <% if provider_profile.languages.present? %>
    <div>
      <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-6 h-6 mr-2 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zm6.93 6h-2.95c-.32-1.25-.78-2.45-1.38-3.56 1.84.63 3.37 1.91 4.33 3.56zM12 4.04c.83 1.2 1.48 2.53 1.91 3.96h-3.82c.43-1.43 1.08-2.76 1.91-3.96zM4.26 14C4.1 13.36 4 12.69 4 12s.1-1.36.26-2h3.38c-.08.66-.14 1.32-.14 2 0 .68.06 1.34.14 2H4.26zm.82 2h2.95c.32 1.25.78 2.45 1.38 3.56-1.84-.63-3.37-1.9-4.33-3.56zm2.95-8H5.08c.96-1.66 2.49-2.93 4.33-3.56C8.81 5.55 8.35 6.75 8.03 8zM12 19.96c-.83-1.2-1.48-2.53-1.91-3.96h3.82c-.43 1.43-1.08 2.76-1.91 3.96zM14.34 14H9.66c-.09-.66-.16-1.32-.16-2 0-.68.07-1.35.16-2h4.68c.09.65.16 1.32.16 2 0 .68-.07 1.34-.16 2zm.25 5.56c.6-1.11 1.06-2.31 1.38-3.56h2.95c-.96 1.65-2.49 2.93-4.33 3.56zM16.36 14c.08-.66.14-1.32.14-2 0-.68-.06-1.34-.14-2h3.38c.16.64.26 1.31.26 2s-.1 1.36-.26 2h-3.38z"/>
        </svg>
        Languages Spoken
      </h3>
      <div class="flex flex-wrap gap-2">
        <% provider_profile.languages_array.each do |language| %>
          <span class="inline-flex items-center px-4 py-2 bg-indigo-100 text-indigo-800 rounded-full text-sm font-medium">
            <%= language %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</section>

