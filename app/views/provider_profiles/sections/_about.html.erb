<section id="about" class="bg-white rounded-2xl shadow-lg p-8">
  <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center">
    <svg class="w-8 h-8 mr-3 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
    </svg>
    About <%= @provider_profile.user.first_name %>
  </h2>

  <!-- Professional Bio -->
  <div class="prose max-w-none text-gray-700 leading-relaxed mb-8">
    <%= simple_format(@provider_profile.bio) %>
  </div>

  <!-- Professional Philosophy (if present) -->
  <% if @provider_profile.philosophy.present? %>
    <div class="mb-8 pb-8 border-b border-gray-200">
      <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
        </svg>
        Professional Philosophy
      </h3>
      <div class="prose max-w-none text-gray-700 bg-indigo-50 rounded-xl p-6 border-l-4 border-indigo-600">
        <%= simple_format(@provider_profile.philosophy) %>
      </div>
    </div>
  <% end %>

  <!-- Credentials & Qualifications -->
  <% if @provider_profile.credentials.present? %>
    <div class="mb-8 pb-8 border-b border-gray-200">
      <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
        </svg>
        Credentials & Qualifications
      </h3>
      <div class="flex flex-wrap gap-3">
        <% @provider_profile.credentials.split(',').each do |credential| %>
          <span class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-50 to-purple-50 text-indigo-700 rounded-lg font-medium text-sm border border-indigo-200 shadow-sm">
            <svg class="w-4 h-4 mr-2 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
            </svg>
            <%= credential.strip %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Education -->
  <% if @provider_profile.education.present? %>
    <div class="mb-8 pb-8 border-b border-gray-200">
      <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82zM12 3L1 9l11 6 9-4.91V17h2V9L12 3z"/>
        </svg>
        Education
      </h3>
      <div class="prose max-w-none text-gray-700">
        <%= simple_format(@provider_profile.education) %>
      </div>
    </div>
  <% end %>

  <!-- Certifications -->
  <% if @provider_profile.certifications.present? %>
    <div class="mb-8 pb-8 border-b border-gray-200">
      <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
        </svg>
        Certifications & Licenses
      </h3>
      <div class="prose max-w-none text-gray-700">
        <%= simple_format(@provider_profile.certifications) %>
      </div>
    </div>
  <% end %>

  <!-- Areas of Expertise -->
  <% if @provider_profile.areas_of_expertise.present? %>
    <div class="mb-8 pb-8 border-b border-gray-200">
      <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        Areas of Expertise
      </h3>
      <div class="flex flex-wrap gap-2">
        <% @provider_profile.areas_of_expertise_array.each do |area| %>
          <span class="px-4 py-2 bg-purple-50 text-purple-700 rounded-full text-sm font-medium border border-purple-200">
            <%= area %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Treatment Modalities -->
  <% if @provider_profile.treatment_modalities.present? %>
    <div class="mb-8 pb-8 border-b border-gray-200">
      <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
        </svg>
        Treatment Modalities
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <% @provider_profile.treatment_modalities_array.each do |modality| %>
          <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg border border-gray-200">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
            </svg>
            <span class="text-gray-700 font-medium text-sm"><%= modality %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Session Formats -->
  <% if @provider_profile.session_formats.present? %>
    <div class="mb-8 pb-8 border-b border-gray-200">
      <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-5 14H4v-4h11v4zm0-5H4V9h11v4zm5 5h-4V9h4v9z"/>
        </svg>
        Session Formats Available
      </h3>
      <div class="flex flex-wrap gap-3">
        <% @provider_profile.session_formats_array.each do |format| %>
          <span class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-700 rounded-lg font-medium text-sm border border-blue-200">
            <svg class="w-4 h-4 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17 10.5V7c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h12c.55 0 1-.45 1-1v-3.5l4 4v-11l-4 4z"/>
            </svg>
            <%= format %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Industries Served -->
  <% if @provider_profile.industries_served.present? %>
    <div class="mb-8 pb-8 border-b border-gray-200">
      <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"/>
        </svg>
        Industries Served
      </h3>
      <div class="flex flex-wrap gap-2">
        <% @provider_profile.industries_served_array.each do |industry| %>
          <span class="px-3 py-1.5 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium">
            <%= industry %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Languages -->
  <% if @provider_profile.languages.present? %>
    <div>
      <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zm6.93 6h-2.95c-.32-1.25-.78-2.45-1.38-3.56 1.84.63 3.37 1.91 4.33 3.56zM12 4.04c.83 1.2 1.48 2.53 1.91 3.96h-3.82c.43-1.43 1.08-2.76 1.91-3.96zM4.26 14C4.1 13.36 4 12.69 4 12s.1-1.36.26-2h3.38c-.08.66-.14 1.32-.14 2 0 .68.06 1.34.14 2H4.26zm.82 2h2.95c.32 1.25.78 2.45 1.38 3.56-1.84-.63-3.37-1.9-4.33-3.56zm2.95-8H5.08c.96-1.66 2.49-2.93 4.33-3.56C8.81 5.55 8.35 6.75 8.03 8zM12 19.96c-.83-1.2-1.48-2.53-1.91-3.96h3.82c-.43 1.43-1.08 2.76-1.91 3.96zM14.34 14H9.66c-.09-.66-.16-1.32-.16-2 0-.68.07-1.35.16-2h4.68c.09.65.16 1.32.16 2 0 .68-.07 1.34-.16 2zm.25 5.56c.6-1.11 1.06-2.31 1.38-3.56h2.95c-.96 1.65-2.49 2.93-4.33 3.56zM16.36 14c.08-.66.14-1.32.14-2 0-.68-.06-1.34-.14-2h3.38c.16.64.26 1.31.26 2s-.1 1.36-.26 2h-3.38z"/>
        </svg>
        Languages Spoken
      </h3>
      <div class="flex flex-wrap gap-2">
        <% @provider_profile.languages_array.each do |language| %>
          <span class="px-3 py-1.5 bg-green-50 text-green-700 rounded-lg text-sm font-medium border border-green-200">
            <%= language %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</section>

