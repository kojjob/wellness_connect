<div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
  <h3 class="text-lg font-bold text-gray-900 mb-4">Quick Stats</h3>

  <div class="space-y-4">
    <!-- Years of Experience -->
    <% if @provider_profile.years_of_experience.present? %>
      <div class="flex items-center gap-3">
        <div class="flex-shrink-0 w-10 h-10 bg-teal-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-teal-600" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
          </svg>
        </div>
        <div>
          <p class="text-sm text-gray-600">Experience</p>
          <p class="font-semibold text-gray-900"><%= @provider_profile.years_of_experience %> Years</p>
        </div>
      </div>
    <% end %>

    <!-- Rating -->
    <div class="flex items-center gap-3">
      <div class="flex-shrink-0 w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
        <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
        </svg>
      </div>
      <div>
        <p class="text-sm text-gray-600">Rating</p>
        <p class="font-semibold text-gray-900"><%= @provider_profile.display_rating %> / 5.0</p>
      </div>
    </div>

    <!-- Total Sessions (Placeholder) -->
    <div class="flex items-center gap-3">
      <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
        </svg>
      </div>
      <div>
        <p class="text-sm text-gray-600">Total Sessions</p>
        <p class="font-semibold text-gray-900">100+</p>
      </div>
    </div>

    <!-- Response Time (Placeholder) -->
    <div class="flex items-center gap-3">
      <div class="flex-shrink-0 w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
        <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
      </div>
      <div>
        <p class="text-sm text-gray-600">Response Time</p>
        <p class="font-semibold text-gray-900">Within 24 hours</p>
      </div>
    </div>

    <!-- Specialty -->
    <div class="flex items-center gap-3">
      <div class="flex-shrink-0 w-10 h-10 bg-teal-100 rounded-lg flex items-center justify-center">
        <svg class="w-5 h-5 text-teal-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
        </svg>
      </div>
      <div>
        <p class="text-sm text-gray-600">Specialty</p>
        <p class="font-semibold text-gray-900"><%= @provider_profile.specialty %></p>
      </div>
    </div>
  </div>

  <!-- Trust Badges -->
  <div class="mt-6 pt-6 border-t border-gray-200">
    <div class="grid grid-cols-2 gap-3">
      <div class="flex flex-col items-center p-3 bg-green-50 rounded-lg border border-green-200">
        <svg class="w-6 h-6 text-green-600 mb-1" fill="currentColor" viewBox="0 0 24 24">
          <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
        </svg>
        <span class="text-xs font-medium text-green-700 text-center">Verified</span>
      </div>
      <div class="flex flex-col items-center p-3 bg-teal-50 rounded-lg border border-teal-200">
        <svg class="w-6 h-6 text-teal-600 mb-1" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
        </svg>
        <span class="text-xs font-medium text-teal-700 text-center">Licensed</span>
      </div>
    </div>
  </div>
</div>
