<div class="bg-gradient-to-br from-indigo-600 to-purple-600 rounded-2xl shadow-lg p-6 text-white">
  <h3 class="text-xl font-bold mb-6">Quick Stats</h3>

  <div class="space-y-4">
    <!-- Total Reviews -->
    <div class="flex items-center justify-between p-4 bg-white/10 backdrop-blur-sm rounded-xl">
      <div class="flex items-center space-x-3">
        <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-bold"><%= provider_profile.total_reviews || 0 %></p>
          <p class="text-sm opacity-90">Reviews</p>
        </div>
      </div>
    </div>

    <!-- Years of Experience -->
    <% if provider_profile.years_of_experience.present? %>
      <div class="flex items-center justify-between p-4 bg-white/10 backdrop-blur-sm rounded-xl">
        <div class="flex items-center space-x-3">
          <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold"><%= provider_profile.years_of_experience %>+</p>
            <p class="text-sm opacity-90">Years Experience</p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Active Services -->
    <div class="flex items-center justify-between p-4 bg-white/10 backdrop-blur-sm rounded-xl">
      <div class="flex items-center space-x-3">
        <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-bold"><%= provider_profile.services.where(is_active: true).count %></p>
          <p class="text-sm opacity-90">Services Offered</p>
        </div>
      </div>
    </div>

    <!-- Response Time (Mock data) -->
    <div class="flex items-center justify-between p-4 bg-white/10 backdrop-blur-sm rounded-xl">
      <div class="flex items-center space-x-3">
        <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-bold">&lt; 24h</p>
          <p class="text-sm opacity-90">Response Time</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Trust Badges -->
  <div class="mt-6 pt-6 border-t border-white/20">
    <div class="grid grid-cols-2 gap-3">
      <div class="text-center p-3 bg-white/10 backdrop-blur-sm rounded-lg">
        <svg class="w-8 h-8 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
        </svg>
        <p class="text-xs font-medium">Verified</p>
      </div>
      <div class="text-center p-3 bg-white/10 backdrop-blur-sm rounded-lg">
        <svg class="w-8 h-8 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
        </svg>
        <p class="text-xs font-medium">Secure</p>
      </div>
    </div>
  </div>
</div>

