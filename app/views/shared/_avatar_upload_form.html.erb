<%
  # Avatar Upload Form Component
  # Usage: <%= render "shared/avatar_upload_form", form: f, user: @user %>
  #
  # Parameters:
  # - form: Form builder object (required)
  # - user: User object (required)
%>

<div class="space-y-4" data-controller="avatar-upload">
  <div class="flex items-start space-x-6">
    <!-- Current Avatar Preview -->
    <div class="flex-shrink-0">
      <div class="relative" data-avatar-upload-target="preview">
        <%= render "shared/user_avatar",
              user: user,
              size: :xlarge,
              shape: :circle,
              show_ring: true,
              additional_classes: "shadow-xl" %>
        
        <!-- Remove avatar button (only show if avatar exists) -->
        <% if user.avatar.attached? %>
          <%= button_to "#",
                data: {
                  action: "click->avatar-upload#removeAvatar",
                  turbo: false
                },
                class: "absolute -bottom-2 -right-2 p-2 rounded-full bg-red-500 hover:bg-red-600 text-white shadow-lg transition-all duration-200 hover:scale-110",
                title: "Remove avatar" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Upload Controls -->
    <div class="flex-1 space-y-4">
      <div>
        <label class="block text-sm font-semibold text-gray-900 mb-2">
          Profile Picture
        </label>
        <p class="text-sm text-gray-600 mb-4">
          Upload a profile picture to personalize your account. This will be displayed across the application.
        </p>
      </div>

      <!-- File Input -->
      <div class="flex items-center space-x-4">
        <%= form.file_field :avatar,
              accept: "image/jpeg,image/png,image/webp",
              data: {
                action: "change->avatar-upload#previewAvatar",
                avatar_upload_target: "input"
              },
              class: "hidden",
              id: "avatar_upload_input" %>
        
        <label for="avatar_upload_input"
               class="cursor-pointer inline-flex items-center px-6 py-3 rounded-xl text-sm font-semibold text-white bg-gradient-to-r from-teal-600 to-teal-700 hover:from-teal-700 hover:to-teal-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          Choose Image
        </label>

        <% if user.avatar.attached? %>
          <%= form.check_box :remove_avatar,
                { data: { avatar_upload_target: "removeCheckbox" }, class: "hidden" },
                "1", "0" %>
          <button type="button"
                  data-action="click->avatar-upload#toggleRemove"
                  class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-medium text-red-700 bg-red-50 hover:bg-red-100 border border-red-200 hover:border-red-300 transition-all duration-200">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Remove Current
          </button>
        <% end %>
      </div>

      <!-- File Requirements -->
      <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
        <h4 class="text-xs font-semibold text-gray-700 mb-2 flex items-center">
          <svg class="w-4 h-4 mr-1 text-teal-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          Image Requirements
        </h4>
        <ul class="text-xs text-gray-600 space-y-1">
          <li class="flex items-center">
            <svg class="w-3 h-3 mr-2 text-teal-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Formats: JPEG, PNG, or WebP
          </li>
          <li class="flex items-center">
            <svg class="w-3 h-3 mr-2 text-teal-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Maximum size: 5MB
          </li>
          <li class="flex items-center">
            <svg class="w-3 h-3 mr-2 text-teal-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Recommended: Square images for best results
          </li>
        </ul>
      </div>

      <!-- Validation Errors -->
      <% if user.errors[:avatar].any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-red-600 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <div class="flex-1">
              <h4 class="text-sm font-semibold text-red-800 mb-1">Avatar Upload Error</h4>
              <ul class="text-sm text-red-700 space-y-1">
                <% user.errors[:avatar].each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Stimulus Controller for Avatar Upload -->
<script>
  if (!window.Stimulus.controllers.has("avatar-upload")) {
    Stimulus.register("avatar-upload", class extends Stimulus.Controller {
      static targets = ["preview", "input", "removeCheckbox"]

      previewAvatar(event) {
        const file = event.target.files[0]
        if (!file) return

        // Validate file type
        const validTypes = ['image/jpeg', 'image/png', 'image/webp']
        if (!validTypes.includes(file.type)) {
          alert('Please select a JPEG, PNG, or WebP image')
          event.target.value = ''
          return
        }

        // Validate file size (5MB)
        if (file.size > 5 * 1024 * 1024) {
          alert('Image size must be less than 5MB')
          event.target.value = ''
          return
        }

        // Preview the image
        const reader = new FileReader()
        reader.onload = (e) => {
          // Find the avatar container and update it
          const avatarContainer = this.previewTarget.querySelector('[class*="h-24 w-24"]')
          if (avatarContainer) {
            avatarContainer.innerHTML = `
              <img src="${e.target.result}" 
                   alt="Avatar preview" 
                   class="h-full w-full object-cover rounded-full">
            `
          }
        }
        reader.readAsDataURL(file)

        // Uncheck remove checkbox if it exists
        if (this.hasRemoveCheckboxTarget) {
          this.removeCheckboxTarget.checked = false
        }
      }

      toggleRemove(event) {
        event.preventDefault()
        if (this.hasRemoveCheckboxTarget) {
          this.removeCheckboxTarget.checked = !this.removeCheckboxTarget.checked
          
          if (this.removeCheckboxTarget.checked) {
            event.target.textContent = 'Undo Remove'
            event.target.classList.remove('bg-red-50', 'hover:bg-red-100', 'text-red-700')
            event.target.classList.add('bg-yellow-50', 'hover:bg-yellow-100', 'text-yellow-700')
          } else {
            event.target.textContent = 'Remove Current'
            event.target.classList.remove('bg-yellow-50', 'hover:bg-yellow-100', 'text-yellow-700')
            event.target.classList.add('bg-red-50', 'hover:bg-red-100', 'text-red-700')
          }
        }
      }

      removeAvatar(event) {
        event.preventDefault()
        if (confirm('Are you sure you want to remove your avatar?')) {
          if (this.hasRemoveCheckboxTarget) {
            this.removeCheckboxTarget.checked = true
            this.element.closest('form').requestSubmit()
          }
        }
      }
    })
  }
</script>

