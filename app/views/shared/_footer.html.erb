<footer class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-teal-900 text-white mt-auto overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-teal-500/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-gray-700/10 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info -->
      <div class="md:col-span-2 lg:col-span-1">
        <div class="flex items-center space-x-2 mb-4">
          <svg class="h-8 w-8 text-teal-400" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
          </svg>
          <span class="text-xl font-bold bg-gradient-to-r from-teal-400 to-white bg-clip-text text-transparent">WellnessConnect</span>
        </div>
        <p class="text-sm text-gray-300 mb-6 leading-relaxed">
          Connecting patients with trusted healthcare providers for a healthier tomorrow. Your journey to wellness starts here.
        </p>
        <!-- Social Media Links -->
        <div class="flex space-x-3">
          <a href="#" class="group p-2 bg-white/5 hover:bg-teal-500/20 rounded-lg transition-all duration-200" aria-label="Facebook">
            <svg class="h-5 w-5 text-gray-300 group-hover:text-teal-400 transition-colors" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 2.04C6.5 2.04 2 6.53 2 12.06C2 17.06 5.66 21.21 10.44 21.96V14.96H7.9V12.06H10.44V9.85C10.44 7.34 11.93 5.96 14.22 5.96C15.31 5.96 16.45 6.15 16.45 6.15V8.62H15.19C13.95 8.62 13.56 9.39 13.56 10.18V12.06H16.34L15.89 14.96H13.56V21.96A10 10 0 0 0 22 12.06C22 6.53 17.5 2.04 12 2.04Z"/>
            </svg>
          </a>
          <a href="#" class="group p-2 bg-white/5 hover:bg-teal-500/20 rounded-lg transition-all duration-200" aria-label="Twitter">
            <svg class="h-5 w-5 text-gray-300 group-hover:text-teal-400 transition-colors" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M22.46 6c-.85.38-1.78.64-2.75.76 1-.6 1.76-1.55 2.12-2.68-.93.55-1.96.95-3.06 1.17-.88-.94-2.13-1.53-3.51-1.53-2.66 0-4.81 2.16-4.81 4.81 0 .38.04.75.13 1.10-4-.2-7.54-2.12-9.91-5.04-.42.72-.66 1.55-.66 2.44 0 1.67.85 3.14 2.14 4-.79-.03-1.53-.24-2.18-.6v.06c0 2.33 1.66 4.28 3.86 4.72-.40.11-.83.17-1.27.17-.31 0-.62-.03-.92-.08.62 1.94 2.42 3.35 4.55 3.39-1.67 1.31-3.77 2.09-6.05 2.09-.39 0-.78-.02-1.17-.07 2.18 1.4 4.77 2.21 7.55 2.21 9.06 0 14.01-7.5 14.01-14.01 0-.21 0-.42-.02-.63.96-.69 1.8-1.56 2.46-2.55z"/>
            </svg>
          </a>
          <a href="#" class="group p-2 bg-white/5 hover:bg-teal-500/20 rounded-lg transition-all duration-200" aria-label="LinkedIn">
            <svg class="h-5 w-5 text-gray-300 group-hover:text-teal-400 transition-colors" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/>
            </svg>
          </a>
          <a href="#" class="group p-2 bg-white/5 hover:bg-teal-500/20 rounded-lg transition-all duration-200" aria-label="Instagram">
            <svg class="h-5 w-5 text-gray-300 group-hover:text-teal-400 transition-colors" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4H7.6m9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8 1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5 5 5 0 0 1-5 5 5 5 0 0 1-5-5 5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3 3 3 0 0 0 3 3 3 3 0 0 0 3-3 3 3 0 0 0-3-3z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold tracking-wider uppercase mb-4 text-teal-200">
          Quick Links
        </h3>
        <ul class="space-y-3">
          <li>
            <%= link_to providers_path, class: "text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200 flex items-center group" do %>
              <svg class="w-4 h-4 mr-2 opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
              <span>Browse Providers</span>
            <% end %>
          </li>
          <li>
            <%= link_to about_path, class: "text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200 flex items-center group" do %>
              <svg class="w-4 h-4 mr-2 opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
              <span>About Us</span>
            <% end %>
          </li>
          <li>
            <%= link_to contact_path, class: "text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200 flex items-center group" do %>
              <svg class="w-4 h-4 mr-2 opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
              <span>Contact</span>
            <% end %>
          </li>
          <% if user_signed_in? %>
            <li>
              <%= link_to dashboard_path, class: "text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200 flex items-center group" do %>
                <svg class="w-4 h-4 mr-2 opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
                <span>My Dashboard</span>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_session_path, class: "text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200 flex items-center group" do %>
                <svg class="w-4 h-4 mr-2 opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
                <span>Sign In</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path, class: "text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200 flex items-center group" do %>
                <svg class="w-4 h-4 mr-2 opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
                <span>Sign Up</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Healthcare Services -->
      <div>
        <h3 class="text-sm font-semibold tracking-wider uppercase mb-4 text-teal-200">
          Healthcare Services
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200">Mental Health</a>
          </li>
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200">Wellness & Nutrition</a>
          </li>
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200">Primary Care</a>
          </li>
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200">Specialty Care</a>
          </li>
          <li>
            <%= link_to "For Providers", become_provider_path, class: "text-sm text-teal-400 hover:text-teal-300 font-semibold transition-colors duration-200" %>
          </li>
        </ul>
      </div>

      <!-- Resources & Legal -->
      <div>
        <h3 class="text-sm font-semibold tracking-wider uppercase mb-4 text-teal-200">
          Resources & Legal
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200">Help Center</a>
          </li>
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200">Privacy Policy</a>
          </li>
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200">Terms of Service</a>
          </li>
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200">HIPAA Compliance</a>
          </li>
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-teal-400 transition-colors duration-200">FAQ</a>
          </li>
        </ul>

        <!-- Trust Badges -->
        <div class="mt-6 pt-6 border-t border-gray-700">
          <div class="flex flex-wrap gap-3">
            <div class="flex items-center gap-2 text-xs text-gray-400">
              <svg class="w-4 h-4 text-teal-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
              </svg>
              <span>HIPAA Compliant</span>
            </div>
            <div class="flex items-center gap-2 text-xs text-gray-400">
              <svg class="w-4 h-4 text-teal-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"/>
              </svg>
              <span>256-bit SSL</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="mt-12 pt-8 border-t border-gray-700">
      <div class="max-w-md mx-auto text-center">
        <h3 class="text-lg font-bold text-white mb-2">Stay Updated</h3>
        <p class="text-sm text-gray-300 mb-4">Get healthcare tips and platform updates delivered to your inbox.</p>
        <form class="flex gap-2">
          <input
            type="email"
            placeholder="Enter your email"
            class="flex-1 px-4 py-2 bg-white/10 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all duration-200"
            aria-label="Email address">
          <button
            type="submit"
            class="px-6 py-2 bg-gradient-to-r from-teal-600 to-teal-500 hover:from-teal-700 hover:to-teal-600 text-white font-semibold rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl">
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-700">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-sm text-gray-400">
          Â© <%= Time.current.year %> WellnessConnect. All rights reserved.
        </div>
        <div class="flex items-center gap-2 text-xs text-gray-400">
          <span>Made with</span>
          <svg class="w-4 h-4 text-teal-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"/>
          </svg>
          <span>for better healthcare</span>
        </div>
        <div class="flex gap-4 text-sm">
          <a href="#" class="text-gray-400 hover:text-teal-400 transition-colors duration-200">Sitemap</a>
          <a href="#" class="text-gray-400 hover:text-teal-400 transition-colors duration-200">Accessibility</a>
        </div>
      </div>
    </div>
  </div>
</footer>
