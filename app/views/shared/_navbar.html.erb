            <%= link_to "My Dashboard", provider_profile_path(current_user.provider_profile),
                data: { action: "click->navbar#handleLinkClick" },
                class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 transition" %>
          <% elsif current_user.provider? %>
            <%= link_to "Create Profile", new_provider_profile_path,
                data: { action: "click->navbar#handleLinkClick" },
                class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 transition" %>
          <% else %>
            <%= link_to "My Dashboard", dashboard_path,
                data: { action: "click->navbar#handleLinkClick" },
                class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 transition" %>
          <% end %>

          <%= button_to "Sign Out", destroy_user_session_path,
              method: :delete,
              class: "block w-full text-left px-3 py-2 rounded-md text-base font-medium text-red-600 hover:bg-red-50 transition" %>
        </div>
      </div>
    <% else %>
      <!-- Guest buttons for mobile -->
      <div class="pt-4 pb-3 border-t border-gray-200 px-2 space-y-2">
        <%= link_to "Sign In", new_user_session_path,
            data: { action: "click->navbar#handleLinkClick" },
            class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 transition text-center" %>
        <%= link_to "Get Started", new_user_registration_path,
            data: { action: "click->navbar#handleLinkClick" },
            class: "block px-3 py-2 rounded-md text-base font-semibold bg-gradient-to-r from-indigo-600 to-purple-600 text-white hover:from-indigo-700 hover:to-purple-700 transition text-center" %>
      </div>
    <% end %>
