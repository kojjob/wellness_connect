<%= form_with(model: [ conversation, message ],
              url: conversation_messages_path(conversation),
              method: :post,
              data: { controller: "message-form", action: "turbo:submit-end->message-form#clearForm" },
              class: "relative") do |form| %>

  <%# Hidden field for message type (default to text) %>
  <%= form.hidden_field :message_type, value: "text" %>

  <div class="flex items-end gap-3">
    <div class="flex-1">
      <div class="rounded-2xl bg-white border border-gray-200 focus-within:border-emerald-500 focus-within:ring-2 focus-within:ring-emerald-100">
        <%= form.text_area :content,
              placeholder: "Type a messageâ€¦",
              rows: 1,
              required: true,
              data: {
                controller: "autosize",
                action: "input->autosize#resize keydown->message-form#handleKeydown"
              },
              class: "block w-full px-4 py-3 border-0 bg-transparent text-gray-900 placeholder-gray-500 focus:ring-0 sm:text-sm resize-none rounded-2xl max-h-32 overflow-y-auto" %>

      <%# Display validation errors if any %>
      <% if message.errors[:content].any? %>
        <div class="mt-2 flex items-center text-sm text-red-600">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <%= message.errors[:content].first %>
        </div>
      <% end %>
    </div>

    <div class="shrink-0">
      <%= form.submit "Send",
            data: { disable_with: "Sending..." },
            class: "inline-flex items-center justify-center px-5 py-3 rounded-xl text-sm font-semibold text-white bg-emerald-500 hover:bg-emerald-600 focus:outline-none focus:ring-2 focus:ring-emerald-200 disabled:opacity-50 disabled:cursor-not-allowed" %>
    </div>
  </div>
<% end %>
