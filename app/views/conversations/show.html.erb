<%
  other_user = current_user.patient? ? @conversation.provider : @conversation.patient
  is_provider = other_user.provider?
%>

<div class="min-h-screen bg-gray-50">
  <div class="flex flex-col min-h-screen max-w-5xl mx-auto">
    <%# Header styled like Home hero (dark gradient + overlay) %>
    <header class="sticky top-0 z-10">
      <div class="relative overflow-hidden bg-linear-to-br from-gray-900 via-gray-800 to-indigo-900">
        <div class="absolute inset-0 bg-linear-to-r from-gray-900/95 via-gray-900/80 to-transparent" aria-hidden="true"></div>

        <div class="relative px-4 sm:px-6 lg:px-8 py-4">
          <div class="flex items-center justify-between gap-3">
            <div class="flex items-center gap-4 flex-1 min-w-0">
              <%= link_to conversations_path,
                  class: "shrink-0 inline-flex items-center justify-center h-10 w-10 rounded-lg bg-white/10 hover:bg-white/20 border border-white/20 text-white transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
              <% end %>

              <div class="shrink-0 [&>div]:bg-white/10 [&>div]:backdrop-blur-sm [&>div]:ring-white/30">
                <%= render "shared/user_avatar",
                      user: other_user,
                      size: :medium,
                      shape: :rounded,
                      show_ring: true,
                      additional_classes: "shadow-lg" %>
              </div>

              <div class="min-w-0">
                <h1 class="text-lg sm:text-xl font-bold text-white truncate">
                  <%= other_user.full_name %>
                </h1>
                <div class="mt-0.5 flex flex-wrap items-center gap-x-3 gap-y-1 text-xs text-gray-300">
                  <% if is_provider && other_user.provider_profile&.specialty.present? %>
                    <span class="inline-flex items-center">
                      <%= other_user.provider_profile.specialty %>
                    </span>
                  <% end %>
                  <% if @conversation.appointment.present? %>
                    <span class="inline-flex items-center">
                      <%= @conversation.appointment.start_time.strftime("%b %d, %I:%M %p") %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="shrink-0">
              <%= button_to archive_conversation_path(@conversation),
                    method: :patch,
                    class: "inline-flex items-center px-3 py-2 rounded-lg text-sm font-semibold text-white bg-white/10 hover:bg-white/20 border border-white/20 transition-colors",
                    data: { turbo_method: :patch, turbo_confirm: "Archive this conversation?" } do %>
                <svg class="w-4 h-4 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                </svg>
                <span class="hidden sm:inline">Archive</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main class="flex-1 min-h-0 overflow-y-auto px-4 sm:px-6 lg:px-8 py-6"
          id="conversation_messages"
          data-controller="scroll-to-bottom">
      <% if @messages.any? %>
        <div class="space-y-6 max-w-4xl mx-auto">
          <%
            current_date = nil
            @messages.each do |message|
              message_date = message.created_at.to_date
              show_date_separator = current_date != message_date
              current_date = message_date
          %>
            <!-- Date separator -->
            <% if show_date_separator %>
              <div class="flex items-center justify-center my-8">
                <div class="px-4 py-2 rounded-full bg-white shadow-sm border border-gray-200">
                  <p class="text-xs font-semibold text-gray-600">
                    <%= message_date == Date.today ? "Today" : message_date == Date.yesterday ? "Yesterday" : message_date.strftime("%B %d, %Y") %>
                  </p>
                </div>
              </div>
            <% end %>

            <%= render "messages/message", message: message, current_user: current_user %>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @messages.respond_to?(:total_pages) && @messages.total_pages > 1 %>
          <div class="mt-8 text-center">
            <%= link_to "Load earlier messages", conversation_path(@conversation, page: @messages.next_page),
                  class: "inline-flex items-center px-6 py-3 rounded-xl text-sm font-semibold text-teal-700 bg-white hover:bg-gray-50 shadow-lg hover:shadow-xl transition-all duration-200 border border-gray-200" if @messages.next_page %>
          </div>
        <% end %>
      <% else %>
        <div class="flex items-center justify-center h-full">
          <div class="text-center max-w-md bg-white border border-gray-200 rounded-2xl p-8 shadow-sm">
            <h3 class="text-lg font-semibold text-gray-900">Start the conversation</h3>
            <p class="mt-2 text-sm text-gray-600">Send a message to <%= other_user.first_name %> to begin.</p>
          </div>
        </div>
      <% end %>
    </main>

    <div class="sticky bottom-0 bg-white border-t border-gray-200">
      <div class="px-4 sm:px-6 lg:px-8 py-4 max-w-4xl mx-auto">
        <%= render "messages/form", conversation: @conversation, message: @new_message %>
      </div>
    </div>
  </div>
</div>
