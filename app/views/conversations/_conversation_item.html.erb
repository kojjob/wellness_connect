<%
  # Determine the other participant based on current user's role
  other_user = current_user.patient? ? conversation.provider : conversation.patient
  unread_count = current_user.patient? ? conversation.patient_unread_count : conversation.provider_unread_count
  last_message = conversation.messages.ordered.last
  archived ||= false
%>

<div class="group bg-white rounded-2xl border border-gray-200 hover:bg-gray-50 transition-colors overflow-hidden <%= 'opacity-60' if archived %>">
  <%= link_to conversation_path(conversation), class: "block p-5" do %>
    <div class="flex items-start space-x-4">
      <%# Enhanced Avatar with unified component %>
      <div class="shrink-0 relative">
        <%= render "shared/user_avatar",
              user: other_user,
              size: :large,
              shape: :rounded,
              show_ring: true,
              additional_classes: "ring-teal-100 group-hover:ring-teal-200 transition-colors" %>
        <% if unread_count > 0 %>
          <span class="absolute -top-1 -right-1 h-6 w-6 rounded-full bg-red-500 text-white text-xs font-bold flex items-center justify-center ring-2 ring-white shadow-lg">
            <%= [unread_count, 9].min %>
          </span>
        <% end %>
      </div>

      <%# Conversation details %>
      <div class="flex-1 min-w-0">
        <div class="flex items-start justify-between mb-2">
          <div class="flex-1">
            <%# Participant name with enhanced styling %>
            <h3 class="text-base font-bold text-gray-900 truncate group-hover:text-teal-600 transition-colors duration-200">
              <%= other_user.full_name %>
            </h3>
            <% if other_user.provider? && other_user.provider_profile&.specialty %>
              <p class="text-xs text-gray-500 mt-0.5 flex items-center">
                <svg class="h-3 w-3 mr-1 text-teal-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <%= other_user.provider_profile.specialty %>
              </p>
            <% end %>
          </div>

          <%# Timestamp with icon %>
          <div class="shrink-0 text-right ml-4">
            <div class="flex items-center text-xs text-gray-500">
              <svg class="h-3.5 w-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <%= time_ago_in_words(conversation.last_message_at || conversation.created_at) %> ago
            </div>
          </div>
        </div>

        <%# Appointment context if applicable %>
        <% if conversation.appointment.present? %>
          <div class="mb-2 inline-flex items-center px-2.5 py-1 rounded-lg bg-teal-50 border border-teal-200">
            <svg class="h-3.5 w-3.5 mr-1.5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span class="text-xs font-medium text-teal-700">
              <%= conversation.appointment.start_time.strftime("%b %d, %Y at %I:%M %p") %>
            </span>
          </div>
        <% end %>

        <%# Last message preview with better styling %>
        <% if last_message.present? %>
          <div class="mt-2 flex items-start">
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-600 truncate">
                <% if last_message.sender == current_user %>
                  <span class="font-semibold text-gray-700">You:</span>
                <% end %>
                <% begin %>
                  <%= truncate(last_message.content, length: 100) %>
                <% rescue ActiveRecord::Encryption::Errors::Decryption %>
                  <span class="italic text-gray-400">[Message content unavailable]</span>
                <% end %>
              </p>
            </div>
            <div class="shrink-0 ml-3">
              <svg class="h-5 w-5 text-gray-400 group-hover:text-teal-500 group-hover:translate-x-1 transition-all duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        <% else %>
          <div class="mt-2 flex items-center text-sm text-gray-400 italic">
            <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            No messages yet
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Action buttons with enhanced styling %>
  <div class="px-5 py-3 border-t border-gray-100 flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <% if archived %>
        <%= button_to unarchive_conversation_path(conversation),
              method: :patch,
              class: "inline-flex items-center text-sm text-teal-600 hover:text-teal-700 font-medium transition-colors duration-200",
              data: { turbo_method: :patch } do %>
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
          </svg>
          Unarchive
        <% end %>
      <% else %>
        <%= button_to archive_conversation_path(conversation),
              method: :patch,
              class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700 font-medium transition-colors duration-200",
              data: { turbo_method: :patch } do %>
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
          </svg>
          Archive
        <% end %>
      <% end %>
    </div>

    <% if unread_count > 0 %>
      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">
        <%= unread_count %> unread
      </span>
    <% end %>
  </div>
</div>
