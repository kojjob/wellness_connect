<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="bg-white rounded-xl shadow-lg p-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Write a Review</h1>
      <p class="text-gray-600">Share your experience with <%= @provider_profile.full_name %></p>
    </div>

    <%= form_with(model: [ @provider_profile, @review ], class: "space-y-6") do |f| %>
      <!-- Error messages -->
      <% if @review.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-md">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                There <%= @review.errors.count == 1 ? 'was' : 'were' %> <%= pluralize(@review.errors.count, "error") %> with your submission:
              </h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @review.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Rating -->
      <div>
        <%= f.label :rating, "Your Rating", class: "block text-sm font-semibold text-gray-900 mb-2" %>
        <div class="flex gap-2" data-controller="rating-selector">
          <% 5.times do |i| %>
            <label class="cursor-pointer">
              <%= f.radio_button :rating, i + 1, class: "sr-only peer", data: { action: "change->rating-selector#update", rating_selector_target: "input" } %>
              <svg class="w-10 h-10 text-gray-300 peer-checked:text-yellow-400 hover:text-yellow-300 transition-colors" data-rating-selector-target="star" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            </label>
          <% end %>
        </div>
        <p class="mt-2 text-sm text-gray-500">Click to select your rating</p>
      </div>

      <!-- Comment -->
      <div>
        <%= f.label :comment, "Your Review (Optional)", class: "block text-sm font-semibold text-gray-900 mb-2" %>
        <%= f.text_area :comment,
          rows: 6,
          placeholder: "Share details of your experience...",
          maxlength: 1000,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none" %>
        <p class="mt-2 text-sm text-gray-500">Maximum 1000 characters</p>
      </div>

      <!-- Actions -->
      <div class="flex gap-4 pt-4">
        <%= f.submit "Submit Review",
          class: "flex-1 bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-indigo-700 transition-colors focus:ring-4 focus:ring-indigo-300" %>
        <%= link_to "Cancel",
          @provider_profile,
          class: "flex-1 bg-gray-200 text-gray-700 font-semibold py-3 px-6 rounded-lg hover:bg-gray-300 transition-colors text-center" %>
      </div>
    <% end %>
  </div>
</div>
